                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12 form-group">
                    <label asp-for="Promotion" class="control-label"></label>
                    <textarea asp-for="Promotion" class="form-control" rows="2" ></textarea>
                    <span asp-validation-for="Promotion" class="text-danger"></span>
                </div>

            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="Room" class="control-label"></label>
                    <input asp-for="Room" class="form-control" />
                    <span asp-validation-for="Room" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="OpenDate" class="control-label"></label>
                    <input asp-for="OpenDate" class="form-control" />
                    <span asp-validation-for="OpenDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="CloseDate" class="control-label"></label>
                    <input asp-for="CloseDate" class="form-control" />
                    <span asp-validation-for="CloseDate" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12 form-group">
                    <label asp-for="Description" class="control-label">Details</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12 form-group">
                    <label asp-for="LinkReferred" class="control-label">link</label>
                    <input asp-for="LinkReferred" class="form-control" />
                    <span asp-validation-for="LinkReferred" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="checkbox" asp-for="Active" /> Active
                    <span asp-validation-for="Active" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <hr />
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

