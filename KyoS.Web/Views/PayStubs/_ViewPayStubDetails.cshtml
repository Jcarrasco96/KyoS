@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Notes out paystub</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                Employee
                            </th>
                            <th class="col-md-2">
                                Client
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Service
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Date Bill
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Payment
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Unit
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Amount
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(n => n.Facilitator.Name).ThenBy(m => m.Workday.Date))
                        {
                            <tr style="color: darkgrey;">
                                <td>
                                    @item.Facilitator.Name
                                </td>
                                 <td>
                                    @item.Client.Name
                                </td>
                                <td  align="center">
                                    @item.Workday.Date.ToShortDateString()
                                </td>
                                <td align="center">
                                    @item.IndividualNote.Status
                                </td>
                                <td align="center">
                                    @item.BilledDate
                                </td>
                                <td align="center">
                                    @item.PaymentDate
                                </td>
                                <td align="center">
                                    @item.IndividualNote.RealUnits
                                </td>
                                <td align="center">
                                    @(item.IndividualNote.RealUnits * item.Facilitator.Money / 4)
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



