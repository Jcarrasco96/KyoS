@model IEnumerable<KyoS.Web.Models.DocumentsByPaystubsDocumentAssisstantViewModel>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Notes out paystub</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                Employee
                            </th>
                            <th class="col-md-2">
                                Client
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Doc.
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Service
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Date Bill
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Payment
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Unit
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Amount
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(n => n.EmployeeName).ThenBy(m => m.DateBill))
                        {
                            <tr style="color: darkgrey;">
                                <td>
                                    @item.EmployeeName
                                </td>
                                <td>
                                    @item.ClientName
                                </td>
                                <td align="center">
                                    @item.Document.ToString()
                                </td>
                                <td  align="center">
                                    @item.DateService.ToShortDateString()
                                </td>
                                <td align="center">
                                    @item.Status
                                </td>
                                <td align="center">
                                    @item.DateBill
                                </td>
                                <td align="center">
                                    @item.DatePayment
                                </td>
                                <td align="center">
                                    @item.Units
                                </td>
                                <td align="center">
                                    @(item.Units * item.Money / 4)
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



