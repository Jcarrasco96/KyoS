<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateSupervisionTime" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxTCMSupervicionTime(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedOn" />
