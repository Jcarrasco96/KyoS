@model IEnumerable<KyoS.Web.Data.Entities.TCMsupervisorEntity>
@{
    ViewData["Title"] = "TCMsupervisor";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">TCMsupervisor</li>
    </ul><!--.breadcrumb-->
</div>

<p>
    <a onclick="showInPopup('@Url.Action("Create", "TCMsupervisors", null, Context.Request.Scheme)','Create TCM Supervisor')" class="btn btn-primary" title="Create TCM Supervisors"><i class="glyphicon glyphicon-plus"></i>Create TCM Supervisors</a>
</p>

<div class="row">
    <div id="view-tcmSupervisor">
        @await Html.PartialAsync("_ViewTCMsupervisors", Model.OrderByDescending(d => d.Name).ToList())
    </div>
</div>

<partial name="_DeleteDialog" />
<partial name="_ModalPopup" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                         $(document).ready(function () {
                             $('#MyTable').DataTable({
                               "order": [[0, "asc"]],
                                "pageLength": 100
                            });

                              // Delete item
                            var item_to_delete;
    
                            $('.deleteItem').click((e) => {
                              item_to_delete = e.currentTarget.dataset.id;
                            });
                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "TCMsupervisors")";
                                window.location.href = url + '/' + item_to_delete;
                            });
                        });
    </script>
}

