@model IEnumerable<KyoS.Web.Data.Entities.TCMSupervisorEntity>

@if (Model != null)
{ 
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM supervisor
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Supervisors</h3>
            </div>
            <div class="panel-body" id="view-tcmSupervisor">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-5" align="center">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-2" align="center">
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th class="col-md-2" align="center">
                                Clinic
                            </th>
                            <th class="col-md-1" align="center">
                                Status
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Clinic.Name)
                                </td>
                                <td>
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    <a onclick="showInPopup('@Url.Action("Edit", "TCMSupervisors", new { id = item.Id }, Context.Request.Scheme)','Edit TCM Supervisor')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>   

}

