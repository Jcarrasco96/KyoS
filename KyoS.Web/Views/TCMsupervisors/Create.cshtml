@model KyoS.Web.Models.TCMSupervisorViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTCMSupervisor(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="IdClinic" />
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>&nbsp;*
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="Code" class="control-label">Credentials</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="IdStatus" class="control-label"></label>&nbsp;*
                    <select asp-for="IdStatus" asp-items="Model.StatusList" class="form-control"></select>
                    <span asp-validation-for="IdStatus" class="text-danger"></span>
                </div>
            </div>
            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="RaterEducation" class="control-label"></label>
                    <input asp-for="RaterEducation" class="form-control" />
                    <span asp-validation-for="RaterEducation" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="RaterFMHCertification" class="control-label"></label>
                    <input asp-for="RaterFMHCertification" class="form-control" />
                    <span asp-validation-for="RaterFMHCertification" class="text-danger"></span>
                </div>
            </div>
            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="IdUser" class="control-label"></label>
                    <select asp-for="IdUser" asp-items="Model.UserList" class="form-control"></select>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="SignatureFile" class="control-label"></label>
                    <input asp-for="SignatureFile" type="file" class="form-control" />
                    <span asp-validation-for="SignatureFile" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">                
                <hr />                
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

