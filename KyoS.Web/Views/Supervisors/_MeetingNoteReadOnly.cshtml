@model KyoS.Web.Models.MeetingNotesViewModel
<div class="col-md-push-12">
    <div class="form-group col-md-3">
        <label asp-for="Title" class="control-label"></label>
        <input asp-for="Title" class="form-control" disabled/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" disabled/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-12">
        <label asp-for="PlanNote" class="control-label"></label>
        <textarea asp-for="PlanNote" class="form-control" rows="2" disabled></textarea>
        <span asp-validation-for="PlanNote" class="text-danger"></span>
    </div>
</div>
<div>
    <div class="col-md-12">
        <div class="form-group">
            <label class="control-label">Facilitators</label>
            @Html.ListBox("facilitators", ViewData["facilitators"] as MultiSelectList, new { @class = "chosen-select", @style = "width:100%;" })
        </div>
    </div>
</div>
<div class="col-md-12">
    <hr />
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-12">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4" disabled></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>    
</div>