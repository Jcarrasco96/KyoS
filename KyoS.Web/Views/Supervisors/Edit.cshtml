@model KyoS.Web.Models.SupervisorViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Supervisors", "Index", "Supervisors")
        </li>
        <li class="active">Edit</li>
    </ul><!--.breadcrumb-->
</div>
<h4>Edit supervisor</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SignaturePath" />
            <partial name="_Supervisors" />
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(Model.SignaturePath))
                {
                    <img src="@Url.Content(Model.SignaturePath)" alt="Image" style="width:200px;height:100px;max-width: 100%; height: auto;" />
                }
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
