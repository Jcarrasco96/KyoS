@model IEnumerable<KyoS.Web.Models.Users_in_Role_ViewModel>
@{
    ViewData["Title"] = "Users";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Users</li>
    </ul><!--.breadcrumb-->
</div>

<dl class="dl-horizontal">
    <dt>Password:</dt>
    <dd>
        <a onclick="showInPopup('@Url.Action("ChangePassword","Account",null,Context.Request.Scheme)','Change my password')">[ Change my password ]</a>
        &nbsp;
        @if (User.IsInRole("Admin"))
        {
            <a onclick="showInPopup('@Url.Action("ResetPassword","Account",null,Context.Request.Scheme)','Reset password for any user')">[ Reset password for any user ]</a>
        }
    </dd>
</dl>
<hr />

@if (User.IsInRole("Admin"))
{
    <p>
        <a onclick="showInPopup('@Url.Action("Create", "Account", null, Context.Request.Scheme)','Create user')" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> New User</a>
    </p>
}

<div class="row">
    <div id="view-templates">
        @await Html.PartialAsync("_Message", string.Empty)
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-12">
            @if ((ViewBag.StatusMessage == "An error has occured") || (ViewBag.StatusMessage == "An error has occured, unabled to delete logged-in current user"))
            {
                <div class="alert alert-block alert-warning">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok red"></i>
                    <strong class="red">
                        @ViewBag.StatusMessage
                    </strong>
                </div>
            }
            else
          if (ViewBag.StatusMessage != string.Empty)
            {
                <div class="alert alert-block alert-success">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok green"></i>
                    <strong class="green">
                        @ViewBag.StatusMessage
                    </strong>
                </div>
            }
        </div>

        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Users</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th class="col-md-2">
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Fullname)
                                </th>
                                <th class="col-md-2">
                                    @Html.DisplayNameFor(model => model.Role)
                                </th>
                                <th class="col-md-3">
                                    Clinic Name
                                </th>
                                <th class="col-md-1" style="text-align:center;">
                                    Active
                                </th>
                                <th class="col-md-1">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.Active)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        @if (item.Role == "Admin")
                                        {
                                            <td class="hidden-480">
                                                <span class="label label-success">administrator</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="hidden-480">
                                                <span class="label label-warning">@Html.DisplayFor(modelItem => item.Role)</span>
                                            </td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Clinic.Name)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td align="right">
                                            <a onclick="showInPopup('@Url.Action("Edit","Account",new { id = item.UserId },Context.Request.Scheme)','Edit user')" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                            @*<button data-id="@item.UserId" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>*@
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr style="color: darkgrey;">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Username)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Fullname)
                                        </td>
                                        @if (item.Role == "Admin")
                                        {
                                            <td class="hidden-480">
                                                <span class="label label-success">administrator</span>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="hidden-480">
                                                <span class="label label-warning">@Html.DisplayFor(modelItem => item.Role)</span>
                                            </td>
                                        }
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Clinic.Name)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Active)
                                        </td>
                                        <td align="right">
                                            <a onclick="showInPopup('@Url.Action("Edit","Account",new { id = item.UserId },Context.Request.Scheme)','Edit user')" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                            @*<button data-id="@item.UserId" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>*@
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}

<partial name="_DeleteDialog" />
<partial name="_ModalPopup" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 50
                            });

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "Account")";
                window.location.href = url + '/' + item_to_delete;
            });
        });
    </script>
}

