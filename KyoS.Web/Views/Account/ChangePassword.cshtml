@model KyoS.Web.Models.ChangePasswordViewModel

@{
    Layout = null;
}


    <div class="row">
        <div class="col-md-12">
            <form asp-action="ChangePassword" onsubmit="return jQueryAjaxPostTem(this);">
                <div class="form-group col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-12">
                        <label asp-for="OldPassword" class="control-label"></label>&nbsp;*
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="NewPassword" class="control-label"></label>&nbsp;*
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="ConfirmPassword" class="control-label"></label>&nbsp;*
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>                    
                </div>
                <div class="col-md-12">
                    <hr />
                </div>
                @*<div class="col-md-12">
                    <strong>Note: </strong> A clinic can only have one setting
                </div>*@
                <div class="col-md-12">
                    <div class="col-md-offset-8">
                        &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;
                        <input type="submit" value="Change" class="btn btn-primary" />&nbsp;
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

