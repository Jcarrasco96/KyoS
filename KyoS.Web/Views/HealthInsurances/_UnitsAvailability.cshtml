@model IEnumerable<KyoS.Web.Models.UnitsAvailabilityViewModel>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Units per client</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">Health Insurance</th>
                            <th class="col-md-2">Client Name</th>
                            <th class="col-md-2" style="text-align:center;">Approved Date</th>
                            <th class="col-md-2" style="text-align:center;">Duration (months)</th>
                            <th class="col-md-1" style="text-align:center;">Units</th>
                            <th class="col-md-2" style="text-align:center;">Used Units</th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.UsedUnits >= item.Units)
                            {
                                <tr style="color: red;" title="Not available">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HealthInsurance.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.ApprovedDate)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.DurationTime)
                                    </td>
                                    <td align="center">
                                        <span class="label label-danger">
                                            @Html.DisplayFor(modelItem => item.Units)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <span class="label label-danger">
                                            @Html.DisplayFor(modelItem => item.UsedUnits)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <a onclick="showInPopup('@Url.Action("EditUnits", "HealthInsurances", new { id = item.Id }, Context.Request.Scheme)','Edit units per client')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                            if ((!item.Expired) && (item.UsedUnits < item.Units))
                            {
                                <tr title="Valid">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HealthInsurance.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.ApprovedDate)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.DurationTime)
                                    </td>
                                    <td align="center">
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.Units)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.UsedUnits)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <a onclick="showInPopup('@Url.Action("EditUnits", "HealthInsurances", new { id = item.Id }, Context.Request.Scheme)','Edit units per client')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                            if ((item.Expired) && (item.UsedUnits < item.Units))
                            {
                                <tr style="color: darkgrey;" title="Expired">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HealthInsurance.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.ApprovedDate)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.DurationTime)
                                    </td>
                                    <td align="center">
                                        <span class="label label-default">
                                            @Html.DisplayFor(modelItem => item.Units)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <span class="label label-default">
                                            @Html.DisplayFor(modelItem => item.UsedUnits)
                                        </span>
                                    </td>
                                    <td align="center">
                                        <a onclick="showInPopup('@Url.Action("EditUnits", "HealthInsurances", new { id = item.Id }, Context.Request.Scheme)','Edit units per client')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



