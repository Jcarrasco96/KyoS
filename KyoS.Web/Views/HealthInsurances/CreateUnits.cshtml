@model KyoS.Web.Models.UnitsAvailabilityViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateUnits" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTem(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="IdHealthInsurance" class="control-label"></label>&nbsp;*
                    <select asp-for="IdHealthInsurance" class="form-control" asp-items="Model.HealthInsurances"></select>
                    <span asp-validation-for="IdHealthInsurance" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="IdClient" class="control-label"></label>&nbsp;*
                    <select asp-for="IdClient" class="form-control" asp-items="Model.Clients"></select>
                    <span asp-validation-for="IdClient" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="ApprovedDate" class="control-label"></label>&nbsp;*
                    <input asp-for="ApprovedDate" class="form-control" />
                    <span asp-validation-for="ApprovedDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="DurationTime" class="control-label"></label>&nbsp;*
                    <input asp-for="DurationTime" class="form-control" />
                    <span asp-validation-for="DurationTime" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="Units" class="control-label"></label>&nbsp;*
                    <input asp-for="Units" class="form-control" />
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    &nbsp;
                </div>
            </div>
            <div class="col-md-12">
                @*<div class="alert alert-warning" role="alert">
                <span class="sr-only"></span>*@
                <strong>Note: </strong> If the client still has available units, they will be added to the new units created.
                @*</div>*@
            </div>            
            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-offset-8">
                    &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="submit" value="Submit" class="btn btn-primary" />

                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>    
}
