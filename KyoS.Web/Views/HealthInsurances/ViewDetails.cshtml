@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AuditGoalsObjective">
            <div class="col-md-12">
                @if (Model != null)
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">View Health Insurances by clients</h3>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-hover table-responsive table-striped" id="MyTableDiag">
                                        <thead>
                                            <tr>
                                                <th class="col-md-1">

                                                </th>
                                                <th class="col-md-3">
                                                    Name
                                                </th>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Admission
                                                </th>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Member
                                                </th>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Effective
                                                </th>
                                                <th class="col-md-1" style="text-align:center;">
                                                    Client
                                                </th>
                                                <th class="col-md-1" style="text-align:center;">
                                                    Auth.
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td align="center">
                                                        @if (item.Clients_HealthInsurances.Count() != 0)
                                                        {
                                                            <a class="icon-plus-sign-alt"></a>
                                                        }
                                                        else
                                                        {

                                                        }
                                                        <div style="display:none">
                                                            <table class="table table-striped table-bordered">
                                                                <tr>
                                                                    <th class="col-md-2" style="text-align:center;">Service</th>
                                                                    <th class="col-md-3" style="text-align:left;">Auth. Number</th>
                                                                    <th class="col-md-1" style="text-align:center;">Units</th>
                                                                    <th class="col-md-1" style="text-align:center;">Used</th>
                                                                    <th class="col-md-2" style="text-align:center;">Approved</th>
                                                                    <th class="col-md-2" style="text-align:center;">Expiration</th>
                                                                    <th class="col-md-1" style="text-align:center;">Active</th>
                                                                </tr>
                                                                @foreach (var dx in item.Clients_HealthInsurances)
                                                                {
                                                                    <tr>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Agency)
                                                                        </td>
                                                                        <td align="left">
                                                                            @Html.DisplayFor(modelItem => dx.AuthorizationNumber)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Units)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.UsedUnits)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.ApprovedDate)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.ExpiredDate)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Active)
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </table>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                                    </td>
                                                    <td align="center">
                                                        @if (item.Clients_HealthInsurances.Count() > 0)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Clients_HealthInsurances.ElementAt(0).MemberId)
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @if (item.Clients_HealthInsurances.Count() > 0)
                                                        {
                                                            @Html.DisplayFor(modelItem => item.Clients_HealthInsurances.ElementAt(0).EffectiveDate)
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                                        {
                                                            <span class="label label-success">
                                                                Open
                                                            </span>
                                                        }
                                                        @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                                        {
                                                            <span class="label label-default">
                                                                Close
                                                            </span>
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @item.Clients_HealthInsurances.Count()
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-offset-10">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>

