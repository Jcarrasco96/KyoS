@model KyoS.Web.Models.HealthInsuranceViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostHealthInsurance(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="DocumentPath" />
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>&nbsp;*
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="SignedDate" class="control-label"></label>&nbsp;*
                    <input asp-for="SignedDate" class="form-control" />
                    <span asp-validation-for="SignedDate" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label asp-for="DocumentFile" class="control-label"></label>
                    <input asp-for="DocumentFile" class="form-control" type="file" id="photoBrowser" />
                    <span asp-validation-for="DocumentFile" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="DurationTime" class="control-label"></label>
                    <input asp-for="DurationTime" class="form-control" />
                    <span asp-validation-for="DurationTime" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="checkbox" asp-for="NeedAuthorization" /> Need Authorization
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <input type="checkbox" asp-for="Active" /> Active
                </div>
            </div>
           
            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div>
                <div class="col-md-offset-9 form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Back</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}


