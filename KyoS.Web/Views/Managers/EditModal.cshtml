@model KyoS.Web.Models.ManagerViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostManagers(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SignaturePath" />
            <div>
                <div class="form-group col-md-12">
                    <label asp-for="Name" class="control-label"></label>&nbsp;*
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-8 form-group">
                    <label asp-for="IdClinic" class="control-label"></label>
                    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                    <span asp-validation-for="IdClinic" class="text-danger"></span>
                </div>
                <div class="col-md-4 form-group">
                    <label asp-for="IdStatus" class="control-label"></label>
                    <select asp-for="IdStatus" asp-items="Model.StatusList" class="form-control"></select>
                    <span asp-validation-for="IdStatus" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="IdUser" class="control-label"></label>
                    <select asp-for="IdUser" asp-items="Model.UserList" class="form-control"></select>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="SignatureFile" class="control-label"></label>
                    <input asp-for="SignatureFile" type="file" class="form-control" />
                    <span asp-validation-for="SignatureFile" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12 form-group">
                    @if (!string.IsNullOrEmpty(Model.SignaturePath))
                    {
                        <img src="@Url.Content(Model.SignaturePath)" alt="Image" style="width:200px;height:100px;max-width: 100%; height: auto;" />
                    }
                </div>
            </div>
            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div>
                <div class="col-md-offset-9 form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}


