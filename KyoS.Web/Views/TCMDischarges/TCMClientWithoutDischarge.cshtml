@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanEntity>
@{
    ViewData["Title"] = "Case without Discharge";
}

@if (Model != null)
{
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Dashboard", "Index", "Desktop")
            </li>
            <li class="active">Case without Discharge</li>
        </ul><!--.breadcrumb-->
    </div>
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the Discharge
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Case without Discharge</h3>
            </div>
            <div class="panel-body" id="view-TcmDischarge">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2" align="center">
                                TCM Cases
                            </th>
                            <th class="col-md-3" align="center">
                                Client Name
                            </th>
                            <th class="col-md-2" align="center">
                                Date Close
                            </th>
                            <th class="col-md-2" align="center">
                                CaseManager
                            </th>
                            <th class="col-md-1" align="center">
                                Status
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.CaseNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.Client.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.DataClose)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.Casemanager.Name)
                                </td>
                                <td>
                                    @if ((item.Status == KyoS.Common.Enums.StatusType.Open) && (item.Approved == 2))
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if ((item.Status == KyoS.Common.Enums.StatusType.Close) && (item.Approved == 2))
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    <a asp-action="Create" asp-controller="TCMDischarges" asp-route-id="@item.Id" asp-route-origin="2" class="btn btn-primary" title="Create Discharge"><i class="glyphicon glyphicon-plus"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "pageLength": 100
            });

            // Delete item
            //var item_to_delete;

            @*$('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "WorkDays")";
                window.location.href = url + '/' + item_to_delete;
            });*@
        });
    </script>
}




