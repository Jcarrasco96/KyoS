@model IEnumerable<KyoS.Web.Data.Entities.TCMDischargeEntity>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Discharges for update</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                Case Manager
                            </th>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.TcmServicePlan.TcmClient.Client.Name)
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Start
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                End
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Discharge
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Casemanager.Name)
                                </td>
                                <td>
                                    @if (item.TcmServicePlan.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.TcmServicePlan.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Client.Name)
                                    |
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Client.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.DataOpen)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.DataClose)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DischargeDate)
                                </td>
                                <td align="center">
                                    @if (item.Approved == 2)
                                    {
                                        <span class="label label-success">
                                            Approved
                                        </span>
                                    }
                                    else
                                    {
                                        @if (item.Approved == 0)
                                        {
                                            <span class="label label-warning">
                                                Edition
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="label label-info">
                                                Pending
                                            </span>
                                        }
                                    }
                                </td>

                                <td align="right">
                                    @if (item.TcmServicePlan.TcmClient.Client.Clinic.Setting.TCMSupervisorEdit == true)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" asp-route-origi="5" class="btn btn-warning" title="Edit TCM Discharge"><i class="glyphicon glyphicon-pencil"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning disabled"><i class="glyphicon glyphicon-pencil"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


