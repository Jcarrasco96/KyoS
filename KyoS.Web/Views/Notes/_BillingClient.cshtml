@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
@if (Model.Count() > 0)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (ViewData["Billed"].ToString() == "0")
                {
                    <h3 class="panel-title">Unbilled Clients</h3>
                }
                else
                {
                    <h3 class="panel-title">Billed Clients</h3>
                }
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2" style="text-align:center;">Date</th>
                            <th class="col-md-2" style="text-align:center;">Therapist</th>
                            <th class="col-md-2" style="text-align:center;">Therapy</th>
                            <th class="col-md-2" style="text-align:center;">Billed</th>
                            <th class="col-md-2" style="text-align:center;">Payment</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    <p>@item.Workday.Date.ToShortDateString()</p>
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Facilitator.Name)
                                </td>
                                <td align="center">
                                    @if (item.Workday.Service == KyoS.Common.Enums.ServiceType.PSR)
                                    {
                                        @Html.DisplayFor(modelItem => item.Workday.Service)
                                    }
                                    else
                                    {
                                        @if (item.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                        {
                                            @Html.DisplayFor(modelItem => item.Workday.Service)
                                        }
                                        else
                                        {
                                            <label>Ind</label>
                                        }
                                    }
                                    |
                                    @if (item.Note != null)
                                    {
                                        if ((item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema2))
                                        {
                                            <label>16</label>
                                        }
                                        if ((item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                        {
                                            <label>12</label>
                                        }
                                    }
                                    else
                                    {
                                        @if (item.NoteP != null)
                                        {
                                            if (item.NoteP.Schema == KyoS.Common.Enums.SchemaType.Schema3)
                                            {
                                                <label>@item.NoteP.RealUnits</label>
                                            }
                                        }
                                        else
                                        {
                                            if ((item.IndividualNote != null) || (item.Workday.Service == KyoS.Common.Enums.ServiceType.Individual))
                                            {
                                                <label>4</label>
                                            }
                                            else
                                            {
                                                if ((item.GroupNote != null) || (item.Workday.Service == KyoS.Common.Enums.ServiceType.Group))
                                                {
                                                    <label>8</label>
                                                }
                                                else
                                                {
                                                    if ((item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema2) || (item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema3))
                                                    {
                                                        <label>16</label>
                                                    }
                                                    if ((item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                    {
                                                        <label>12</label>
                                                    }
                                                }
                                            }
                                        }
                                    }
                                </td>
                                <td align="center">
                                    @if (item.BilledDate != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.BilledDate)
                                    }
                                    else
                                    {
                                       <p> - </p>                                   
                                    }
                                </td>
                                <td align="center">
                                    @if (item.PaymentDate != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.PaymentDate)
                                    }
                                    else
                                    {
                                        <p> - </p>
                                    }
                                </td>
                                <td align="right">
                                    @if (ViewData["Billed"].ToString() == "0")
                                    {
                                        <a asp-action="BillNoteTodayClient" asp-route-id="@item.Id" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                        <a onclick="showInPopup('@Url.Action("BillNoteClient", "Notes", new { idWorkday = item.Id }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                        <a asp-action="PaymentReceivedTodayClient" asp-route-idWorkclient="@item.Id" class="btn btn-success disabled" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                        <a onclick="showInPopup('@Url.Action("PaymentReceivedClient", "Notes", new { id = item.Id}, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success disabled" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="NotClientBill" asp-route-id="@item.Id" class="btn btn-danger" title="Return not Billed"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                        <a onclick="showInPopup('@Url.Action("BillNoteClient", "Notes", new { idWorkday = item.Client.Id }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning disabled" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                        @if (item.PaymentDate != null)
                                        {
                                            <a asp-action="NotClientPayment" asp-route-id="@item.Id" class="btn btn-danger " title="Return not payment"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                        }
                                        else
                                        {
                                            <a asp-action="PaymentReceivedTodayClient" asp-route-idWorkclient="@item.Id" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                        }

                                        <a onclick="showInPopup('@Url.Action("PaymentReceivedClient", "Notes", new { id = item.Id }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}