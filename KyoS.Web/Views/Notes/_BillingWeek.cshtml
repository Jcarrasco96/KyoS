@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
@if (Model.Count() > 0)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (ViewData["Billed"].ToString() == "0")
                {
                    <h3 class="panel-title">Unbilled Clients</h3>
                }
                else
                {
                    <h3 class="panel-title">Billed Clients</h3>
                }
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1"></th>
                            <th class="col-md-3">Client Name</th>
                            <th class="col-md-1" style="text-align:center;">Notes</th>
                            <th class="col-md-2" style="text-align:center;">Birth Date</th>
                            <th class="col-md-2" style="text-align:center;">Medical ID</th>
                            <th class="col-md-1" style="text-align:center;">Dx. Code</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Distinct().GroupBy(n => n.ClientName))
                        {
                            <tr>
                                <td align="center">
                                    @if (item.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    else
                                    {

                                    }
                                    <div style="display:none">
                                        <table class="table table-striped table-bordered" id="MyTableDetails">
                                            <tr>
                                                <th class="col-md-3">Client Name</th>
                                                <th class="col-md-2">Therapist</th>
                                                <th class="col-md-1" style="text-align:center;">Therapy</th>
                                                <th class="col-md-1" style="text-align:center;">Date</th>
                                                <th class="col-md-1" style="text-align:center;">Status</th>
                                                <th class="col-md-1" style="text-align:center;">Billed</th>
                                                <th class="col-md-1" style="text-align:center;">Payment</th>
                                                <th class="col-md-2"></th>
                                            </tr>
                                            @foreach (var element in item.OrderBy(c => c.Workday.Date))
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => element.Client.Name)
                                                        |
                                                        @Html.DisplayFor(modelItem => element.Client.Code)
                                                    </td>
                                                     <td>
                                                        @Html.DisplayFor(modelItem => element.Facilitator.Name)
                                                    </td>
                                                     <td align="center">
                                                         @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.PSR)
                                                         {
                                                             @Html.DisplayFor(modelItem => element.Workday.Service)
                                                         }
                                                         else
                                                         {
                                                             @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                                             {
                                                                 @Html.DisplayFor(modelItem => element.Workday.Service)
                                                             }
                                                             else
                                                             {
                                                                 <label>Ind</label>
                                                             }
                                                         }
                                                         |
                                                         @if (element.Note != null)
                                                         {
                                                             if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema2))
                                                             {
                                                                 <label>16</label>
                                                             }
                                                             if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                             {
                                                                 <label>12</label>
                                                             }
                                                         }
                                                         else
                                                         {
                                                             @if (element.NoteP != null)
                                                             {
                                                                 if (element.NoteP.Schema == KyoS.Common.Enums.SchemaType.Schema3)
                                                                 {
                                                                     <label>@element.NoteP.RealUnits</label>
                                                                 }
                                                             }
                                                             else
                                                             {
                                                                 if ((element.IndividualNote != null) || (element.Workday.Service == KyoS.Common.Enums.ServiceType.Individual))
                                                                 {
                                                                     <label>4</label>
                                                                 }
                                                                 else
                                                                 {
                                                                     if (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                                                     {
                                                                         if (element.GroupNote2 != null)
                                                                         {
                                                                             var value = @element.GroupNote2.GroupNotes2_Activities.Count() * 4;
                                                                             <label>@value</label>
                                                                             value = 0;
                                                                         }
                                                                         else
                                                                         {
                                                                             var value = @element.Schedule.SubSchedules.Count() * 4;
                                                                             <label>@value</label>
                                                                             value = 0;
                                                                         }
                                                                     }
                                                                     else
                                                                     {
                                                                         if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema2) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema3))
                                                                         {
                                                                             <label>16</label>
                                                                         }
                                                                         if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                                         {
                                                                             <label>12</label>
                                                                         }
                                                                     }
                                                                 }
                                                             }
                                                         }
                                                     </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => element.Workday.Date)
                                                    </td>
                                                    <td align="center">
                                                        @if (element.NoteP != null)
                                                        {
                                                            @Html.DisplayFor(modelItem => element.NoteP.Status)
                                                        }
                                                        else
                                                        {
                                                            @if (element.Note != null)
                                                            {
                                                                @Html.DisplayFor(modelItem => element.Note.Status)
                                                            }
                                                            else
                                                            {
                                                                @if (element.IndividualNote != null)
                                                                {
                                                                    @Html.DisplayFor(modelItem => element.IndividualNote.Status)
                                                                }
                                                                else
                                                                {
                                                                    @if (element.GroupNote != null)
                                                                    {
                                                                        @Html.DisplayFor(modelItem => element.GroupNote.Status)
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>Not Started</p>
                                                                    }
                                                                }
                                                            }
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @if (element.BilledDate == null)
                                                        {
                                                            <p>-</p>
                                                        }
                                                        else
                                                        {
                                                            <p>@element.BilledDate.Value.ToShortDateString()</p>
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @if (element.PaymentDate == null)
                                                        {
                                                            @if (element.BilledDate == null)
                                                            {
                                                                <p>-</p>
                                                            }
                                                            else
                                                            {
                                                                @if (element.DeniedBill == true)
                                                                {
                                                                    <a asp-action="NotDeniedBill" asp-route-idWorkclient="@element.Id" asp-route-client="0" class="btn btn-danger" title="Not Denied Bill"><i class="glyphicon glyphicon-check"></i></a>
                                                                }
                                                                else
                                                                { 
                                                                    <a asp-action="DeniedBillToday" asp-route-id="@element.Id" asp-route-week="0" class="btn btn-info" title="Deny Bill"><i class="glyphicon glyphicon-check"></i></a>
                                                                }

                                                            }

                                                        }
                                                        else
                                                        {
                                                            <p>@element.PaymentDate.Value.ToShortDateString()</p>
                                                        }
                                                    </td>
                                                    <td align="right">
                                                        @if (ViewData["Billed"].ToString() == "0")
                                                        {
                                                            <a asp-action="BillNoteToday" asp-route-id="@element.Id" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                                            <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = element.Id, abilled = @ViewData["Billed"] }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                                            <a asp-action="PaymentReceivedToday" asp-route-id="@element.Id" class="btn btn-success disabled" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                                            <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = element.Id }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success disabled" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>

                                                        }
                                                        @if (ViewData["Billed"].ToString() == "1")
                                                        {
                                                            <a asp-action="NotBill" asp-route-id="@element.Id" class="btn btn-danger" title="Return not Billed"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                                            <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = element.Id, abilled = @ViewData["Billed"] }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                                            @if (element.PaymentDate == null)
                                                            {
                                                                <a asp-action="PaymentReceivedToday" asp-route-id="@element.Id" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                                            }
                                                            else
                                                            { 
                                                                <a asp-action="NotPaymentReceived" asp-route-id="@element.Id" class="btn btn-danger" title="Return not Payment"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                                            }
                                                            <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = element.Id }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>

                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ElementAt(0).Client.Name)
                                    |
                                    @Html.DisplayFor(modelItem => item.ElementAt(0).Client.Code)
                                </td>
                                <td align="center">
                                    <p>@item.Count()</p>
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ElementAt(0).Client.DateOfBirth)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ElementAt(0).Client.MedicaidID)
                                </td>
                                <td align="center">
                                    @if (item.ElementAt(0).Client.Clients_Diagnostics.Where(n => n.Principal == true).Count() > 0)
                                    {
                                        @Html.DisplayFor(modelItem => item.ElementAt(0).Client.Clients_Diagnostics.First(n => n.Principal == true).Diagnostic.Code)
                                    }
                                </td>
                                <td align="right">
                                    @if (ViewData["Billed"].ToString() == "0")
                                    {
                                        <a asp-action="BillNoteToday" asp-route-id="@item.ElementAt(0).Client.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                        <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = item.ElementAt(0).Client.Id, week = @ViewData["idWeek"], abilled = @ViewData["Billed"]}, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                        <a asp-action="PaymentReceivedToday" asp-route-id="@item.ElementAt(0).Client.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-success disabled" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                        <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = item.ElementAt(0).Client.Id, week = @ViewData["idWeek"] }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success disabled" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="NotBill" asp-route-id="@item.ElementAt(0).Client.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-danger" title="Return not Billed"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                        <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = item.ElementAt(0).Client.Id, week = @ViewData["idWeek"], abilled = @ViewData["Billed"] }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning " title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                        @if (item.Where(n => n.PaymentDate == null).Count() > 0)
                                        {
                                            <a asp-action="PaymentReceivedToday" asp-route-id="@item.ElementAt(0).Client.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>                                        
                                        }
                                        else
                                        { 
                                            <a asp-action="NotPaymentReceived" asp-route-id="@item.ElementAt(0).Client.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-danger" title="Return not Payment"><i class="glyphicon glyphicon-arrow-left"></i></a>
                                        }
                                        <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = item.ElementAt(0).Client.Id, week = @ViewData["idWeek"] }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}