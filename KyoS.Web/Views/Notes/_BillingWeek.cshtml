@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><b>Init Date:</b> @Model.First().Workdays_Clients.First().Workday.Week.InitDate.ToShortDateString()&nbsp;&nbsp;<b>Final Date:</b> @Model.First().Workdays_Clients.First().Workday.Week.FinalDate.ToShortDateString()</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1"></th>
                            <th class="col-md-3">Client Name</th>
                            <th class="col-md-2" style="text-align:center;">Birth Date</th>
                            <th class="col-md-2" style="text-align:center;">Medical ID</th>
                            <th class="col-md-2" style="text-align:center;">Dx. Code</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.Workdays_Clients.Where(w => w.Workday.Week.Id.ToString() == ViewData["idWeek"].ToString()).Count() > 0)
                            {
                                <tr>
                                    <td align="center">
                                        @if (item.Workdays_Clients.Count() != 0 && item.Workdays_Clients.Where(w => w.Workday.Week.Id.ToString() == @ViewData["idWeek"].ToString()).Count() > 0)
                                        {
                                            <a class="icon-plus-sign-alt"></a>
                                        }
                                        else
                                        {

                                        }
                                        <div style="display:none">
                                            <table class="table table-striped table-bordered">
                                                <tr>
                                                    <th class="col-md-3">Client Name</th>
                                                    <th class="col-md-1" style="text-align:center;">Therapy</th>
                                                    <th class="col-md-1" style="text-align:center;">Date</th>
                                                    <th class="col-md-1" style="text-align:center;">Status</th>
                                                    <th class="col-md-1" style="text-align:center;">Billed</th>
                                                    <th class="col-md-1" style="text-align:center;">Payment</th>
                                                    <th class="col-md-2"></th>
                                                </tr>
                                                @foreach (var element in item.Workdays_Clients.OrderBy(n => n.Workday.Date))
                                                {
                                                    @if (ViewData["Billed"].ToString() == "0")
                                                    {
                                                        @if (element.Workday.Week.Id.ToString() == ViewData["idWeek"].ToString() && element.BilledDate == null)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Name)
                                                                    |
                                                                    @Html.DisplayFor(modelItem => item.Code)
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.PSR)
                                                                    {
                                                                        @Html.DisplayFor(modelItem => element.Workday.Service)
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => element.Workday.Service)
                                                                        }
                                                                        else
                                                                        {
                                                                            <label>Ind</label>
                                                                        }
                                                                    }
                                                                    |
                                                                    @if (element.Note != null)
                                                                    {
                                                                        if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema2))
                                                                        {
                                                                            <label>16</label>
                                                                        }
                                                                        if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                                        {
                                                                            <label>12</label>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.NoteP != null)
                                                                        {
                                                                            if (element.NoteP.Schema == KyoS.Common.Enums.SchemaType.Schema3)
                                                                            {
                                                                                <label>@element.NoteP.RealUnits</label>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            if ((element.IndividualNote != null) || (element.Workday.Service == KyoS.Common.Enums.ServiceType.Individual))
                                                                            {
                                                                                <label>4</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                if ((element.GroupNote != null) || (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group))
                                                                                {
                                                                                    <label>8</label>
                                                                                }
                                                                                else
                                                                                {
                                                                                    if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema2) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema3))
                                                                                    {
                                                                                        <label>16</label>
                                                                                    }
                                                                                    if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                                                    {
                                                                                        <label>12</label>
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @Html.DisplayFor(modelItem => element.Workday.Date)
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.NoteP != null)
                                                                    {
                                                                        @Html.DisplayFor(modelItem => element.NoteP.Status)
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.Note != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => element.Note.Status)
                                                                        }
                                                                        else
                                                                        {
                                                                            @if (element.IndividualNote != null)
                                                                            {
                                                                                @Html.DisplayFor(modelItem => element.IndividualNote.Status)
                                                                            }
                                                                            else
                                                                            {
                                                                                @if (element.GroupNote != null)
                                                                                {
                                                                                    @Html.DisplayFor(modelItem => element.GroupNote.Status)
                                                                                }
                                                                                else
                                                                                {
                                                                                    <p>Not Started</p>
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.BilledDate == null)
                                                                    {
                                                                        <p>-</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>@element.BilledDate.Value.ToShortDateString()</p>
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.PaymentDate == null)
                                                                    {
                                                                        <p>-</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>@element.PaymentDate.Value.ToShortDateString()</p>
                                                                    }
                                                                </td>
                                                                <td align="right">
                                                                    <a asp-action="BillNoteToday" asp-route-id="@element.Id" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                                                    <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = element.Id }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                                                    <a asp-action="PaymentReceivedToday" asp-route-id="@element.Id" class="btn btn-success disabled" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                                                    <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = element.Id }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success disabled" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @if (element.Workday.Week.Id.ToString() == ViewData["idWeek"].ToString() && element.BilledDate != null)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(modelItem => item.Name)
                                                                    |
                                                                    @Html.DisplayFor(modelItem => item.Code)
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.PSR)
                                                                    {
                                                                        @Html.DisplayFor(modelItem => element.Workday.Service)
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => element.Workday.Service)
                                                                        }
                                                                        else
                                                                        {
                                                                            <label>Ind</label>
                                                                        }
                                                                    }
                                                                    |
                                                                    @if (element.Note != null)
                                                                    {
                                                                        if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema2))
                                                                        {
                                                                            <label>16</label>
                                                                        }
                                                                        if ((element.Note.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                                        {
                                                                            <label>12</label>
                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.NoteP != null)
                                                                        {
                                                                            if (element.NoteP.Schema == KyoS.Common.Enums.SchemaType.Schema3)
                                                                            {
                                                                                <label>@element.NoteP.RealUnits</label>
                                                                            }
                                                                        }
                                                                        else
                                                                        {
                                                                            if ((element.IndividualNote != null) || (element.Workday.Service == KyoS.Common.Enums.ServiceType.Individual))
                                                                            {
                                                                                <label>4</label>
                                                                            }
                                                                            else
                                                                            {
                                                                                if ((element.GroupNote != null) || (element.Workday.Service == KyoS.Common.Enums.ServiceType.Group))
                                                                                {
                                                                                    <label>8</label>
                                                                                }
                                                                                else
                                                                                {
                                                                                    if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema2) || (element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema3))
                                                                                    {
                                                                                        <label>16</label>
                                                                                    }
                                                                                    if ((element.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                                                    {
                                                                                        <label>12</label>
                                                                                    }
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @Html.DisplayFor(modelItem => element.Workday.Date)
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.NoteP != null)
                                                                    {
                                                                        @Html.DisplayFor(modelItem => element.NoteP.Status)
                                                                    }
                                                                    else
                                                                    {
                                                                        @if (element.Note != null)
                                                                        {
                                                                            @Html.DisplayFor(modelItem => element.Note.Status)
                                                                        }
                                                                        else
                                                                        {
                                                                            @if (element.IndividualNote != null)
                                                                            {
                                                                                @Html.DisplayFor(modelItem => element.IndividualNote.Status)
                                                                            }
                                                                            else
                                                                            {
                                                                                @if (element.GroupNote != null)
                                                                                {
                                                                                    @Html.DisplayFor(modelItem => element.GroupNote.Status)
                                                                                }
                                                                                else
                                                                                {
                                                                                    <p>Not Started</p>
                                                                                }
                                                                            }
                                                                        }
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.BilledDate == null)
                                                                    {
                                                                        <p>-</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>@element.BilledDate.Value.ToShortDateString()</p>
                                                                    }
                                                                </td>
                                                                <td align="center">
                                                                    @if (element.PaymentDate == null)
                                                                    {
                                                                        <p>-</p>
                                                                    }
                                                                    else
                                                                    {
                                                                        <p>@element.PaymentDate.Value.ToShortDateString()</p>
                                                                    }
                                                                </td>
                                                                <td align="right">
                                                                    <a asp-action="BillNoteToday" asp-route-id="@element.Id" class="btn btn-warning disabled" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                                                    <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = element.Id }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning disabled" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                                                    <a asp-action="PaymentReceivedToday" asp-route-id="@element.Id" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                                                    <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = element.Id }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                }
                                            </table>
                                        </div>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                        |
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.MedicaidID)
                                    </td>
                                    <td align="center">
                                        @if (item.Clients_Diagnostics.Count() > 0)
                                        {
                                            @Html.DisplayFor(modelItem => item.Clients_Diagnostics.ElementAtOrDefault(0).Diagnostic.Code)
                                        }
                                    </td>
                                    <td align="right">
                                        @if (ViewData["Billed"].ToString() == "0")
                                        {
                                            <a asp-action="BillNoteToday" asp-route-id="@item.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                            <a onclick="showInPopup('@Url.Action("BillNote", "Notes", new { id = item.Id, week = @ViewData["idWeek"] }, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                            <a asp-action="PaymentReceivedToday" asp-route-id="@item.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-success disabled" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                            <a onclick="showInPopup('@Url.Action("PaymentReceived", "Notes", new { id = item.Id, week = @ViewData["idWeek"] }, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success disabled" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                        }
                                        else
                                        {
                                            <a asp-action="BillNoteToday" asp-route-id="@item.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-warning disabled" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                            <a onclick="showInPopup('@Url.Action("BillNote","Notes",new {id = item.Id, week = @ViewData["idWeek"]}, Context.Request.Scheme)','Bill this note')" class="btn btn-warning disabled" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                            <a asp-action="PaymentReceivedToday" asp-route-id="@item.Id" asp-route-week="@ViewData["idWeek"]" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                            <a onclick="showInPopup('@Url.Action("PaymentReceived","Notes",new {id = item.Id, week = @ViewData["idWeek"]}, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                        }

                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>    
}