@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Billing week</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">Facilitator</th>
                            <th class="col-md-2">Client Name</th>
                            <th class="col-md-1" style="text-align:center;">Therapy</th>
                            <th class="col-md-1" style="text-align:center;">Date</th>
                            <th class="col-md-1" style="text-align:center;">Med. ID</th>
                            <th class="col-md-1" style="text-align:center;">Billed Date</th>
                            <th class="col-md-1" style="text-align:center;">Payment Date</th>
                            <th class="col-md-3"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Facilitator.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.Name)
                                    | 
                                    @Html.DisplayFor(modelItem => item.Client.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Client.Service)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Workday.Date)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Client.MedicaidID)
                                </td>
                                <td align="center">
                                    @if (item.BilledDate == null)
                                    {
                                        <p>-</p>
                                    }
                                    else
                                    {
                                        <p>@item.BilledDate.Value.ToShortDateString()</p>
                                    }
                                </td>
                                <td align="center">
                                    @if (item.PaymentDate == null)
                                    {
                                        <p>-</p>
                                    }
                                    else
                                    {
                                        <p>@item.PaymentDate.Value.ToShortDateString()</p>
                                    }
                                </td>
                                <td align="right">
                                    <a asp-action="BillNoteToday" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-ok"></i></a>
                                    <a onclick="showInPopup('@Url.Action("BillNote","Notes",new {id = item.Id}, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-usd"></i> Bill</a>
                                    <a asp-action="PaymentReceivedToday" asp-route-id="@item.Id" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></a>
                                    <a onclick="showInPopup('@Url.Action("PaymentReceived","Notes",new {id = item.Id}, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-usd"></i> Received</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "order": [[0, "asc"]],
                "lengthMenu": [[100, 200, -1], [100, 200, "All"]],
                "pageLength": 200
            });
        });
    </script>
}