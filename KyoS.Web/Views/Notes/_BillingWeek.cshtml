@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Billing week</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">Facilitator</th>
                            <th class="col-md-2">Client Name</th>
                            <th class="col-md-1" style="text-align:center;">Therapy</th>
                            <th class="col-md-1" style="text-align:center;">Date</th>
                            <th class="col-md-1" style="text-align:center;">Birth Date</th>
                            <th class="col-md-1" style="text-align:center;">Medical ID</th>
                            <th class="col-md-1" style="text-align:center;">Billed</th>
                            <th class="col-md-1" style="text-align:center;">Payment</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Facilitator.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.Name)
                                    |
                                    @if (item.Client.Clients_Diagnostics.Count() > 0)
                                    {
                                        @Html.DisplayFor(modelItem => item.Client.Clients_Diagnostics.ElementAtOrDefault(0).Diagnostic.Code)
                                    }
                                    |
                                    @Html.DisplayFor(modelItem => item.Client.Code)
                                </td>
                                <td align="center">
                                    @if (item.Workday.Service == KyoS.Common.Enums.ServiceType.PSR)
                                    {
                                        @Html.DisplayFor(modelItem => item.Workday.Service)
                                    }
                                    else
                                    {
                                        @if (item.Workday.Service == KyoS.Common.Enums.ServiceType.Group)
                                        {
                                            @Html.DisplayFor(modelItem => item.Workday.Service)
                                        }
                                        else
                                        {
                                            <label>Ind</label>
                                        }
                                    }
                                    |
                                    @if (item.Note != null)
                                    {
                                        if ((item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema2))
                                        {
                                            <label>16</label>
                                        }
                                        if ((item.Note.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                        {
                                            <label>12</label>
                                        }
                                    }
                                    else
                                    {
                                        @if (item.NoteP != null)
                                        {
                                            if (item.NoteP.Schema == KyoS.Common.Enums.SchemaType.Schema3)
                                            {
                                                <label>@item.NoteP.RealUnits</label>
                                            }
                                        }
                                        else
                                        {
                                            if ((item.IndividualNote != null) || (item.Workday.Service == KyoS.Common.Enums.ServiceType.Individual))
                                            {
                                                <label>4</label>
                                            }
                                            else
                                            {
                                                if ((item.GroupNote != null) || (item.Workday.Service == KyoS.Common.Enums.ServiceType.Group))
                                                {
                                                    <label>8</label>
                                                }
                                                else
                                                {
                                                    if ((item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema1) || (item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema2) || (item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema3))
                                                    {
                                                        <label>16</label>
                                                    }
                                                    if ((item.Workday.Week.Clinic.Schema == KyoS.Common.Enums.SchemaType.Schema4))
                                                    {
                                                        <label>12</label>
                                                    }
                                                }
                                            }
                                        }
                                    }
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Workday.Date)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Client.DateOfBirth)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Client.MedicaidID)
                                </td>
                                <td align="center">
                                    @if (item.BilledDate == null)
                                    {
                                        <p>-</p>
                                    }
                                    else
                                    {
                                        <p>@item.BilledDate.Value.ToShortDateString()</p>
                                    }
                                </td>
                                <td align="center">
                                    @if (item.PaymentDate == null)
                                    {
                                        <p>-</p>
                                    }
                                    else
                                    {
                                        <p>@item.PaymentDate.Value.ToShortDateString()</p>
                                    }
                                </td>
                                <td align="right">
                                    <a asp-action="BillNoteToday" asp-route-id="@item.Id" class="btn btn-warning" title="Billed today"><i class="glyphicon glyphicon-ok"></i></a>
                                    <a onclick="showInPopup('@Url.Action("BillNote","Notes",new {id = item.Id}, Context.Request.Scheme)','Bill this note')" class="btn btn-warning" title="Billing note"><i class="glyphicon glyphicon-calendar"></i></a>
                                    <a asp-action="PaymentReceivedToday" asp-route-id="@item.Id" class="btn btn-success" title="Payment today"><i class="glyphicon glyphicon-ok"></i></a>
                                    <a onclick="showInPopup('@Url.Action("PaymentReceived","Notes",new {id = item.Id}, Context.Request.Scheme)','Payment received of this note')" class="btn btn-success" title="Payment received"><i class="glyphicon glyphicon-calendar"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>    
}