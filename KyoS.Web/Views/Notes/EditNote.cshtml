@model KyoS.Web.Models.NoteViewModel
@{
    ViewData["Title"] = "Note management";
}


<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Notes", "Index", "Notes")
        </li>
        <li class="active">Note</li>
    </ul>
</div>

<h4>Note Management</h4>

<div class="row">
    <div>
        <form asp-action="EditNote" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <partial name="_Notes" />
            <div class="form-group col-md-12">
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a> |
                <a asp-action="FinishEditing" class="btn btn-warning" asp-route-id="@Model.Id">Finish Editing</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(document).ready(function () {
            $("#cbTopic1").change(function () {
                $.get("/Notes/GetActivityList", { idTheme: $("#cbTopic1").val() }, function (data) {
                    $("#cbActivity1").empty();                    
                    $.each(data, function (index, row)
                    {
                        $("#cbActivity1").append("<option value='" + row.value + "'>" + row.value + " - " + row.text + "</option>")
                    });
