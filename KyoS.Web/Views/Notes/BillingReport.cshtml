@model IEnumerable<KyoS.Web.Data.Entities.WeekEntity>
@{
    ViewData["Title"] = "Billing Report";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Billing report</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Units per weeks</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-5">

                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Init Date
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Final Date
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Notes
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Units
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderBy(w => w.WeekOfYear))
                        {
                        <tr>
                            <td align="center">
                                @if (item.Days.Count() != 0)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                <div style="display:none">
                                    <table class="table table-striped">
                                        <tr>
                                            <th class="col-md-1"></th>
                                            <th class="col-md-7">Name</th>
                                            <th class="col-md-2" style="text-align:center;">Notes</th>
                                            <th class="col-md-2" style="text-align:center;">Units</th>
                                        </tr>
                                        @foreach (var facilitator in item.Clinic.Facilitators.OrderByDescending(f => f.Workdays_Clients.Where(wc => (wc.Present == true && wc.Workday.Week.Id == item.Id)).Count()))
                                        {
                                            <tr>
                                                <td align="center">
                                                    @*@if (facilitator.Workdays_Clients.Where(wc => (wc.Present == true && wc.Workday.Week.Id == item.Id)).Count() != 0)
                                                    {
                                                        <a class="icon-plus-sign-alt"></a>
                                                    }
                                                    <div style="display:none">
                                                        <table class="table table-striped">
                                                            <tr>
                                                                <th class="col-md-1"></th>
                                                                <th class="col-md-5">Client Name</th>
                                                                <th class="col-md-2" style="text-align:center;">Medical ID</th>
                                                                <th class="col-md-2" style="text-align:center;">Notes</th>
                                                                <th class="col-md-2" style="text-align:center;">Units</th>
                                                                <th></th>
                                                            </tr>
                                                            @foreach (var workday_client in item.Clinic.Clients.)
                                                                {
                                                                    @if (day_client.Present)
                                                                    {
                                                                        <tr>
                                                                            <td align="center">
                                                                                @Html.DisplayFor(modelItem => day_client.Session)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => day_client.Client.Name)
                                                                            </td>
                                                                            <td align="center">
                                                                                @Html.DisplayFor(modelItem => day_client.Present)
                                                                            </td>
                                                                            <td align="center">
                                                                                @if (day_client.Note == null)
                                                                                {
                                                                                    <span class="label label-danger">
                                                                                        Not Started
                                                                                    </span>
                                                                                }
                                                                                else
                                                                                {
                                                                                    if (day_client.Note.Status.ToString() == "Edition")
                                                                                    {
                                                                                        <span class="label label-default">
                                                                                            Edition
                                                                                        </span>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        if (day_client.Note.Status.ToString() == "Pending")
                                                                                        {
                                                                                            <span class="label label-info">
                                                                                                Pending
                                                                                            </span>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (day_client.Note.Status.ToString() == "Approved")
                                                                                            {
                                                                                                <span class="label label-success">
                                                                                                    Approved
                                                                                                </span>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }
                                                                            </td>
                                                                            <td align="right">
                                                                                @if (day_client.Note == null)
                                                                                {
                                                                                    <a asp-action="EditNote" asp-route-id="@day_client.Id" class="btn btn-warning" title="Edit note"><i class="glyphicon glyphicon-file"></i></a>
                                                                                    <a asp-action="Present" asp-route-id="@day_client.Id" class="btn btn-danger" title="Present or not present"><i class="glyphicon glyphicon-remove"></i></a>
                                                                                }
                                                                                else
                                                                                {
                                                                                    if (day_client.Note.Status.ToString() == "Edition")
                                                                                    {
                                                                                        <a asp-action="EditNote" asp-route-id="@day_client.Id" class="btn btn-warning" title="Edit note"><i class="glyphicon glyphicon-file"></i></a>
                                                                                        <a asp-action="Present" asp-route-id="@day_client.Id" class="btn btn-danger" title="Present or not present"><i class="glyphicon glyphicon-remove"></i></a>
                                                                                        <a asp-action="FinishEditing" class="btn btn-success" asp-route-id="@day_client.Id" title="Finish edition of note"><i class="glyphicon glyphicon-ok"></i></a>
                                                                                    }
                                                                                    else
                                                                                        if (day_client.Note.Status.ToString() == "Pending")
                                                                                    {
                                                                                        <a asp-action="EditNote" asp-route-id="@day_client.Id" class="btn btn-warning" title="Edit note"><i class="glyphicon glyphicon-file"></i></a>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        if (day_client.Note.Status.ToString() == "Approved")
                                                                                        {
                                                                                            <a asp-action="ApproveNote" asp-route-id="@day_client.Id" class="btn btn-primary" title="View of note"><i class="glyphicon glyphicon-file"></i></a>
                                                                                            <a asp-action="PrintNote" asp-route-id="@day_client.Id" class="btn btn-success" title="Print note"><i class="glyphicon glyphicon-print"></i></a>
                                                                                        }
                                                                                    }
                                                                                }
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                    else
                                                                    {
                                                                        <tr style="color:darkgrey">
                                                                            <td align="center">
                                                                                @Html.DisplayFor(modelItem => day_client.Session)
                                                                            </td>
                                                                            <td>
                                                                                @Html.DisplayFor(modelItem => day_client.Client.Name)
                                                                            </td>
                                                                            <td align="center">
                                                                                @Html.DisplayFor(modelItem => day_client.Present)
                                                                            </td>
                                                                            <td align="center">
                                                                                @if (day_client.Note == null)
                                                                                {
                                                                                    <span class="label label-danger">
                                                                                        Not Started
                                                                                    </span>
                                                                                }
                                                                                else
                                                                                {
                                                                                    if (day_client.Note.Status.ToString() == "Edition")
                                                                                    {
                                                                                        <span class="label label-default">
                                                                                            Edition
                                                                                        </span>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        if (day_client.Note.Status.ToString() == "Pending")
                                                                                        {
                                                                                            <span class="label label-info">
                                                                                                Pending
                                                                                            </span>
                                                                                        }
                                                                                        else
                                                                                        {
                                                                                            if (day_client.Note.Status.ToString() == "Approved")
                                                                                            {
                                                                                                <span class="label label-success">
                                                                                                    Approved
                                                                                                </span>
                                                                                            }
                                                                                        }
                                                                                    }
                                                                                }
                                                                            </td>
                                                                            <td align="right">
                                                                                <a asp-action="EditNote" asp-route-id="@day_client.Id" class="btn btn-warning disabled"><i class="glyphicon glyphicon-file"></i></a>
                                                                                <a asp-action="Present" asp-route-id="@day_client.Id" class="btn btn-primary" title="Present or not present"><i class="glyphicon glyphicon-ok"></i></a>
                                                                            </td>
                                                                        </tr>
                                                                    }
                                                                }
                                                        </table>
                                                    </div>*@
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => facilitator.Name)
                                                </td>
                                                <td align="center">
                                                    @facilitator.Workdays_Clients.Where(wc => (wc.Present == true && wc.Workday.Week.Id == item.Id)).Count()
                                                </td>
                                                <td align="center">
                                                    @(facilitator.Workdays_Clients.Where(wc => (wc.Present == true && wc.Workday.Week.Id == item.Id)).Count() * 16)
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Alias)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.InitDate)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.FinalDate)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.Notes)
                            </td>
                            <td align="center" style="font-weight:bold;">
                                <span class="label label-success">
                                    @Html.DisplayFor(modelItem => item.Units)
                                </span>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 100
            });
            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "WorkDays")";
                window.location.href = url + '/' + item_to_delete;
            });
        });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });

    </script>
}
