@model IList<KyoS.Web.Models.NotesSummary>
@{
    ViewData["Title"] = "Summary";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Summary of notes in edit</li>
    </ul><!--.breadcrumb-->
</div>

<p>
    <a asp-action="NotesSummaryDetails" class="btn btn-primary" title="Details of notes"><i class="glyphicon glyphicon-align-justify"></i> Details</a>
</p>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Summary of notes in edit</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-10">Facilitator</th>
                            <th class="col-md-2" style="text-align:center;">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FacilitatorName)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Editing)
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
