@model IEnumerable<KyoS.Web.Data.Entities.Workday_Client>
@{
    ViewData["Title"] = "Not Started Individual Notes";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Not Started Individual Notes</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Not started Individual Notes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1" style="text-align:center;">Date</th>
                            <th class="col-md-2" style="text-align:left;">Session</th>
                            <th class="col-md-4">Name</th>
                            <th class="col-md-1" style="text-align:center;">Present</th>
                            <th class="col-md-2" style="text-align:center;">Note Status</th>
                            <th class="col-md-2"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day_client in Model.OrderBy(dc => dc.Workday.Date).OrderBy(dc => dc.Session))
                        {
                            @if (day_client.Present)
                            {
                                <tr>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => day_client.Workday.Date)
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(modelItem => day_client.Session)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => day_client.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => day_client.Present)
                                    </td>
                                    <td align="center">
                                        <span class="label label-danger">
                                            Not Started
                                        </span>
                                    </td>
                                    <td align="right">
                                        <a asp-action="EditNote" asp-route-id="@day_client.Id" asp-route-origin="1" class="btn btn-warning" title="Edit note"><i class="glyphicon glyphicon-file"></i></a>
                                        <a asp-action="Present" asp-route-id="@day_client.Id" asp-route-origin="3" class="btn btn-danger" title="Present or not present"><i class="glyphicon glyphicon-remove"></i></a>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                <tr style="color:darkgrey">                                    
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => day_client.Workday.Date)
                                    </td>
                                    <td align="left">
                                        @Html.DisplayFor(modelItem => day_client.Session)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => day_client.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => day_client.Present)
                                    </td>
                                    <td align="center">
                                        <span class="label label-danger">
                                            Not Started
                                        </span>
                                    </td>
                                    <td align="right">
                                        <a asp-action="EditNote" asp-route-id="@day_client.Id" class="btn btn-warning disabled" title="Edit note"><i class="glyphicon glyphicon-file"></i></a>
                                        <a asp-action="Present" asp-route-id="@day_client.Id" asp-route-origin="3" class="btn btn-primary" title="Present or not present"><i class="glyphicon glyphicon-ok"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "order": [[0, "asc"]],
               "pageLength": 100
            });
            
        });
    </script>
}
