@model KyoS.Web.Models.NoteViewModel
<div class="col-md-12">
    <h4 style="font-weight:bold;"><span class="label label-info">@Model.Workday_Cient.Client.Name</span></h4>
    <a asp-action="MTPView" asp-route-id="@Model.Id" target="_blank">View of MTP</a><br />
    <a asp-action="ViewAllGoals" asp-route-idMtp="@Model.MTPId" target="_blank">View of Goals</a>
    @if (Model.Workday_Cient.Schedule != null)
    {
        <h5>Date: @Model.Workday_Cient.Workday.Date.ToShortDateString() @Model.Workday_Cient.Workday.Day , Session: @Model.Workday_Cient.Schedule.InitialTime.ToShortTimeString() @Model.Workday_Cient.Schedule.EndTime.ToShortTimeString()</h5>
    }
    else
    {
        <h5>Date: @Model.Workday_Cient.Workday.Date.ToShortDateString() @Model.Workday_Cient.Workday.Day , Session: @Model.Workday_Cient.Session</h5>
    }

    <h5>Bill Code: @Model.CodeBill</h5>
    <hr />
</div>

<div class="col-md-push-12">
    <div class="form-group col-md-3">
        <label asp-for="Title" class="control-label">Note title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Setting" class="control-label"></label>
        <br />
        @if (Model.Setting == "53")
        {
            <input type="radio" name="Setting" value="53" checked="checked" />
        }
        else
        {
            <input type="radio" name="Setting" value="53" />
        }
        <strong>53</strong>&nbsp;Client in the clinic
        &nbsp;
        &nbsp;
        <br />
        @if (Model.Setting == "02")
        {
            <input type="radio" name="Setting" value="02" checked="checked" />
        }
        else
        {
            <input type="radio" name="Setting" value="02" />
        }
        <strong>02</strong>&nbsp;Remote
    </div>
    <div class="form-group col-md-1">
        <label asp-for="CodeBill" class="control-label">Bill Code</label>
        <input asp-for="CodeBill" class="form-control" />
        <span asp-validation-for="CodeBill" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1">
        <label asp-for="TotalMinutes" class="control-label">Minutes</label>
        <textarea asp-for="TotalMinutes" class="form-control" rows="1" disabled id="lbTotalMinutes"></textarea>
        <span asp-validation-for="TotalMinutes" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1">
        <label asp-for="RealUnits" class="control-label">Units</label>
        <textarea asp-for="RealUnits" class="form-control" rows="1" disabled id="lbUnits"></textarea>
        <span asp-validation-for="RealUnits" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Dx" class="control-label">Dx: Description</label>
        <textarea asp-for="Dx" class="form-control" rows="1" disabled></textarea>
        <span asp-validation-for="Dx" class="text-danger"></span>
    </div>
    <div class="container-fluid">
        &nbsp;
    </div>
</div>
<div class="col-md-8">
    <p style="font-weight:bold;">Description of Client’s Mental Status (As evidenced by): Client.</p>
</div>
<div class="col-md-4">
    &nbsp;
</div>
<div class="col-md-8">
    <table border="1" width="100%">
        <tr>
            <td>
                <p style="font-weight:bold;">&nbsp;Orientation</p>
            </td>
            <td align="center">
                <input type="checkbox" asp-for="OrientedX3" /> OrientedX3
            </td>
            <td align="center">
                <input type="checkbox" asp-for="NotTime" /> Not Time
                <input type="checkbox" asp-for="NotPlace" /> Not Place
            </td>
            <td align="center">
                <input type="checkbox" asp-for="NotPerson" /> Not Person
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-weight:bold;">&nbsp;Insight/Judgment</p>
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Present" /> Present
                <input type="checkbox" asp-for="Adequate" /> Adequate
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Limited" /> Limited
                <input type="checkbox" asp-for="Impaired" /> Impaired
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Faulty" /> Faulty
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-weight:bold;">&nbsp;Mood/ Affect</p>
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Euthymic" /> Euthymic
                <input type="checkbox" asp-for="Congruent" /> Congruent
                <br />
                <input type="checkbox" asp-for="Negativistic" /> Negativistic
                <input type="checkbox" asp-for="Depressed" /> Depressed
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Euphoric " /> Euphoric
                <input type="checkbox" asp-for="Optimistic" /> Optimistic
                <br />
                <input type="checkbox" asp-for="Anxious" /> Anxious
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Hostile " /> Hostile
                <input type="checkbox" asp-for="Withdrawn " /> withdrawn
                <br />
                <input type="checkbox" asp-for="Irritable " /> Irritable
                <input type="checkbox" asp-for="Dramatized " /> Dramatized
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-weight:bold;">&nbsp;Attitude & Cooperation</p>
            </td>
            <td align="center">
                <input type="checkbox" asp-for="AdequateAC" /> Adequate
                <input type="checkbox" asp-for="Inadequate" /> Inadequate
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Fair" />Fair
                <input type="checkbox" asp-for="Unmotivated" /> Unmotivated
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Motivated  " /> Motivated
                <input type="checkbox" asp-for="Guarded " /> Guarded
            </td>
        </tr>
        <tr>
            <td>
                <p style="font-weight:bold;">&nbsp;Attention/Concentration</p>
            </td>
            <td align="center">
                <input type="checkbox" asp-for="Normal " /> Normal
                <input type="checkbox" asp-for="ShortSpanned" /> Short Spanned
            </td>
            <td align="center">
                <input type="checkbox" asp-for="MildlyImpaired" /> Mildly Impaired
                
            </td>
            <td align="center">
                <input type="checkbox" asp-for="SeverelyImpaired" /> Severely Impaired                
            </td>
        </tr>
    </table>
</div>
<div class="col-md-12">    
    <hr />
</div>





