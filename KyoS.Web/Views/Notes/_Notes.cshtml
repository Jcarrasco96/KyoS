@model KyoS.Web.Models.NoteViewModel
<div class="col-md-12">
    @*<hr />*@
    <h4 style="font-weight:bold;"><span class="label label-info">@Model.Workday_Cient.Client.Name</span></h4>
    <a asp-action="MTPView" asp-route-id="@Model.Id" target="_blank">View of MTP</a>
    @*<h5>Facilitator: @Model.Workday_Cient.Facilitator.Name</h5>*@
    <h5>Date: @Model.Workday_Cient.Workday.Date.ToShortDateString() Session: @Model.Workday_Cient.Workday.Day @Model.Workday_Cient.Session</h5>    
    <hr />
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-12">
        <strong>Focus of the 1st group: @Model.Topic1</strong>
        <br />
        <strong>Activity Provided: </strong>@Model.Activity1
    </div>    
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-6">
        <label asp-for="AnswerClient1" class="control-label"></label>
        <textarea asp-for="AnswerClient1" class="form-control" rows="3" id="AnswerClient1"></textarea>
        <span asp-validation-for="AnswerClient1" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label asp-for="AnswerFacilitator1" class="control-label"></label>
        <textarea asp-for="AnswerFacilitator1" class="form-control" rows="3" id="AnswerFacilitator1"></textarea>
        <span asp-validation-for="AnswerFacilitator1" class="text-danger"></span>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-6">
        <a class="btn btn-info" id="EnglishAnswerClient1">English</a>        
    </div>
    <div class="form-group col-md-6">
        <a class="btn btn-info" id="EnglishAnswerFacilitator1">English</a>        
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-2">
        <label asp-for="IdGoal1" class="control-label"></label>
        <select asp-for="IdGoal1" asp-items="Model.Goals1" class="form-control" id="cbGoal1"></select>
        <span asp-validation-for="IdGoal1" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="IdObjetive1" class="control-label"></label>
        <select asp-for="IdObjetive1" asp-items="Model.Objetives1" class="form-control" id="cbObjetive1"></select>
        <span asp-validation-for="IdObjetive1" class="text-danger"></span>
    </div>
    <div class="form-group col-md-8">
        &nbsp;
    </div>
</div>
@if (Model.Goals1.Count() == 1)
{
    <div class="col-md-12">
        <div class="alert alert-warning form-group col-md-4">
            <i class="icon-info-sign"></i>
            The client must have MTP, it is mandatory.
        </div>
        <div class="form-group col-md-4">
            &nbsp;
