@model KyoS.Web.Models.NoteViewModel
@if (Model.Schema == KyoS.Common.Enums.SchemaType.Schema1)
{
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <strong>Focus of the 1st group: @Model.Topic1</strong>
            <br />
            <strong>Activity Provided: </strong>@Model.Activity1
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <strong>Focus of the 2nd group: @Model.Topic2</strong>
            <br />
            <strong>Activity Provided: </strong>@Model.Activity2
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <strong>Focus of the 3rd group: @Model.Topic3</strong>
            <br />
            <strong>Activity Provided: </strong>@Model.Activity3
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <strong>Focus of the 4th group: @Model.Topic4</strong>
            <br />
            <strong>Activity Provided: </strong>@Model.Activity4
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-6">
            <label asp-for="AnswerClient1" class="control-label"></label>
            <textarea asp-for="AnswerClient1" class="form-control" rows="4" id="AnswerClient1"></textarea>
            <span asp-validation-for="AnswerClient1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="AnswerFacilitator1" class="control-label"></label>
            <textarea asp-for="AnswerFacilitator1" class="form-control" rows="4" id="AnswerFacilitator1"></textarea>
            <span asp-validation-for="AnswerFacilitator1" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-6">
            <a class="btn btn-info" id="EnglishAnswerClient1">English</a>
        </div>
        <div class="form-group col-md-6">
            <a class="btn btn-info" id="EnglishAnswerFacilitator1">English</a>
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-2">
            <label asp-for="IdGoal1" class="control-label"></label>
            <select asp-for="IdGoal1" asp-items="Model.Goals1" class="form-control" id="cbGoal1"></select>
            <span asp-validation-for="IdGoal1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="IdObjetive1" class="control-label"></label>
            <select asp-for="IdObjetive1" asp-items="Model.Objetives1" class="form-control" id="cbObjetive1"></select>
            <span asp-validation-for="IdObjetive1" class="text-danger"></span>
        </div>
        <div class="form-group col-md-8">
            <label class="control-label">Intervention</label>            
            <br />
            <label id="lbIntervention1" style="font-weight:normal">@Model.Intervention1</label>
        </div>
    </div>
    @if (Model.Goals1.Count() == 1)
    {
        <div class="col-md-12">
            <div class="alert alert-warning form-group col-md-4">
                <i class="icon-info-sign"></i>
                The client must have MTP, it is mandatory.
            </div>
            <div class="form-group col-md-4">
                &nbsp;
            </div>
        </div>
    }
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <label asp-for="PlanNote" class="control-label"></label>
            <textarea asp-for="PlanNote" class="form-control" rows="3" id="PlanNote"></textarea>
            <span asp-validation-for="PlanNote" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-push-12">
        <div class="form-group col-md-12">
            <a class="btn btn-info" id="EnglishPlanNote">English</a>
        </div>
    </div>
    //si se va a crear la nota doy la posibilidad de seleccionar el avance del plan para que despues se agregue al futuro plan
    @if (@Model.Workday_Cient.Note == null)
    {
        <div class="col-md-push-12">
            <div class="form-group col-md-12">
                <label style="font-weight: bold;">Update of progress toward meeting goals and objectives on treatment plan (check only one)</label>
                <br />
                <input type="radio" name="Progress" value="SignificantProgress" />
                Significant progress
                &nbsp;&nbsp;
                <input type="radio" name="Progress" value="ModerateProgress" />
                Moderate progress
                &nbsp;&nbsp;
                <input type="radio" name="Progress" value="MinimalProgress" checked="checked" />
                Minimal progress
                &nbsp;&nbsp;
                <input type="radio" name="Progress" value="NoProgress" />
                No Progress
                <br />
                <input type="radio" name="Progress" value="Regression" />
                Regression
                &nbsp;&nbsp;
                <input type="radio" name="Progress" value="Decompensating" />
                Decompensating
                &nbsp;&nbsp;
                <input type="radio" name="Progress" value="Unable" />
                Unable to determine at this time
            </div>
        </div>
    }
    <div class="col-md-12">
        <hr />
    </div>
}
