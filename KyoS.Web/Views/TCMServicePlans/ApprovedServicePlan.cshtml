@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanEntity>
@{
    ViewData["Title"] = "TCM Service Plan Approved";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">TCM Service Plan Approved</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Service Plan Approved</h3>
            </div>
            <div class="panel-body" id="view-tcmServicePlan">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-1" >
                                Case
                            </th>
                            <th class="col-md-3">
                                Name Client
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Casemanager
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Service Plan Date
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Approved
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    @if (item.TCMDomain.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    else
                                    {

                                    }
                                    <div style="display:none">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <th class="col-md-1"></th>
                                                <th class="col-md-1" style="text-align:center">Domain Code</th>
                                                <th class="col-md-2">Domain Name</th>
                                                <th class="col-md-7">Need Identified</th>
                                                <th class="col-md-1" style="text-align:center">Date Identified</th>
                                            </tr>
                                            @foreach (var product in item.TCMDomain)
                                            {
                                                @if (product.Origin == "Service Plan")
                                                { 
                                                    <tr>
                                                        <td align="center">
                                                            @if (product.TCMObjetive.Count() != 0)
                                                            {
                                                                <a class="icon-plus-sign-alt"></a>
                                                            }
                                                            else
                                                            {

                                                            }
                                                            <div style="display:none">
                                                                <table class="table table-striped table-bordered">
                                                                    <tr>
                                                                        <th class="col-md-1" style="text-align:center">Objective</th>
                                                                        <th class="col-md-7">Task</th>
                                                                        <th class="col-md-1" style="text-align:center">Start Date</th>
                                                                        <th class="col-md-1" style="text-align:center">Target Date</th>
                                                                        <th class="col-md-1" style="text-align:center">End Date</th>
                                                                    </tr>
                                                                    @foreach (var product1 in product.TCMObjetive)
                                                                    {
                                                                        @if (product1.Origin == "Service Plan")
                                                                        {
                                                                            <tr>
                                                                                <td align="center">@Html.DisplayFor(modelItem => product1.IdObjetive)</td>
                                                                                <td>@Html.DisplayFor(modelItem => product1.Task)</td>
                                                                                <td align="center">@Html.DisplayFor(modelItem => product1.StartDate)</td>
                                                                                <td align="center">@Html.DisplayFor(modelItem => product1.TargetDate)</td>
                                                                                <td align="center">@Html.DisplayFor(modelItem => product1.EndDate)</td>
                                                                            </tr>

                                                                        }

                                                                    }
                                                                </table>
                                                            </div>
                                                        </td>
                                                        <td align="center">@Html.DisplayFor(modelItem => product.Code)</td>
                                                        <td>@Html.DisplayFor(modelItem => product.Name)</td>
                                                        <td>@Html.DisplayFor(modelItem => product.NeedsIdentified)</td>
                                                        <td align="center">@Html.DisplayFor(modelItem => product.DateIdentified)</td>
                                                    </tr>
                                                }
                                                    
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td >
                                    @if (item.TcmClient.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            @Html.DisplayFor(modelItem => item.TcmClient.CaseNumber)
                                        </span>
                                    }
                                    @if (item.TcmClient.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            @Html.DisplayFor(modelItem => item.TcmClient.CaseNumber)
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (item.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.TcmClient.Client.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.TcmClient.Casemanager.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DateServicePlan)
                                </td>
                                <td align="center">
                                    @if (item.Approved == 2)
                                    {
                                        <span class="label label-success">
                                            Approved
                                        </span>
                                    }
                                    @if (item.Approved == 1)
                                    {
                                        <span class="label label-info">
                                            Pending
                                        </span>
                                    }
                                    @if (item.Approved == 0)
                                    {
                                        <span class="label label-warning">
                                            Edition
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    @if (item.Approved == 2)
                                    {
                                        <a asp-action="PrintServicePlan" asp-route-id="@item.Id" class="btn btn-success"><i class="glyphicon glyphicon-print"></i></a>
                                    }
                                    else
                                    {
                                        <a asp-action="PrintServicePlan" asp-route-id="@item.Id" class="btn btn-success disabled"><i class="glyphicon glyphicon-print"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "pageLength": 100
            });

            // Delete item
            $(function () {

                //Assign Click event to Plus Image.
                $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                    $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                    $(this).attr("class", "icon-minus-sign-alt");
                });
                //Assign Click event to Minus Image.
                $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                    $(this).attr("class", "icon-plus-sign-alt");
                    $(this).closest("tr").next().remove();
                });
            });

        });
    </script>
}

