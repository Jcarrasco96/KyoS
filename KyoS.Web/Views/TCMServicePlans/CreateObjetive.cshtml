@model KyoS.Web.Models.TCMObjetiveViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateObjetive" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTCMAdendum(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Origin" />
            <input type="hidden" asp-for="Id_Domain" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="CreatedBy" />
            <div class="">
                <div class="form-group col-md-3">
                    <b>Service code:</b>
                    <i>@Html.DisplayFor(modelItem => Model.TcmDomain.Code)</i>
                </div>
                <div class="form-group col-md-9">
                    <b>Service name:</b>
                    <i>@Html.DisplayFor(modelItem => Model.TcmDomain.Name)</i>
                </div>
            </div>

            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="ID_Objetive" class="control-label">Objetive Number</label>&nbsp;*
                    <input asp-for="ID_Objetive" class="form-control" readonly />
                    <span asp-validation-for="ID_Objetive" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Start_Date" class="control-label">Start Date</label>&nbsp;*
                    <input asp-for="Start_Date" class="form-control" />
                    <span asp-validation-for="Start_Date" class="text-danger"></span>
                </div>
            </div>
            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="Target_Date" class="control-label"></label>&nbsp;
                    <input asp-for="Target_Date" class="form-control" />
                    <span asp-validation-for="Target_Date" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="End_Date" class="control-label">End date</label>&nbsp;
                    <input asp-for="End_Date" class="form-control" />
                    <span asp-validation-for="End_Date" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Id_Stage" class="control-label">Stages</label>&nbsp;*
                    <select asp-for="Id_Stage" asp-items="Model.Stages" class="form-control" id="Code_Name" onchange="getCode();"></select>
                    <span asp-validation-for="Id_Stage" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="name" class="control-label">Name</label>&nbsp;*
                    <input asp-for="name" id="GetName" class="form-control" readonly />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="descriptionStages" class="control-label">Description</label>
                    <textarea asp-for="descriptionStages" id="lbDescription" class="form-control" rows="4" readonly />
                    <span asp-validation-for="descriptionStages" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="task" class="control-label">Task/Case Management Strategy</label>&nbsp;*
                    <textarea asp-for="task" class="form-control" />
                    <span asp-validation-for="task" class="text-danger"></span>
                </div>
            </div> <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Responsible" class="control-label">Responsible Provider and Resources</label>&nbsp;*
                    <textarea asp-for="Responsible" class="form-control" />
                    <span asp-validation-for="Responsible" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
            <div>
                <div class="col-md-offset-9">
                    @if (Model.Origin == 0) //viene de la pagina Index de las notas
                    {
                        <input type="submit" value="Submit" class="btn btn-primary" asp-all-route-id="model.tCMservice.Id" asp-route-Origin="0" />

                    }
                    @if (Model.Origin == 1) //viene de la pagina Index de las notas
                    {
                        <input type="submit" value="Submit" class="btn btn-primary" asp-all-route-id="model.tCMservice.Id" asp-route-Origin="1" />

                    }

                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function getCode() {
        var x = document.getElementById('Code_Name');
        var y = x.options[x.selectedIndex].text;
        var value = x.options[x.selectedIndex];
        if (y[0] != '[') {
            var name = "";
            for (var i = 0; i < y.length; i++) {
                name = name + y[i];
            }
            document.getElementById('GetName').value = name;

            var url = "@Url.Action("GetDescriptionStage", "TCMServicePlans")";
            $.get(url, { idStage: $("#Code_Name").val() }, function (data) {$("#lbDescription").text(data);});
        }
        else {
            document.getElementById('GetName').value = "";
            var url = "@Url.Action("GetDescriptionStage", "TCMServicePlans")";
            $.get(url, { idStage: 0 }, function (data) {$("#lbDescription").text(data);});
        }
    }
</script>






