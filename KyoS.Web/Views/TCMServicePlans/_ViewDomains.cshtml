@model IEnumerable<KyoS.Web.Data.Entities.TCMDomainEntity>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Domains</h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-responsive table-striped" id="MyTable">
            <thead>
                <tr>
                    <th class="col-md-1">

                    </th>
                    <th class="col-md-1" style="text-align:center;">
                        Code
                    </th>
                    <th class="col-md-2" style="text-align:left;">
                        Name
                    </th>
                    <th class="col-md-5" style="text-align:left;">
                        Needs Identified
                    </th>
                    <th class="col-md-1" style="text-align:center;">
                        Date
                    </th>
                    <th class="col-md-2" style="text-align:center;">

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    @if (item.Origin == "Service Plan")
                    {
                        <tr>
                            <td align="center">
                                @if (item.TCMObjetive.Count() != 0)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                else
                                {

                                }
                                <div style="display:none">
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th class="col-md-1" style="text-align:center">Objective</th>
                                            <th class="col-md-7" style="text-align:left">Task</th>
                                            <th class="col-md-1" style="text-align:center">Start Date</th>
                                            <th class="col-md-1" style="text-align:center">Target Date</th>
                                            <th class="col-md-1" style="text-align:center">End Date</th>
                                            <th class="col-md-1" style="text-align:center"></th>
                                        </tr>
                                        @foreach (var value in item.TCMObjetive)
                                        {
                                            @if (value.Origin == "Service Plan")
                                            {
                                                <tr>
                                                    <td align="center">@Html.DisplayFor(modelItem => value.IdObjetive)</td>
                                                    <td align="left">@Html.DisplayFor(modelItem => value.Task)</td>
                                                    <td align="center">@Html.DisplayFor(modelItem => value.StartDate)</td>
                                                    <td align="center">@Html.DisplayFor(modelItem => value.TargetDate)</td>
                                                    <td align="center">@Html.DisplayFor(modelItem => value.EndDate)</td>
                                                    <td align="center">
                                                        <a onclick="showInPopup('@Url.Action("EditObjetive", "TCMServicePlans", new { id = value.Id, origi = 0 }, Context.Request.Scheme)','Edit TCM Objetive')" class="btn btn-warning" title="Edit TCM Objective"><i class="glyphicon glyphicon-pencil"></i></a>
                                                        <a asp-action="DeleteObjetive" asp-route-id="@value.Id" asp-route-origin="1" class="btn btn-danger"><i class="glyphicon glyphicon-trash" title="Delete TCM objective"></i></a>
                                                    </td>
                                                </tr>
                                            }

                                        }
                                    </table>
                                </div>
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.NeedsIdentified)
                            </td>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.DateIdentified)
                            </td>
                            <td align="center">
                                @*<a asp-action="EditGoal" asp-route-id="@item.Id" class="btn btn-warning" title="Edit Goal"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                <a onclick="showInPopup('@Url.Action("EditDomain", "TCMServicePlans", new { id = item.Id, origi = 0 }, Context.Request.Scheme)','Edit TCM Domain')" class="btn btn-warning" title="Edit TCM Domain"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a onclick="showInPopup('@Url.Action("CreateObjetive", "TCMServicePlans", new { id = @item.Id, origin = 0 }, Context.Request.Scheme)','Create TCM Objetive')" class="btn btn-info" title="Create TCM Objective"><i class="glyphicon glyphicon-plus"></i></a>
                                <a asp-action="DeleteDomain" asp-route-id="@item.Id" asp-route-origin="0" class="btn btn-danger"><i class="glyphicon glyphicon-trash" title="Delete Domain"></i></a>
                                @*<button type="button" data-id="@item.Id" data-origin="1" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" title="Delete goal"><i class="glyphicon glyphicon-trash"></i></button>*@
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>