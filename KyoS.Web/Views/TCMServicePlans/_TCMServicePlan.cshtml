@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanEntity>

@if (Model != null)
{
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM service Plan
                </strong>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Service Plan</h3>
            </div>
            <div class="panel-body" id="view-tcmServicePlan">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-3" align="center">
                                Name
                            </th>
                            <th class="col-md-2" align="center">
                                Case number
                            </th>
                            <th class="col-md-2" align="center">
                                Casemanager
                            </th>
                            <th class="col-md-2" align="center">
                                Services Plan Date
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    @if (item.TCMDomain.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    else
                                    {

                                    }
                                    <div style="display:none">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <th class="col-md-1"></th>
                                                <th class="col-md-1">Domain Code</th>
                                                <th class="col-md-2">Domain Name</th>
                                                <th class="col-md-5">Need Identified</th>
                                                <th class="col-md-1">Date Identified</th>
                                                <th class="col-md-2"></th>
                                            </tr>
                                            @foreach (var product in item.TCMDomain)
                                            {
                                                <tr>
                                                    <td align="center">
                                                        @if (product.TCMObjetive.Count() != 0)
                                                        {
                                                            <a class="icon-plus-sign-alt"></a>
                                                        }
                                                        else
                                                        {

                                                        }
                                                        <div style="display:none">
                                                            <table class="table table-striped table-bordered">
                                                                <tr>
                                                                    <th class="col-md-2">Objetive Number</th>
                                                                    <th class="col-md-3">Objetive Name</th>
                                                                    <th class="col-md-2">Start Date</th>
                                                                    <th class="col-md-2">Target Date</th>
                                                                    <th class="col-md-2"></th>
                                                                </tr>
                                                                @foreach (var product1 in product.TCMObjetive)
                                                                {
                                                                    <tr>
                                                                        <td>@Html.DisplayFor(modelItem => product1.IdObjetive)</td>
                                                                        <td>@Html.DisplayFor(modelItem => product1.Name)</td>
                                                                        <td>@Html.DisplayFor(modelItem => product1.StartDate)</td>
                                                                        <td>@Html.DisplayFor(modelItem => product1.TargetDate)</td>
                                                                        <td>
                                                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("CaseManager"))
                                                                            {
                                                                                @if (item.Approved == 0)
                                                                                {
                                                                                    <a onclick="showInPopup('@Url.Action("EditObjetive", "TCMServicePlans", new { id = product1.Id, Origin = 0}, Context.Request.Scheme)','Edit TCM Objetive')" class="btn btn-warning" title="Edit TCM Objective"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                                }
                                                                            }
                                                                        </td>
                                                                    </tr>
                                                                    @* cant_unit = cant_unit + product.Units;*@
                                                                }
                                                            </table>
                                                        </div>
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => product.Code)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.NeedsIdentified)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.DateIdentified)</td>
                                                    <td>
                                                        @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("CaseManager"))
                                                        {
                                                            @if (item.Approved == 0)
                                                            {
                                                                <a onclick="showInPopup('@Url.Action("EditDomain", "TCMServicePlans", new { id = product.Id }, Context.Request.Scheme)','Edit TCM Domain')" class="btn btn-warning" title="Edit TCM Domain"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                <a onclick="showInPopup('@Url.Action("CreateObjetive", "TCMServicePlans", new { id = product.Id, Origin = 0}, Context.Request.Scheme)','Create TCM Objetive')" class="btn btn-info" title="Create TCM Objective"><i class="glyphicon glyphicon-align-justify"></i></a>
                                                            }
                                                        }
                                                    </td>
                                                </tr>
                                                @* cant_unit = cant_unit + product.Units;*@
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.Client.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.CaseNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmClient.Casemanager.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateServicePlan)
                                </td>
                                <td align="right">
                                   @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("CaseManager"))
                                    {
                                       @if (item.Approved == 0)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit TCM Service Plan"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a onclick="showInPopup('@Url.Action("CreateDomain", "TCMServiceplans", new { id = item.Id }, Context.Request.Scheme)','Create TCM Domain')" class="btn btn-info" title="Create TCM Domain"><i class="glyphicon glyphicon-align-justify"></i></a>
                                            <a asp-action="FinishEditing" asp-route-id="@item.Id" class="btn btn-success" title="Finish Editing TCM Service Plan"><i class="glyphicon glyphicon-ok"></i></a>
                                        }
                                       @if (item.Approved == 1)
                                        {
                                            <i title="In Review" class="btn btn-warning glyphicon glyphicon-search"></i>
                                        }
                                       @if (item.Approved == 2)
                                        {
                                            <i title="Approved" class="btn btn-success glyphicon glyphicon-flag"></i>
                                        }
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

