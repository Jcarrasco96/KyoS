@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanEntity>

@if (Model != null)
{
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM Service Plan
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Service Plan</h3>
            </div>
            <div class="panel-body" id="view-tcmServicePlan">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-3" align="center">
                                Name
                            </th>
                            <th class="col-md-2" align="center">
                                Case number
                            </th>
                            <th class="col-md-2" align="center">
                                Casemanager
                            </th>
                            <th class="col-md-2" align="center">
                                Services Plan Date
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td align="center">
                                @if (item.TCMDomain.Count() != 0)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                else
                                {

                                }
                                <div style="display:none">
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th class="col-md-1"></th>
                                            <th class="col-md-1">Domain Code</th>
                                            <th class="col-md-2">Domain Name</th>
                                            <th class="col-md-5">Need Identified</th>
                                            <th class="col-md-1">Date Identified</th>
                                            <th class="col-md-2"></th>
                                        </tr>
                                        @foreach (var product in item.TCMDomain)
                                        {
                                    <tr>
                                        <td align="center">
                                            @if (product.TCMObjetive.Count() != 0)
                                            {
                                                <a class="icon-plus-sign-alt"></a>
                                            }
                                            else
                                            {

                                            }
                                            <div style="display:none">
                                                <table class="table table-striped table-bordered">
                                                    <tr>
                                                        <th class="col-md-3">Objetive Number</th>
                                                        <th class="col-md-4">Start Date</th>
                                                        <th class="col-md-4">Target Date</th>
                                                        <th class="col-md-2"></th>
                                                    </tr>
                                                    @foreach (var product1 in product.TCMObjetive)
                                                    {
                                                        <tr>
                                                            <td>@Html.DisplayFor(modelItem => product1.IdObjetive)</td>
                                                            <td>@Html.DisplayFor(modelItem => product1.StartDate)</td>
                                                            <td>@Html.DisplayFor(modelItem => product1.TargetDate)</td>
                                                            <td>
                                                                <a onclick="showInPopup('@Url.Action("Edit", "TCMObjetives", new { id = product1.Id }, Context.Request.Scheme)','Edit TCM Objetive')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                                            </td>
                                                        </tr>
                                                        @* cant_unit = cant_unit + product.Units;*@
                                                    }
                                                </table>
                                            </div>
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => product.Code)</td>
                                        <td>@Html.DisplayFor(modelItem => product.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => product.NeedsIdentified)</td>
                                        <td>@Html.DisplayFor(modelItem => product.DateIdentified)</td>
                                        <td>
                                            <a onclick="showInPopup('@Url.Action("Edit", "TCMDomains", new { id = product.Id }, Context.Request.Scheme)','Edit TCM Domain')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a onclick="showInPopup('@Url.Action("Create", "TCMObjetives", new { id = product.Id }, Context.Request.Scheme)','Create TCM Objetive')" class="btn btn-info" title="Create"><i class="glyphicon glyphicon-align-justify"></i></a>
                                        </td>
                                    </tr>
                                           @* cant_unit = cant_unit + product.Units;*@
                                        }
                                    </table>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmClient.Client.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmClient.CaseNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmClient.Casemanager.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateServicePlan)
                            </td>


                            <td align="right">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                <a onclick="showInPopup('@Url.Action("Create", "TCMDomains", new { id = item.Id }, Context.Request.Scheme)','Create TCM Domain')" class="btn btn-info" title="Create TCM Domain"><i class="glyphicon glyphicon-align-justify"></i></a>
                                <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}


