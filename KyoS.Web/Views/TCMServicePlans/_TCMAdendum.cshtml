@model IEnumerable<KyoS.Web.Data.Entities.TCMAdendumEntity>

@if (Model != null)
{
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM Adendum
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Adendum</h3>
            </div>
            <div class="panel-body" id="view-tcmAdendum">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1" align="center">
                                
                            </th>
                            <th class="col-md-3" align="center">
                                Name
                            </th>
                            <th class="col-md-2" align="center">
                                Case number
                            </th>
                            <th class="col-md-2" align="center">
                                Casemanager
                            </th>
                            <th class="col-md-2" align="center">
                                Adendum Date
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                        <tr>
                            <td align="center">
                                @if (item.TcmDomain != null)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                else
                                {

                                }
                                <div style="display:none">
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th class="col-md-1"></th>
                                            <th class="col-md-1">Domain Code</th>
                                            <th class="col-md-4">Domain Name</th>
                                            <th class="col-md-4">Need Identified</th>
                                            <th class="col-md-2"></th>
                                        </tr>
                                        <tr>
                                            <td align="center">
                                               @if (item.TcmDomain.TCMObjetive.Count() != 0)
                                                {
                                                    <a class="icon-plus-sign-alt"></a>
                                                }
                                                else
                                                {

                                                }
                                                <div style="display:none">
                                                    <table class="table table-striped table-bordered">
                                                        <tr>
                                                            <th class="col-md-2">Objetive Number</th>
                                                            <th class="col-md-3">Objetive Name</th>
                                                            <th class="col-md-3">Start Date</th>
                                                            <th class="col-md-2">Target Date</th>
                                                            <th class="col-md-2"></th>
                                                        </tr>
                                                       @foreach (var product in item.TcmDomain.TCMObjetive)
                                                        {
                                                            <tr>
                                                                <td>@Html.DisplayFor(modelItem => product.IdObjetive)</td>
                                                                <td>@Html.DisplayFor(modelItem => product.Name)</td>
                                                                <td>@Html.DisplayFor(modelItem => product.StartDate)</td>
                                                                <td>@Html.DisplayFor(modelItem => product.TargetDate)</td>
                                                                <td>
                                                                   @if (item.TcmServicePlan.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("CaseManager"))
                                                                    {
                                                                       @if (item.Approved == 0)
                                                                        {
                                                                            <a onclick="showInPopup('@Url.Action("EditObjetive", "TCMServicePlans", new { id = product.Id, Origin = 1 }, Context.Request.Scheme)','Edit TCM Objetive')" class="btn btn-warning" title="Edit objetive"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                        }
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </table>
                                                </div>
                                            </td>
                                            <td>@Html.DisplayFor(modelItem => item.TcmDomain.Code)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TcmDomain.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TcmDomain.NeedsIdentified)</td>
                                            <td>
                                               @if (User.IsInRole("CaseManager") && item.Approved == 0)
                                                {
                                                    <a onclick="showInPopup('@Url.Action("EditDomain", "TCMServicePlans", new { id = item.TcmDomain.Id, Origin = 1}, Context.Request.Scheme)','Edit TCM Domain')" class="btn btn-warning" title="Edit domain"><i class="glyphicon glyphicon-pencil"></i></a>
                                                    <a onclick="showInPopup('@Url.Action("CreateObjetive", "TCMServicePlans", new { id = item.TcmDomain.Id, Origin = 1 }, Context.Request.Scheme)','Create TCM Objetive')" class="btn btn-info" title="Create objetive"><i class="glyphicon glyphicon-align-justify"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Client.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.CaseNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Casemanager.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateAdendum)
                            </td>
                            <td align="right">
                               @if (User.IsInRole("CaseManager") && item.TcmServicePlan.Status == KyoS.Common.Enums.StatusType.Open)
                                {
                                   @if (item.Approved == 0)
                                    {
                                       <a onclick="showInPopup('@Url.Action("Edit", "TCMAdendums", new { id = item.Id }, Context.Request.Scheme)','Edit TCM Adendum')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                       <a asp-action="FinishEditingAdendum" asp-route-id="@item.Id" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></a>
                                    }
                                   @if (item.Approved == 1)
                                    {
                                       <i class="btn btn-warning glyphicon glyphicon-search"></i>
                                    }
                                   @if (item.Approved == 2)
                                    {
                                       <i class="btn btn-success glyphicon glyphicon-flag"></i>
                                    }
                                }
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}


