@model KyoS.Web.Models.Bio_BehavioralHistoryViewModel

<div class="col-md-6">
    <dl class="dl-horizontal">
        <dt>
            Cliente:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Name)
        </dd>
        <dt>
            Clinic:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Client.Clinic.Name)
        </dd>


    </dl>
</div>
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Behavioral Health History List</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <thead>
                    <tr>
                        <th class="col-md-3">
                            @Html.DisplayNameFor(model => model.Problem)
                        </th>
                        <th class="col-md-2">
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Client.List_BehavioralHistory)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Problem)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-3">
        <label asp-for="Problem" class="control-label">Drug Name</label>&nbsp;*
        <input asp-for="Problem" class="form-control" />
        <span asp-validation-for="Problem" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Date" class="control-label"></label>&nbsp;*
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    
</div>
<div class="col-md-12">
    &nbsp;
</div>


