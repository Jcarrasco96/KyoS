@model KyoS.Web.Models.Bio_BehavioralHistoryViewModel


<div class="col-md-12">
    <div class="col-md-3">
        <label asp-for="Client.Name" class="control-label">Client Name</label>
        <input asp-for="Client.Name" class="form-control" readonly />
        <span asp-validation-for="Client.Name" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label asp-for="Client.Code" class="control-label"></label>
        <input asp-for="Client.Code" class="form-control" readonly />
        <span asp-validation-for="Client.Code" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Problem" class="control-label">Drug Name</label>&nbsp;*
        <input asp-for="Problem" class="form-control" />
        <span asp-validation-for="Problem" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Date" class="control-label"></label>&nbsp;*
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span><br />
    </div>
</div>
<div class="col-md-12">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Behavioral Health History List</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-8">
                                @Html.DisplayNameFor(model => model.Problem)
                            </th>
                            <th class="col-md-2">
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th class="col-md-2" style="text-align:center;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model.Client.List_BehavioralHistory)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Problem)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td align="center">
                                    <a asp-action="EditBehavioral" asp-route-id="@item.Id" class="btn btn-warning" title="Add Problem"><i class="glyphicon glyphicon-pencil"></i></a>
                                   @if (Model.Id == 0)
                                    {
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" title="Delete Problem"><i class="glyphicon glyphicon-trash"></i></button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    &nbsp;
</div>

