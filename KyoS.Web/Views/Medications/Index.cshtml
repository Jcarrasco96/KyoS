@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Medication";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Medication List</li>
    </ul><!--.breadcrumb-->
</div>

<p>
    <a asp-action="MedicationCandidates" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Candidate Medication</a>
</p>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the Medication List
                </strong>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Medication List</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">
                            </th>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-2">
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Status
                            </th>
                            
                            <th class="col-md-2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                        <tr>
                            <td align="center">
                                @if (item.MedicationList.Count() != 0)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                else
                                {

                                }
                                <div style="display:none">
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th class="col-md-3">Drug Name</th>
                                            <th class="col-md-2">Dosage</th>
                                            <th class="col-md-2">Frequency</th>
                                            <th class="col-md-3">Precriber</th>
                                            <th class="col-md-2"></th>
                                        </tr>
                                        @foreach (var product1 in item.MedicationList)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => product1.Name)</td>
                                                <td>@Html.DisplayFor(modelItem => product1.Dosage)</td>
                                                <td>@Html.DisplayFor(modelItem => product1.Frequency)</td>
                                                <td>@Html.DisplayFor(modelItem => product1.Prescriber)</td>
                                                <td>
                                                   @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Mannager"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@product1.Id" class="btn btn-warning" title="Add Medication"><i class="glyphicon glyphicon-pencil"></i></a>
                                                    }
                                                </td>
                                            </tr>
                                            @* cant_unit = cant_unit + product.Units;*@
                                        }
                                    </table>
                                </div>
                            </td>
                            <td>
                                @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                {
                                    <i class="glyphicon glyphicon-user btn-danger"></i>
                                }
                                @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                {
                                    <i class="glyphicon glyphicon-user btn-primary"></i>
                                }
                                &nbsp;
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td align="center">
                                @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                {
                                    <span class="label label-success">
                                        Open
                                    </span>
                                }
                                @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                {
                                    <span class="label label-default">
                                        Close
                                    </span>
                                }
                            </td>
                            <td align="right">
                                @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Mannager"))
                                {
                                    <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary" title="Add Medication"><i class="glyphicon glyphicon-plus"></i></a>
                                }
                                </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
         $(document).ready(function () {
              $('#MyTable').DataTable({
                  "order": [[0, "asc"]],
                   "pageLength": 100
              });

             // Delete item
             var item_to_delete;
             $('.deleteItem').click((e) => {
                 item_to_delete = e.currentTarget.dataset.dataset.id;
             });

             $("#btnYesDelete").click(function () {
             var url = "@Url.Action("Delete", "Medications")";
                 window.location.href = url + '/' + item_to_delete;
             });
         });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
    </script>
}

