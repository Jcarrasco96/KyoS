@model KyoS.Web.Models.FarsFormViewModel
@{
    ViewData["Title"] = "Create Fars Form";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />    
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @if (ViewData["Origin"].ToString() == "0")
                {
                    @Html.ActionLink("Index", "Index", "FarsForms")
                }
                @if (ViewData["Origin"].ToString() == "1")
                {
                    @Html.ActionLink("Clients without initial FARS", "ClientswithoutInitialFARS", "FarsForms")
                }
                @if (ViewData["Origin"].ToString() == "2")
                {
                    @Html.ActionLink("Clients without FARS", "ClientswithoutFARS", "FarsForms")
                }
            </li>
            <li class="active">Create Fars Form</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Create Fars Form</h4>
    <hr />
    <div class="row">       
        <form asp-action="Create" asp-route-id="@Model.Id" asp-route-origin="@ViewData["Origin"]" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdClient" />
            <input type="hidden" asp-for="AdmissionedFor" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="LastModifiedBy" />
            <input type="hidden" asp-for="LastModifiedOn" />
            <partial name="_FarsForms" />
            <div class="form-group col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                @if (ViewData["Origin"].ToString() == "0")
                {
                    <a asp-action="Index" class="btn btn-success">Back</a>
                }
                @if (ViewData["Origin"].ToString() == "1")
                {
                    <a asp-action="ClientswithoutInitialFARS" class="btn btn-success">Back</a>
                }
                @if (ViewData["Origin"].ToString() == "2")
                {
                    <a asp-action="ClientswithoutFARS" class="btn btn-success">Back</a>
                }
            </div>
        </form>       
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

    </script>
}

