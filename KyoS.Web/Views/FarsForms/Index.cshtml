@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
    @{
        ViewData["Title"] = "Fars Forms";
    }
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Dashboard", "Index", "Desktop")
            </li>
            <li class="active">Fars Forms</li>
        </ul><!--.breadcrumb-->
    </div>
    <div class="row">
        <div class="col-md-12">
            @*<div class="alert alert-warning" role="alert">
        <span class="sr-only"></span>*@
            <strong>Note: </strong> All clients will be displayed, orange color means the client has not fars
            @*</div>*@
        </div>
        <div class="col-md-12">
            &nbsp;
        </div>
        <div class="col-md-12">
            @if (ViewBag.Delete == "N")
            {
                <div class="alert alert-block alert-danger">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <strong class="red">
                        Error. It is not posible delete the farsForm
                    </strong>
                </div>
            }
        </div>
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Fars Forms</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th class="col-md-1">
                                </th>
                                <th class="col-md-4">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th class="col-md-2" style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th class="col-md-2" style="text-align:center;">
                                    Status
                                </th>
                                <th class="col-md-2" style="text-align:center;">
                                    MH Therapy
                                </th>
                                <th class="col-md-2" align="right">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.FarsFormList.Count() > 0)
                                {
                                    <tr>
                                        <td align="center">
                                            @if (item.FarsFormList.Count() != 0)
                                            {
                                                <a class="icon-plus-sign-alt"></a>
                                            }
                                            else
                                            {

                                            }
                                            <div style="display:none">
                                                <table class="table table-striped table-bordered">
                                                    <tr>
                                                        <th class="col-md-2" style="text-align:center">Evaluation Date</th>
                                                        <th class="col-md-8">Admissioned for</th>
                                                        <th class="col-md-2"></th>
                                                    </tr>
                                                    @foreach (var element in item.FarsFormList)
                                                    {
                                                        <tr>
                                                            <td align="center">@Html.DisplayFor(modelItem => element.EvaluationDate)</td>
                                                            <td>@Html.DisplayFor(modelItem => element.AdmissionedFor)</td>
                                                            <td align="center">
                                                                @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Mannager"))
                                                                {
                                                                    <a asp-action="Edit" asp-route-id="@element.Id" class="btn btn-success" title="New Fars Form"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                    <a asp-action="PrintFarsForm" asp-route-id="@element.Id" class="btn btn-success" title="Print Fars Form" target="_blank"><i class="glyphicon glyphicon-print"></i></a>
                                                                    <button data-id="@element.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" title="Delete Fars Form"><i class="glyphicon glyphicon-trash"></i></button>
                                                                }
                                                            </td>
                                                        </tr>
                                                        @* cant_unit = cant_unit + product.Units;*@
                                                    }
                                                </table>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                            {
                                                <i class="glyphicon glyphicon-user btn-danger"></i>
                                            }
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                            {
                                                <i class="glyphicon glyphicon-user btn-primary"></i>
                                            }
                                            &nbsp;
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td align="center">
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                            {
                                                <span class="label label-success">
                                                    Open
                                                </span>
                                            }
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                            {
                                                <span class="label label-default">
                                                    Close
                                                </span>
                                            }
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Service)
                                        </td>
                                        <td align="right">
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Mannager"))
                                            {
                                                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary" title="Create Fars Form"><i class="glyphicon glyphicon-plus"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    <tr style="color:orange">
                                        <td align="center">
                                            &nbsp;
                                        </td>
                                        <td>
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                            {
                                                <i class="glyphicon glyphicon-user btn-danger"></i>
                                            }
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                            {
                                                <i class="glyphicon glyphicon-user btn-primary"></i>
                                            }
                                            &nbsp;
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td align="center">
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                            {
                                                <span class="label label-warning">
                                                    Open
                                                </span>
                                            }
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                            {
                                                <span class="label label-default">
                                                    Close
                                                </span>
                                            }
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Service)
                                        </td>
                                        <td align="right">
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Mannager"))
                                            {
                                                <a asp-action="Create" asp-route-id="@item.Id" class="btn btn-warning" title="New Fars Form"><i class="glyphicon glyphicon-plus"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <partial name="_DeleteDialog" />

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/jquery.dataTables.min.js"></script>

        <script type="text/javascript">
         $(document).ready(function () {
              $('#MyTable').DataTable({
                  "order": [[0, "asc"]],
                   "pageLength": 100
              });

             // Delete item
             var item_to_delete;
             $('.deleteItem').click((e) => {
                 item_to_delete = e.currentTarget.dataset.dataset.id;
             });

             $("#btnYesDelete").click(function () {
             var url = "@Url.Action("Delete", "FarsForms")";
                 window.location.href = url + '/' + item_to_delete;
             });
         });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
        </script>
    }

