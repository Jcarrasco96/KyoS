@model KyoS.Web.Models.IncidentReportViewModel
@{
    ViewData["Title"] = "Edit Incident";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("All Incident Report", "Index", "Incident Report")
            </li>
            <li class="active">Edit Incident Report</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Edit Incident Report</h4>
    <hr />
    <div class="row">
        <form asp-action="Edit" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdClient" />
            <input type="hidden" asp-for="IdFacilitator" />
            <input type="hidden" asp-for="IdDocumentAssisstant" />
            <input type="hidden" asp-for="IdSupervisor" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="AdmissionFor" />

            <partial name="_IncidentReport" />
            <div class="form-group col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="IncidentReport" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

    </script>
}
