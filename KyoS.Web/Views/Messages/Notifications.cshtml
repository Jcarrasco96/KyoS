                                                    <a asp-controller="Notes" asp-action="ApproveIndNote" asp-route-id="@notification.Workday_Client.Id" asp-route-origin="7" class="btn btn-warning" title="View individual note"><i class="glyphicon glyphicon-file"></i></a>
                                                }
