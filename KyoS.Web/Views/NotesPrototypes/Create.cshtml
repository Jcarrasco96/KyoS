@model KyoS.Web.Models.NoteViewModel
@{
    ViewData["Title"] = "Create Note";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/prism.css">
    <link rel="stylesheet" href="~/css/chosen.css">
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Notes prototypes", "Index", "NotesPrototypes")
            </li>
            <li class="active">Note</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Create new note</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Creado == "Y")
            {
                <div class="alert alert-block alert-success">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok green"></i>
                    <strong class="green">
                        Note with Id @ViewBag.IdCreado been successfully created
                    </strong>

                </div>
            }
            @if (ViewBag.Creado == "E")
            {
                <div class="alert alert-block alert-warning">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok red"></i>
                    <strong class="red">
                        Error. Note already exist
                    </strong>
                </div>
            }
        </div>
        <div>
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <partial name="_Notes" />
                <div class="form-group col-md-12">
                </div>
                <div class="form-group col-md-12">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script src="~/js/chosen.jquery.js" type="text/javascript"></script>
        <script src="~/js/prism.js" type="text/javascript" charset="utf-8"></script>
        <script src="~/js/init.js" type="text/javascript" charset="utf-8"></script>
    }
</body>
</html>


