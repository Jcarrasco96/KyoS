@model KyoS.Web.Models.TCMIntakeNonClinicalLogViewModel

<div class="col-md-push-12">
    <div class="form-group col-md-4">
        <label asp-for="TcmClient.Client.Name" class="control-label">Name of Recipient</label>
        <input asp-for="TcmClient.Client.Name" class="form-control" readonly>
        <span asp-validation-for="TcmClient.Client.Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="TcmClient.CaseNumber" class="control-label">Case No.</label>
        <input asp-for="TcmClient.CaseNumber" class="form-control" readonly>
        <span asp-validation-for="TcmClient.CaseNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="TcmClient.Client.AdmisionDate" class="control-label">Date of Admission</label>
        <input asp-for="TcmClient.Client.AdmisionDate" class="form-control" readonly>
        <span asp-validation-for="TcmClient.Client.AdmisionDate" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="TcmClient.Casemanager.Name" class="control-label">Case Management</label>
        <input asp-for="TcmClient.Casemanager.Name" class="form-control" readonly>
        <span asp-validation-for="TcmClient.Casemanager.Name" class="text-danger"></span>
    </div>

</div>
<div class="col-md-push-12">
    <div class="form-group col-md-12">
        <label asp-for="DateActivity" class="control-label">Date / Activity</label>
        <textarea asp-for="DateActivity" class="form-control" rows="5"></textarea>
        <span asp-validation-for="DateActivity" class="text-danger"></span>
    </div>
</div>

<div class="col-md-12">
    &nbsp;
</div>

<br />

