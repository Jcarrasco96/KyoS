@model KyoS.Web.Models.TCMIntakeWelcomeViewModel
@if (User.IsInRole("CaseManager"))
{
    <div class="col-md-12">
        <pre>  
    Date:  <input asp-for="Date"> 

    Dear: <strong>(@Html.DisplayFor(modelItem => Model.TcmClient.Client.Name))</strong>  

