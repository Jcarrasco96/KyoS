@model IEnumerable<KyoS.Web.Data.Entities.TCMIntakeConsentForReleaseEntity>
@{
    ViewData["Title"] = "TCM Intakes";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("TCM Intakes", "TCMIntakeDashboard", "TCMIntakes",new { id = Model.First().TcmClient_FK})
        </li>
        <li class="active">TCM Intakes</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <p>
            <a asp-action="CreateTCMConsentForRelease" asp-route-id="@Model.First().TcmClient.Id" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create TCM Consent for Release</a>
        </p>       
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Intakes</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.TcmClient.Client.Name)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.TcmClient.Client.Code)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.TcmClient.Client.AdmisionDate)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Status
                            </th>
                            
                            <th class="col-md-1" align="right">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                              <tr>
                                   <td>
                                        @if (item.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.TcmClient.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.TcmClient.Client.Name)
                                   </td>
                                   <td align="center">
                                        @Html.DisplayFor(modelItem => item.TcmClient.Client.Code)
                                    </td>
                                   <td align="center">
                                        @Html.DisplayFor(modelItem => item.TcmClient.Client.AdmisionDate)
                                    </td>
                                   <td align="center">
                                        @if (item.TcmClient.Status == KyoS.Common.Enums.StatusType.Open)
                                        {
                                            <span class="label label-success">
                                                Open
                                            </span>
                                        }
                                        @if (item.TcmClient.Status == KyoS.Common.Enums.StatusType.Close)
                                        {
                                            <span class="label label-default">
                                                Close
                                            </span>
                                        }
                                    </td>
                                   <td align="right">
                                        <a asp-action="EditConsentForRelease" asp-route-id="@item.Id" class="btn btn-warning" title="Edit TCM Intake Consent for Release"><i class="glyphicon glyphicon-pencil"></i></a>
                                   </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });

                            // Delete item
                            var item_to_delete;

                            $('.deleteItem').click((e) => {
                                item_to_delete = e.currentTarget.dataset.id;
                            });

                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "TCMIntakes")";
                                window.location.href = url + '/' + item_to_delete;
                            });
                        });
    </script>
}
