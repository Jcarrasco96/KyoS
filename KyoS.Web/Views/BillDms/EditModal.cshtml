@model KyoS.Web.Models.BillDmsViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxBillDms(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DateBill" />
            <input type="hidden" asp-for="DateBillClose" />
            <input type="hidden" asp-for="Different" />
            <input type="hidden" asp-for="Units" />
            <input type="hidden" asp-for="Amount" />
            <input type="hidden" asp-for="FinishEdition" />
            
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="IdStatus" class="control-label">Bill Status </label>
                    <select asp-for="IdStatus" asp-items="Model.StatusList" class="form-control"></select>
                    <span asp-validation-for="IdStatus" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DateBillPayment" class="control-label"> Date Bill Payment</label>
                    <input asp-for="DateBillPayment" class="form-control" />
                    <span asp-validation-for="DateBillPayment" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div>
                <div class="col-md-offset-9 form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}


