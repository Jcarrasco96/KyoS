@model KyoS.Web.Models.ActivityViewModel
<div class="form-group">
    <label asp-for="IdTheme" class="control-label"></label>
    <select asp-for="IdTheme" asp-items="Model.Themes" class="form-control"></select>
    <span asp-validation-for="IdTheme" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <textarea asp-for="Name" class="form-control" rows="6" id="Name"></textarea>
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <a class="btn btn-info" id="EnglishName">English</a>
    <hr />
</div>

