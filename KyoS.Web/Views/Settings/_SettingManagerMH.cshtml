@model KyoS.Web.Models.SettingManagerViewModel
<div class="col-md-push-12">
    &nbsp;
</div>
<div class="col-md-push-12">

    <div class="form-group col-md-3">
        <label asp-for="CEO" class="control-label"></label>
        <input asp-for="CEO" class="form-control" />
        <span asp-validation-for="CEO" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="ProviderTaxId" class="control-label">Provider TAX Id</label>
        <input asp-for="ProviderTaxId" class="form-control" />
        <span asp-validation-for="ProviderTaxId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="ProviderMedicaidId" class="control-label">Provider Medicaid</label>
        <input asp-for="ProviderMedicaidId" class="form-control" />
        <span asp-validation-for="ProviderMedicaidId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="ClinicalDirector" class="control-label"></label>
        <input asp-for="ClinicalDirector" class="form-control" />
        <span asp-validation-for="ClinicalDirector" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="SignaturePath" class="control-label">Clinical Director Signature</label>
        <input asp-for="SignaturePath" type="file" class="form-control" />
        <span asp-validation-for="SignaturePath" class="text-danger"></span>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-3">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="FaxNo" class="control-label">Fax No</label>
        <input asp-for="FaxNo" class="form-control" />
        <span asp-validation-for="FaxNo" class="text-danger"></span>
    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <input type="checkbox" asp-for="SupervisorEdit" /> Enable edit documents by Supervisor
    </div>
</div>
<div class="col-md-12">
    <div class="form-group">
        <input type="checkbox" asp-for="DocumentAssistant_Intake" /> Enable create intakes by Document Assisstant
    </div>
</div>

<div class="col-md-push-12">
    <div class="form-group col-md-3">
        @if (@Model.IdClinic != 0)
        {
            @if (!string.IsNullOrEmpty(Model.SignaturePath))
            {
                <img src="@Url.Content(Model.SignaturePath)" alt="Image" style="width:200px;height:100px;max-width: 100%; height: auto;" />
            }
        }
    </div>
    <div class="container-fluid">
        &nbsp;
    </div>
</div>
