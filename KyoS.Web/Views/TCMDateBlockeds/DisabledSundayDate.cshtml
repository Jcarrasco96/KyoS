@model KyoS.Web.Models.TCMDateBlockedViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="DisabledSundayDate" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxTCMDateBlocked(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Description" />

            <div>
                <div class="col-md-8 form-group">
                    <label asp-for="IdClinic" class="control-label"></label>&nbsp;*
                    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                    <span asp-validation-for="IdClinic" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="year" class="control-label">Year to disable</label>&nbsp;*
                    <input asp-for="year" class="form-control" />
                    <span asp-validation-for="year" class="text-danger"></span>
                </div>
                <div class="col-md-12 form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" disabled/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div>
                <div class="col-md-offset-9 form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}
