@model KyoS.Web.Models.Theme3ViewModel
@{
    Layout = null;
}

<div class="row">
    <form asp-action="Edit3Modal" onsubmit="return jQueryAjaxPostTheme(this);">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdClinic" />
        <div>
            <div class="col-md-12 form-group">
                <label asp-for="IdService" class="control-label">Therapy</label> *&nbsp;
                <select asp-for="IdService" asp-items="Model.Services" class="form-control"></select>
                <span asp-validation-for="IdService" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class=" col-md-12 form-group">
                <label asp-for="Name" class="control-label"></label> *&nbsp;
                <textarea asp-for="Name" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div>
            <div class="col-md-offset-9">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </div>
    </form>
</div>