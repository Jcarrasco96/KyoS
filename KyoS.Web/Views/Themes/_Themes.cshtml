@model KyoS.Web.Models.ThemeViewModel 
<div class="form-group">
    <label asp-for="DayId" class="control-label"></label>
    <select asp-for="DayId" asp-items="Model.Days" class="form-control"></select>
    <span asp-validation-for="DayId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="IdClinic" class="control-label"></label>
    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
    <span asp-validation-for="IdClinic" class="text-danger"></span>
</div>