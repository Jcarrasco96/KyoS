@model IEnumerable<KyoS.Web.Data.Entities.MTPReviewEntity>
@{
    ViewData["Title"] = "MTP Review";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">MTP Review Pending</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        @*<strong>Note: </strong> Only closed clients will be displayed, orange color means the client has not discharge documents*@

    </div>
    <div class="col-md-12">
        &nbsp;
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">MTP Review Pending</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                Client with MTP
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.Mtp.Client.Code)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.Mtp.Client.AdmisionDate)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                MH Therapy
                            </th>
                            <th class="col-md-2" >
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.Mtp.MtpReviewList != null)
                            {
                                <tr>
                                   <td>
                                        @if (item.Mtp.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Mtp.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Mtp.Client.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Mtp.Client.Code)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Mtp.Client.AdmisionDate)
                                    </td>
                                    <td align="center">
                                        @if (item.Mtp.Client.Status == KyoS.Common.Enums.StatusType.Open)
                                        {
                                            <span class="label label-success">
                                                Open
                                            </span>
                                        }
                                        @if (item.Mtp.Client.Status == KyoS.Common.Enums.StatusType.Close)
                                        {
                                            <span class="label label-default">
                                                Close
                                            </span>
                                        }
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Mtp.Client.Service)
                                    </td>
                                    <td align="right">
                                        @if (User.IsInRole("Supervisor"))
                                        {
                                            <a asp-action="EditMTPReview" asp-route-id="@item.Id" class="btn btn-warning" title="Edit MTP Review"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a asp-action="ApproveMTPReview" asp-route-id="@item.Id" class="btn btn-success" title="Approval MTP Review"><i class="glyphicon glyphicon-ok"></i></a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-warning disabled" title="Edit MTP Review"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <a class="btn btn-success disabled" title="Approval MTP Review"><i class="glyphicon glyphicon-ok"></i></a>
                                        }

                                    </td>
                                </tr>

                            }


                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "Adendums")";
                window.location.href = url + '/' + item_to_delete;
            });
        });
        
    </script>
}


