@model KyoS.Web.Models.AdendumViewModel
<div class="col-md-push-12">

    <div class="form-group col-md-4">
        <label asp-for="Mtp.Client.Name" class="control-label"> CLIENT'S NAME:</label>
        <input asp-for="Mtp.Client.Name" class="form-control" readonly>
        <span asp-validation-for="Mtp.Client.Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Mtp.Client.Code" class="control-label">Client ID:</label>
        <input asp-for="Mtp.Client.Code" class="form-control" readonly>
        <span asp-validation-for="Mtp.Client.Code" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
        <label class="control-label">Diagnosis</label>
        @if (Model.Mtp.Client.Clients_Diagnostics.Count() > 0)
        {
            <input class="form-control" value="@Model.Mtp.Client.Clients_Diagnostics.ElementAtOrDefault(0).Diagnostic.Code @Model.Mtp.Client.Clients_Diagnostics.ElementAtOrDefault(0).Diagnostic.Description" readonly>
        }
        else
        {
            <input class="form-control" readonly>
        }
    </div>

</div>
<div class="col-md-12">
    <pre>
    <strong>Date Identified: </strong>  <input asp-for="Dateidentified">       
    <strong>Problem Statement: </strong>                                                        
    <textarea asp-for="ProblemStatement" class="form-control" rows="10"></textarea>
    </pre>
</div>
<div class="col-md-push-12">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Goal at the time of Adendum</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-2">
                                Number of Goal
                            </th>
                            <th class="col-md-4" style="text-align:left;">
                                Name of Goal
                            </th>
                            <th class="col-md-4" style="text-align:left;">
                                Area of Focus
                            </th>
                            <th class="col-md-1" style="text-align:center;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model.Goals)
                        {
                        <tr>
                            <td align="center">
                                @if (item.Objetives.Count() != 0)
                                {
                                    <a class="icon-plus-sign-alt"></a>
                                }
                                else
                                {

                                }
                                <div style="display:none">
                                    <table class="table table-striped table-bordered">
                                        <tr>
                                            <th class="col-md-1" style="text-align:center">Number of Obbjetive</th>
                                            <th class="col-md-5" style="text-align:center">Description of Obbjetive</th>
                                            <th class="col-md-5" style="text-align:center">Intervention of Obbjetive</th>
                                        </tr>
                                        @foreach (var product1 in item.Objetives)
                                        {
                                            <tr>
                                                <td align="center">@Html.DisplayFor(modelItem => product1.Objetive)</td>
                                                <td align="center">@Html.DisplayFor(modelItem => product1.Description)</td>
                                                <td align="center">@Html.DisplayFor(modelItem => product1.Intervention)</td>
                                            </tr>

                                        }
                                    </table>
                                </div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Number)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.AreaOfFocus)
                            </td>
                            <td align="center">
                                <a asp-action="EditGoal" asp-route-id="@item.Id" asp-route-id="@item.Id" class="btn btn-warning" title="Edit Goal"><i class="glyphicon glyphicon-pencil"></i></a>
                                <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" title="Delete Goal of Adendum"><i class="glyphicon glyphicon-trash"></i></button>
                            </td>
                        </tr>
                        }
                        @if (Model.Id != 0)
                        {
                            <a asp-action="CreateGoal" asp-route-id="@Model.IdMTP" asp-route-idAdendum="@Model.Id" class="btn btn-success" title="Add Goal"><i class="glyphicon glyphicon-plus"></i></a>
                        }

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12">
    <pre>
    <strong>Unit: </strong>  <input asp-for="Unit">       <strong>frecuency: </strong>  <input asp-for="Frecuency">       <strong>Duration: </strong>  <input asp-for="Duration">       
    </pre>
</div>
<br />

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });

            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "Adendums")";
                window.location.href = url + '/' + item_to_delete;
            });
        });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
    </script>
}

