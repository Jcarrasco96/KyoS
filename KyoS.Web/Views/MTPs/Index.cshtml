@model IEnumerable<KyoS.Web.Data.Entities.MTPEntity>
@{
    ViewData["Title"] = "MTPs";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">MTPs</li>
    </ul><!--.breadcrumb-->
</div>

<p>
    @if (ViewBag.Count != "0")
    {
        <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create MTP</a>
    }
    else
    {
        <a class="btn btn-primary disabled"><i class="glyphicon glyphicon-plus"></i> Create MTP</a>
    }
</p>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>                
                <strong class="red">
                    Error. It is not posible delete the MTP
                </strong>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Master Treatment Plan</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-4">
                                Client
                            </th>
                            <th class="col-md-4">
                                Clinic
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Active
                            </th>
                            <th class="col-md-1" style="text-align:center;">                                
                            </th>
                            <th class="col-md-2">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if ((item.Active) && (item.Client.Status == KyoS.Common.Enums.StatusType.Open))
                            {
                                <tr>
                                    <td>
                                        @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Client.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.Clinic.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td align="center">                                        
                                            @if (item.NumberOfMonths != null)
                                            {
                                                @if ((DateTime.Now - item.MTPDevelopedDate.Date.AddMonths(Convert.ToInt32(item.NumberOfMonths))).Days >= 0)
                                                {
                                                    <span class="label label-danger" title="Expired days">
                                                        @(-(DateTime.Now - item.MTPDevelopedDate.Date.AddMonths(Convert.ToInt32(item.NumberOfMonths))).Days)
                                                    </span>
                                                }
                                                @if ((DateTime.Now - item.MTPDevelopedDate.Date.AddMonths(Convert.ToInt32(item.NumberOfMonths))).Days < 0)
                                                {
                                                    <span class="label label-primary" title="Number of days to expire the MTP">
                                                        @((item.MTPDevelopedDate.Date.AddMonths(Convert.ToInt32(item.NumberOfMonths)) - DateTime.Now).Days)
                                                    </span>
                                                }
                                            }                                        
                                    </td>
                                    <td align="right">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a asp-action="PrintMTP" asp-route-id="@item.Id" class="btn btn-success" title="Print MTP" target="_blank"><i class="glyphicon glyphicon-print"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="glyphicon glyphicon-align-justify"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                            @if ((item.Active == false) || (item.Client.Status == KyoS.Common.Enums.StatusType.Close))
                            {
                                <tr style="color: darkgrey;">
                                    <td>
                                        @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Client.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Client.Clinic.Name)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td align="center">
                                        &nbsp;
                                    </td>
                                    <td align="right">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a asp-action="PrintMTP" asp-route-id="@item.Id" class="btn btn-success" title="Print MTP" target="_blank"><i class="glyphicon glyphicon-print"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="glyphicon glyphicon-align-justify"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });
                            
                            // Delete item
                            var item_to_delete;

                            $('.deleteItem').click((e) => {
                                item_to_delete = e.currentTarget.dataset.id;
                            });

                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "MTPs")";
                                window.location.href = url + '/' + item_to_delete;                        
                            });
                        });
    </script>
}
