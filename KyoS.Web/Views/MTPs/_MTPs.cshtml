    //--------------------------------
    chbGroup.addEventListener('change', (e) => {
        if (chbGroup.checked == true) {
            $("#txtGroupUnits").val("4");
            $("#txtGroupFrecuency").val("4 times for week");
            $("#txtGroupDuration").val("6");

