@model KyoS.Web.Models.MTPReviewViewModel

@{
    ViewData["Title"] = "Create Review";
}

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("MTPs", "Index", "MTPs")
        </li>
        <li class="active">Create MTP Review</li>
    </ul><!--.breadcrumb-->
</div>

<h4>Create master treament plan review</h4>
<hr />
<div>
    <form asp-action="CreateMTPReview" asp-route-id="@Model.Id" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdMTP" />
        <input type="hidden" asp-for="MTP_FK" />
        <input type="hidden" asp-for="Therapist" />
        <input type="hidden" asp-for="CreatedBy" />
        <input type="hidden" asp-for="CreatedOn" />
        <partial name="_MTPReviews" />
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-success">Back</a>
            <a asp-action="UpdateGoals" asp-route-id="@Model.Mtp.Id" class="btn btn-info">Update goals - objetives</a>
        </div>
    </form>
</div>

