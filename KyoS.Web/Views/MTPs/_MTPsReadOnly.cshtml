            <input asp-for="EndTime" class="form-control" disabled />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="CodeBill" class="control-label">Code Bill</label>
            <input asp-for="CodeBill" class="form-control" disabled/>
            <span asp-validation-for="CodeBill" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-2">
        <div class="form-group">
            <label asp-for="Setting" class="control-label">Setting</label>
            <input asp-for="Setting" class="form-control" disabled/>
            <span asp-validation-for="Setting" class="text-danger"></span>
        </div>
