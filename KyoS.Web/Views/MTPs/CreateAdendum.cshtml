@model KyoS.Web.Models.AdendumViewModel
@{
    ViewData["Title"] = "Create Adendum";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Adendum", "Index", "Adendums")
            </li>
            <li class="active">Create Adendum</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>INDIVIDUALIZED MASTER TREATMENT PLAN ADDENDUM</h4>
    <hr />
    <div class="row">
        <form asp-action="CreateAdendum" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMTP" />
            <input type="hidden" asp-for="IdFacilitator" />
            <input type="hidden" asp-for="IdSupervisor" />
            <partial name="_Adendums" />
            <div class="form-group col-md-12">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

    </script>
}

