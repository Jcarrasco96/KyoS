@model KyoS.Web.Models.MTPViewModel
@{
    ViewData["Title"] = "Create MTP";
}



<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("MTPs", "Index", "MTPs")
        </li>
        <li class="active">Create</li>
    </ul><!--.breadcrumb-->
</div>

<h4>Create new master treatment plan</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Creado == "Y")
        {
            <div class="alert alert-block alert-success">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <i class="icon-ok green"></i>
                <strong class="green">
                    MTP been successfully created
                </strong>

            </div>
        }
        @if (ViewBag.Creado == "E")
        {
            <div class="alert alert-block alert-warning">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <i class="icon-ok red"></i>
                <strong class="red">
                    Error. MTP already exist
                </strong>
            </div>
        }
    </div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_MTPs" />
            <div class="form-group col-md-12"></div>

            <div>
                <div class="col-md-12">
                    <div class="form-group">
                        <a onclick="showInPopup('@Url.Action("AddDiagnosis","MTPs",null,Context.Request.Scheme)','Add diagnosis')" class="btn btn-warning">Add Diagnosis</a>
                    </div>
                </div>
                <div id="view-diagnosis">
                    @await Html.PartialAsync("_ViewDiagnosis", Model.DiagnosesTemp)
                </div>
            </div>


            <div class="form-group col-md-12">
                <hr />
                <input type="submit" value="Create MTP" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>
</div>

<partial name="_ModalPopup" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}    
}

