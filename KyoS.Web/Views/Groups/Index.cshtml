@model IEnumerable<KyoS.Web.Data.Entities.GroupEntity>
@{
    ViewData["Title"] = "PSR Groups";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">PSR Groups</li>
    </ul><!--.breadcrumb-->
</div>

<p>
   @if (User.IsInRole("Manager"))
    {
        <a asp-action="Create" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Create PSR Group</a>
    }

</p>

<div class="row">
    @if (ViewBag.Message == "1")
    {
        <div class="col-md-12">
            <p class="alert alert-block alert-danger">
                <strong class="red"> Note: </strong> There are PSR active clients that are not in any group (<a asp-action="ListClientWithoutGroup" >@ViewData["count"]</a>).
            </p>
        </div>        
    }

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">PSR Groups</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1">

                            </th>
                            <th class="col-md-3">
                                Facilitator
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Therapy
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Clients
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                AM
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                PM
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Shared session
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Schedule
                            </th>
                            <th class="col-md-1">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td align="center">
                                    @if (item.Clients.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    else
                                    {

                                    }
                                    <div style="display:none">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <th class="col-md-3">Client Name</th>
                                                <th class="col-md-2" style="text-align:center;">Code</th>
                                                <th class="col-md-2" style="text-align:center;">Dx</th>
                                                <th class="col-md-2" style="text-align:center;">Date of birth</th>
                                                <th class="col-md-3" style="text-align:center;">Medical ID</th>
                                            </tr>
                                            @foreach (var client in item.Clients)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => client.Name)
                                                    </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => client.Code)
                                                    </td>
                                                    @if (client.Clients_Diagnostics.Count() == 0)
                                                    {
                                                        <td align="center"></td>
                                                    }
                                                    else
                                                    { 
                                                        <td align="center">@Html.DisplayFor(modelItem => client.Clients_Diagnostics.ElementAt(0).Diagnostic.Code)</td>
                                                    }
                                                    <td align="center">@Html.DisplayFor(modelItem => client.DateOfBirth)</td>
                                                    <td align="center">@Html.DisplayFor(modelItem => client.MedicaidID)</td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Facilitator.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Service)
                                </td>
                                <td align="center">
                                    @if (@item.Clients.Count() > 12)
                                    {
                                        <span class="label label-danger">
                                            @item.Clients.Count()
                                        </span>
                                    }
                                    else
                                    {
                                       @item.Clients.Count()
                                    }

                                </td>
                                <td align="center">
                                    @if (item.Am)
                                    {
                                        <i class="icon-ok green"></i>
                                    }
                                </td>
                                <td align="center">
                                    @if (item.Pm)
                                    {
                                        <i class="icon-ok green"></i>
                                    }
                                </td>
                                <td align="center">
                                    @if (item.SharedSession)
                                    {
                                        <i class="icon-ok green"></i>
                                    }
                                </td>
                                <td align="center">
                                    @if (item.Schedule != null)
                                    {
                                        @item.Schedule.InitialTime.ToShortTimeString()
                                        <a> - </a>
                                        @item.Schedule.EndTime.ToShortTimeString()
                                    }
                                </td>
                                <td align="right">
                                    @if (User.IsInRole("Manager"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit PSR group"><i class="glyphicon glyphicon-pencil"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#MyTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 25
            });

            // Delete item
            var item_to_delete;

            $('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "Groups")";
                window.location.href = url + '/' + item_to_delete;               
            });
        });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });

    </script>
}

