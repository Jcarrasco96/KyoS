@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Clients";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @if (ViewData["service"].ToString() == "PSR")
            {
                @Html.ActionLink("Group PSR", "Index", "Groups")
            }
            @if (ViewData["service"].ToString() == "Group")
            {
                @Html.ActionLink("Group", "Group", "Groups")
            }
        </li>
        <li class="active">Clients</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the client
                </strong>
            </div>
        }
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @if (ViewData["service"].ToString() == "PSR")
                {
                   <h3 class="panel-title">PSR active clients that are not in any group</h3>
                }
                @if (ViewData["service"].ToString() == "Group")
                {
                    <h3 class="panel-title">Group active clients that are not in any group</h3>
                }
                
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Health Insurance
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.AdmisionDate)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Initial Therapy
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Individual Therapy
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Admission for
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                            {
                                <tr style="color: darkgrey;">
                                    <td>
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Name)
                                        |
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Clients_HealthInsurances)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.MTPs.Where(m => m.Active == true).ElementAt(0).MTPDevelopedDate)
                                    </td>
                                    <td align="center">
                                        @if (item.IndividualTherapyFacilitator != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.IndividualTherapyFacilitator.Name)
                                        }
                                    </td>
                                    
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.MTPs.Where(m => m.Active == true).ElementAt(0).AdmissionedFor)
                                    </td>
                                </tr>
                            }
                            @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                            {
                                <tr>
                                    <td>
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Name)
                                        |
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Clients_HealthInsurances)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.MTPs.Where(m => m.Active == true).ElementAt(0).MTPDevelopedDate)
                                    </td>
                                    <td align="center">
                                        @if (item.IndividualTherapyFacilitator != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.IndividualTherapyFacilitator.Name)
                                        }
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.MTPs.Where(m => m.Active == true).ElementAt(0).AdmissionedFor)
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });

                            // Delete item
                            var item_to_delete;

                            $('.deleteItem').click((e) => {
                                item_to_delete = e.currentTarget.dataset.id;
                            });

                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "Clients")";
                                window.location.href = url + '/' + item_to_delete;
                            });
                        });
    </script>
}


