@model KyoS.Web.Models.ReferredViewModel
    <div class="col-md-push-12">
        <div class="form-group col-md-4">
            <label asp-for="Name" class="control-label"></label>&nbsp;*
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="Telephone" class="control-label"></label>
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        &nbsp;
    </div>
    <div class="col-md-push-12">        
        <div class="form-group col-md-4">
            <label asp-for="ReferredNote" class="control-label"></label>
            <textarea asp-for="ReferredNote" class="form-control" rows="4"></textarea>
            <span asp-validation-for="ReferredNote" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-12">
        &nbsp;
    </div> 
