@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanReviewEntity>

@if (Model != null)
{
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM Services PLan Review
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">TCM Services Plan Review</h3>
            </div>
            <div class="panel-body" id="view-tcmServicePlanReview">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2" align="center">
                                TCM Cases
                            </th>
                            <th class="col-md-3" align="center">
                                Client Name
                            </th>
                            <th class="col-md-2" align="center">
                                Date Close
                            </th>
                            <th class="col-md-2" align="center">
                                CaseManager
                            </th>
                            <th class="col-md-1" align="center">
                                Status
                            </th>
                            <th class="col-md-2" align="center">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.CaseNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Client.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.DataClose)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TcmServicePlan.TcmClient.Casemanager.Name)
                                </td>
                                <td>
                                    @if (item.TcmServicePlan.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.TcmServicePlan.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    @if (item.Approved == 0)
                                    {
                                        <a asp-action="Edit" asp-controller="TCMServicePlanReviews"  asp-route-Id="@item.Id" asp-route-IdServicePlan="@item.TcmServicePlan.Id" class="btn btn-warning" title="Create TCM Service PLan Review"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a asp-action="FinishEditing" asp-route-id="@item.Id" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i></a>
                                        <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                    }
                                    @if (item.Approved == 1)
                                    {
                                        <i class="btn btn-warning glyphicon glyphicon-search"></i>
                                    }
                                    @if (item.Approved == 2)
                                    {
                                        <i class="btn btn-success glyphicon glyphicon-flag"></i>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}





