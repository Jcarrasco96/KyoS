@model KyoS.Web.Models.TCMServicePlanReviewDomainViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditDomainReadOnly" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTCMServicePlanReview(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Origin" />
            <input type="hidden" asp-for="Id_ServicePlanReview" />
            <input type="hidden" asp-for="Id_Service" />
            <input type="hidden" asp-for="IdTcmDomain" />
            <div class="form-group">
                @if (User.IsInRole("TCMSupervisor") && Model.TcmServicePlanReview.TcmServicePlan.TcmClient.Client.Clinic.Setting.TCMSupervisorEdit == true && ViewData["origi"].ToString() != "5" && Model.Origin == "Service Plan Review")
                {
                    <div class="col-md-6">
                        <label asp-for="DateIdentified" class="control-label">Identified Date</label>
                        <input asp-for="DateIdentified" class="form-control" />
                        <span asp-validation-for="DateIdentified" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="col-md-6">
                        <label asp-for="DateIdentified" class="control-label">Identified Date</label>
                        <input asp-for="DateIdentified" class="form-control" readonly />
                        <span asp-validation-for="DateIdentified" class="text-danger"></span>
                    </div>
                }
                <div class="container-fluid">
                    &nbsp;
                </div>                
            </div>            
            <div class="form-group">
                <div class="col-md-3">
                    <label asp-for="CodeDomain" class="control-label"></label>
                    <input asp-for="CodeDomain" class="form-control" readonly />
                    <span asp-validation-for="CodeDomain" class="text-danger"></span>
                </div>
                <div class="col-md-9">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" readonly />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="container-fluid">
                &nbsp;
            </div>
            @if ((User.IsInRole("TCMSupervisor") && Model.TcmServicePlanReview.TcmServicePlan.TcmClient.Client.Clinic.Setting.TCMSupervisorEdit == true && ViewData["origi"].ToString() != "5" && Model.Origin == "Service Plan Review")
              || ((User.IsInRole("CaseManager") && ViewData["origi"].ToString() != "5" && Model.Origin == "Service Plan Review")))
            {
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="NeedsIdentified" class="control-label">Need Identified</label>
                        <textarea asp-for="NeedsIdentified" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="NeedsIdentified" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="LongTerm" class="control-label">Long Term</label>
                        <textarea asp-for="LongTerm" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="LongTerm" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="ChangesUpdate" class="control-label">Changes/Update</label>
                        <textarea asp-for="ChangesUpdate" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ChangesUpdate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-push-12">
                    <div class="form-group col-md-6">
                        <input type="checkbox" asp-for="Status" class="form-check-input"> Domain complished                        
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DateAccomplished" class="control-label"></label>&nbsp;*
                        <input asp-for="DateAccomplished" class="form-control" />
                        <span asp-validation-for="DateAccomplished" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    &nbsp;
                </div>
                <div>
                    <div class="col-md-offset-9">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="NeedsIdentified" class="control-label">Need Identified</label>
                        <textarea asp-for="NeedsIdentified" class="form-control" rows="4" readonly></textarea>
                        <span asp-validation-for="NeedsIdentified" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="LongTerm" class="control-label">Long Term</label>
                        <textarea asp-for="LongTerm" class="form-control" rows="4" readonly></textarea>
                        <span asp-validation-for="LongTerm" class="text-danger"></span>
                    </div>
                </div>
                @if (ViewData["origi"].ToString() == "5")
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="ChangesUpdate" class="control-label">Changes/Update</label>
                            <textarea asp-for="ChangesUpdate" class="form-control" rows="4" disabled></textarea>
                            <span asp-validation-for="ChangesUpdate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-push-12">
                        <div class="form-group col-md-6">
                            <input type="checkbox" asp-for="Status" class="form-check-input" disabled> Domain complished
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateAccomplished" class="control-label"></label>&nbsp;*
                            <input asp-for="DateAccomplished" class="form-control" disabled/>
                            <span asp-validation-for="DateAccomplished" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        &nbsp;
                    </div>
                    <div>
                        <div class="col-md-offset-10">
                            <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="ChangesUpdate" class="control-label">Changes/Update</label>
                            <textarea asp-for="ChangesUpdate" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="ChangesUpdate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-push-12">
                        <div class="form-group col-md-6">
                            <input type="checkbox" asp-for="StatusBool" class="form-check-input"> Domain complished<br />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DateAccomplished" class="control-label"></label>&nbsp;*
                            <input asp-for="DateAccomplished" class="form-control" />
                            <span asp-validation-for="DateAccomplished" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        &nbsp;
                    </div>
                    <div>
                        <div class="col-md-offset-9">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                }
            }
        </form>
    </div>
</div>

<script>
    function getCode() {
        var x = document.getElementById('Code_Name');
        var y = x.options[x.selectedIndex].text;
        var code = y[0] + y[1];
        var name = y[3];
        for (var i = 4; i < y.length; i++)
        {
            name = name + y[i];
        }
        document.getElementById('GetCode').value = code;
        document.getElementById('GetName').value = name;

    }
</script>
