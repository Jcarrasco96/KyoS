@model IEnumerable<KyoS.Web.Data.Entities.TCMServicePlanReviewEntity>
@{
    if (Model.Count() != 0)
    {
        if (Model.FirstOrDefault().Approved == 2)
        {
            ViewData["Title"] = "Approved Services Plans Reviews";
        }
        if (Model.FirstOrDefault().Approved == 1)
        {
            ViewData["Title"] = "Pending Services Plans Reviews";
        }
        if (Model.FirstOrDefault().Approved == 0)
        {
            ViewData["Title"] = "Services Plans Reviews in Edition ";
        }

    }
    else
    {
        ViewData["Title"] = "Services Plans Reviews";
    }
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        @{
            if (Model.Count() != 0)
            {
                if (Model.FirstOrDefault().Approved == 2)
                {                    
                    <li class="active">Approved Services Plans Reviews</li>
                }
                if (Model.FirstOrDefault().Approved == 1)
                {
                    <li class="active">Pending Services Plans Reviews</li>
                }
                if (Model.FirstOrDefault().Approved == 0)
                {
                    <li class="active">Services Plans Reviews in Edition</li>
                }
            }
            else
            {
                <li class="active">Services Plans Reviews</li>
            }
        }

    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div id="view-tcmServicePlanReview">
        @await Html.PartialAsync("_ViewTCMServicesPlanReviews1", Model.ToList())
    </div>
</div>


<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                         $(document).ready(function () {
                             $('#MyTable').DataTable({
                               "order": [[0, "asc"]],
                                "pageLength": 100
                            });

                            // Delete item
                            var item_to_delete;

                            $('.deleteItem').click((e) => {
                              item_to_delete = e.currentTarget.dataset.id;
                            });
                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "TCMSupervisors")";
                                window.location.href = url + '/' + item_to_delete;
                            });
                         });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
    </script>
}



