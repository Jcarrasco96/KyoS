@model KyoS.Web.Models.ScheduleViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostSchedules(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
            <div class="form-group col-md-12">
                <div class="col-md-6">
                    <label asp-for="IdService" class="control-label"></label>
                    <select asp-for="IdService" asp-items="Model.Services" class="form-control"></select>
                    <span asp-validation-for="IdService" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="IdSession" class="control-label"></label>
                    <select asp-for="IdSession" asp-items="Model.Sessions" class="form-control"></select>
                    <span asp-validation-for="IdSession" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-6">
                    <label asp-for="InitialTime" class="control-label"></label>
                    <input asp-for="InitialTime" class="form-control" />
                    <span asp-validation-for="InitialTime" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EndTime" class="control-label">End Time</label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>            
            <div class="container-fluid">
                &nbsp;
            </div>
            <div>
                <div class="col-md-offset-8">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>
