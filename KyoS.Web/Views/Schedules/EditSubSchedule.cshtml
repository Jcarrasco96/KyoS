@model KyoS.Web.Models.SubScheduleViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditSubSchedule" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostSchedules(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdSchedule" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
            @if (ViewData["error"].ToString() == "1")
            {
                <div class="alert alert-block alert-danger">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <strong class="red">
                        Error. The date range is incorrect.
                    </strong>
                </div>
            }
            <div class="col-md-12">
                <div class="col-md-6">
                    <label asp-for="InitialTime" class="control-label"></label>
                    <input asp-for="InitialTime" class="form-control" />
                    <span asp-validation-for="InitialTime" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EndTime" class="control-label">End Time</label>
                    <input asp-for="EndTime" class="form-control" />
                    <span asp-validation-for="EndTime" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                </br>
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>
