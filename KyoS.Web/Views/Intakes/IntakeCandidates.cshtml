@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>


@if (Model != null)
{
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Dashboard", "Index", "Desktop")
            </li>
            <li class="active">Intake Candidate</li>
        </ul><!--.breadcrumb-->
    </div>
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the Intake Candidate
                </strong>
            </div>
        }
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Intake Candidate</h3>
            </div>
            <div class="panel-body" id="view-IntakeCandidate">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3" align="center">
                                Client Name
                            </th>
                            <th class="col-md-3" align="center">
                                Client Code
                            </th>
                            <th class="col-md-2" align="center">
                                Client Status
                            </th>
                            <th class="col-md-2" align="center">
                                Services
                            </th>
                            <th class="col-md-2" align="center">
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                               @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                {
                                    <i class="glyphicon glyphicon-user btn-danger"></i>
                                }
                               @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                {
                                    <i class="glyphicon glyphicon-user btn-primary"></i>
                                }
                                &nbsp;
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td>
                               @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                {
                                    <span class="label label-success">
                                        Open
                                    </span>
                                }
                               @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                {
                                    <span class="label label-default">
                                        Close
                                    </span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td align="right">
                                <a asp-action="Create" asp-controller="Intakes" asp-route-id="@item.Id" class="btn btn-primary" title="Create Intake"><i class="glyphicon glyphicon-plus"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "pageLength": 100
            });

            // Delete item
            //var item_to_delete;

            @*$('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "WorkDays")";
                window.location.href = url + '/' + item_to_delete;
            });*@
        });
    </script>
}


