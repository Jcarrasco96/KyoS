@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Clients without Medical History";
}

@if (Model != null)
{
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Dashboard", "Index", "Desktop")
            </li>
            <li class="active">Clients without Medical History</li>
        </ul><!--.breadcrumb-->
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Clients without Medical History</h3>
            </div>
            <div class="panel-body" id="view-ClientsWithoutMedicalHistory">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                Client Name
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Admission Date
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Admitted by
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Client Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Services
                            </th>
                            <th class="col-md-1" style="text-align:center;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (User.IsInRole("Manager") || User.IsInRole("FrontDesk"))
                            {
                                <tr>
                                    <td>
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                        {
                                            <i class="glyphicon glyphicon-user btn-danger"></i>
                                        }
                                        @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                        {
                                            <i class="glyphicon glyphicon-user btn-primary"></i>
                                        }
                                        &nbsp;
                                        @Html.DisplayFor(modelItem => item.Name)
                                        |
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                    </td>
                                    <td align="center">
                                        @if (item.Bio != null)
                                        {
                                            @Html.DisplayFor(modelItem => item.Bio.AdmissionedFor)
                                        }
                                        else
                                        {
                                            <a>-</a>
                                        }
                                    </td>
                                    <td align="center">
                                        @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                        {
                                            <span class="label label-success">
                                                Open
                                            </span>
                                        }
                                        @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                        {
                                            <span class="label label-default">
                                                Close
                                            </span>
                                        }
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Service)
                                    </td>
                                    <td align="right">
                                        @if (User.IsInRole("Supervisor") || User.IsInRole("Documents_Assistant"))
                                        {
                                            <a asp-action="CreateMedicalhistory" asp-controller="Intakes" asp-route-id="@item.Id" asp-route-origin="1" class="btn btn-primary" title="Create BIO"><i class="glyphicon glyphicon-plus"></i></a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-primary disabled" title="Create Medical History"><i class="glyphicon glyphicon-plus"></i></a>
                                        }
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @if (item.Bio != null)
                                {
                                    @if (item.Bio.CreatedBy == User.Identity.Name)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                                {
                                                    <i class="glyphicon glyphicon-user btn-danger"></i>
                                                }
                                                @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                                {
                                                    <i class="glyphicon glyphicon-user btn-primary"></i>
                                                }
                                                &nbsp;
                                                @Html.DisplayFor(modelItem => item.Name)
                                                |
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.AdmisionDate)
                                            </td>
                                            <td align="center">
                                                @if (item.Bio != null)
                                                {
                                                    @Html.DisplayFor(modelItem => item.Bio.AdmissionedFor)
                                                }
                                                else
                                                {
                                                    <a>-</a>
                                                }
                                            </td>
                                            <td align="center">
                                                @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                                {
                                                    <span class="label label-success">
                                                        Open
                                                    </span>
                                                }
                                                @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                                {
                                                    <span class="label label-default">
                                                        Close
                                                    </span>
                                                }
                                            </td>
                                            <td align="center">
                                                @Html.DisplayFor(modelItem => item.Service)
                                            </td>
                                            <td align="right">
                                                @if (User.IsInRole("Supervisor") || User.IsInRole("Documents_Assistant"))
                                                {
                                                    <a asp-action="CreateMedicalhistory" asp-controller="Intakes" asp-route-id="@item.Id" asp-route-origin="1" class="btn btn-primary" title="Create BIO"><i class="glyphicon glyphicon-plus"></i></a>
                                                }
                                                else
                                                {
                                                    <a class="btn btn-primary disabled" title="Create Medical History"><i class="glyphicon glyphicon-plus"></i></a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                            {
                                                <i class="glyphicon glyphicon-user btn-danger"></i>
                                            }
                                            @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                            {
                                                <i class="glyphicon glyphicon-user btn-primary"></i>
                                            }
                                            &nbsp;
                                            @Html.DisplayFor(modelItem => item.Name)
                                            |
                                            @Html.DisplayFor(modelItem => item.Code)
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.AdmisionDate)
                                        </td>
                                        <td align="center">
                                            <a>-</a>
                                        </td>
                                        <td align="center">
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                            {
                                                <span class="label label-success">
                                                    Open
                                                </span>
                                            }
                                            @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                            {
                                                <span class="label label-default">
                                                    Close
                                                </span>
                                            }
                                        </td>
                                        <td align="center">
                                            @Html.DisplayFor(modelItem => item.Service)
                                        </td>
                                        <td align="right">
                                            @if (User.IsInRole("Supervisor") || User.IsInRole("Documents_Assistant"))
                                            {
                                                <a asp-action="CreateMedicalhistory" asp-controller="Intakes" asp-route-id="@item.Id" asp-route-origin="1" class="btn btn-primary" title="Create BIO"><i class="glyphicon glyphicon-plus"></i></a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-primary disabled" title="Create Medical History"><i class="glyphicon glyphicon-plus"></i></a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "pageLength": 100
            });

