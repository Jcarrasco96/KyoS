@model KyoS.Web.Models.TCMNoteViewModel
@{
    ViewData["Title"] = "TCM Notes";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i> @Html.ActionLink("TCM Notes For Client", "TCMNotesForCase", "TCMNotes", new { idTCMClient = @Model.IdTCMClient})
            </li>
            <li class="active">TCM Notes</li>
        </ul><!--.breadcrumb-->
    </div>
    
    <div class="row">
        <form asp-action="Create" asp-route-id="@Model.Id" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdTCMClient" />
            <input type="hidden" asp-for="IdCaseManager" />
            <input type="hidden" asp-for="IdTCMWorday" />
            <input type="hidden" asp-for="CaseManagerDate" />
            <input type="hidden" asp-for="TCMClient.Casemanager.Name" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="CreatedBy" />
            <partial name="_TCMNotes" />
            <partial name="_TCMNotes1" />
            <div class="col-md-12 form-group">              
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="TCMNotesForCase" asp-route-idTCMClient="@Model.IdTCMClient" class="btn btn-success">Back</a>               
            </div>
        </form>
    </div>
</body>
</html>

<partial name="_ModalPopup" />
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

    </script>
}

