@model KyoS.Web.Models.TCMNoteViewModel
<div class="col-md-12">
    <h4 style="text-align:center;"> Case Management Progress Note </h4>
    <hr />
</div>    
<div class="col-md-push-12">
    <div class="form-group col-md-4">
        <label asp-for="TCMClient.Client.Name" class="control-label">Client Name</label>&nbsp;
        <input asp-for="TCMClient.Client.Name" class="form-control" readonly>
        <span asp-validation-for="TCMClient.Client.Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="TCMClient.CaseNumber" class="control-label">Client Number</label>&nbsp;
        <input asp-for="TCMClient.CaseNumber" class="form-control" readonly>
        <span asp-validation-for="TCMClient.CaseNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="TCMClient.Casemanager.ProviderNumber" class="control-label">Provider Number</label>&nbsp;
        <input asp-for="TCMClient.Casemanager.ProviderNumber" class="form-control" readonly>
        <span asp-validation-for="TCMClient.Casemanager.ProviderNumber" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="DateOfService" class="control-label">Date of Service</label>&nbsp;
        <input asp-for="DateOfService" class="form-control" readonly>
        <span asp-validation-for="DateOfService" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="ServiceCode" class="control-label">Service Code</label>&nbsp;
        <input asp-for="ServiceCode" class="form-control" readonly>
        <span asp-validation-for="ServiceCode" class="text-danger"></span>
    </div>
</div>
<div class="col-md-12">
    <hr />
</div>

