                    <strong>_______________________</strong>         <strong>_____________________________</strong>         <strong>___________________</strong>         <strong>___________________</strong>
                    <strong>Case Manager Print Name</strong>            <strong>Case Manager Signature</strong>                 <strong>Credentials</strong>                    <strong>Date</strong>

                    @Html.DisplayFor(modelItem => Model.TCMClient.Casemanager.TCMSupervisor.Name)                      <input asp-for="SignSupervisor" type="checkbox" checked class="form-check-input" id="check2" disabled> Sign Here (Supervisor)                  @Html.DisplayFor(modelItem => Model.TCMClient.Casemanager.TCMSupervisor.Code)                    @Html.DisplayFor(modelItem => Model.ApprovedDate)
                    <strong>_______________________</strong>         <strong>_____________________________</strong>         <strong>___________________</strong>         <strong>___________________</strong>
                    <strong>Supervisor Print Name</strong>               <strong>Supervisor Signature</strong>                  <strong>Credentials</strong>                    <strong>Date</strong>
                </pre>
        </div>
    }
    else
    { 
        <div class="col-md-12" id="check110">
                <pre>
                    @Html.DisplayFor(modelItem => Model.TCMClient.Casemanager.Name)                     <input asp-for="Sign" type="checkbox" class="form-check-input" id="check1" disabled> Sign Here (Case Manager)                @Html.DisplayFor(modelItem => Model.TCMClient.Casemanager.Credentials)                   @Html.DisplayFor(modelItem => Model.DateOfService)
