@model IEnumerable<KyoS.Web.Data.Entities.TCMNoteActivityEntity>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Notes Activity</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTableDoc">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                Setting
                            </th>
                            <th class="col-md-2">
                                Domain
                            </th>
                            <th class="col-md-4" style="text-align:center;">
                                Description
                            </th>
                            <th class="col-md-2">
                                Minutes
                            </th>
                            <th class="col-md-2">
                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Setting)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TCMDomain.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DescriptionOfService)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Minutes)
                                </td>
                                <td align="right">
                                    <a onclick="showInPopup('@Url.Action("EditNoteActivity", "TCMNotes",new { id= item.Id}, Context.Request.Scheme)','Edit TCM Note')" class="btn btn-warning" title="Edit TCM Note"><i class="glyphicon glyphicon-pencil"></i></a>
                                    @* <a asp-action="EditNoteActivity" asp-route-id="@item.Id" class="btn btn-warning" title="Edit Note" target="_blank"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                    @if (!User.IsInRole("CaseManager"))
                                    {
                                        <button type="button" onclick="DeleteDocumentTemp(@item.Id)" class="btn btn-danger deleteItem" title="Delete document"><i class="glyphicon glyphicon-trash"></i></button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

