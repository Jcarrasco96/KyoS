@model IEnumerable<KyoS.Web.Data.Entities.TCMNoteEntity>
@{
    if (Model.Count() != 0)
    {
        if (Model.FirstOrDefault().Status == KyoS.Common.Enums.NoteStatus.Approved)
        {
            ViewData["Title"] = "TCM Approved Notes";
        }
        if (Model.FirstOrDefault().Status == KyoS.Common.Enums.NoteStatus.Edition)
        {
            ViewData["Title"] = "TCM Notes in edition";
        }
        if (Model.FirstOrDefault().Status == KyoS.Common.Enums.NoteStatus.Pending)
        {
            ViewData["Title"] = "TCM Pending Notes";
        }

    }
    else
    {
        ViewData["Title"] = "TCM Notes";
    }
}
