@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Clients without Discharge";
}

@if (Model != null)
{
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Dashboard", "Index", "Desktop")
            </li>
            <li class="active">Clients without Discharge</li>
        </ul><!--.breadcrumb-->
    </div>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Clients without Discharge</h3>
            </div>
            <div class="panel-body" id="view-ClientsWithoutDischarge">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                Client Name
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Admission Date
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Client Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Services
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Facilitator
                            </th>
                            <th class="col-md-1" style="text-align:center;">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.Name)
                                    |
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.AdmisionDate)
                                </td>
                                <td align="center">
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Service)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.LastModifiedBy)
                                </td>
                                <td align="right">
                                    @if (User.IsInRole("Facilitator"))
                                    {
                                        <a asp-action="Create" asp-controller="Discharge" asp-route-id="@item.Id" asp-route-origin ="1" asp-route-service="@item.Service" class="btn btn-primary" title="Create Discharge"><i class="glyphicon glyphicon-plus"></i></a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary disabled" title="Create Discharge"><i class="glyphicon glyphicon-plus"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $('#MyTable').DataTable({
               "pageLength": 100
            });

            // Delete item
            //var item_to_delete;

            @*$('.deleteItem').click((e) => {
                item_to_delete = e.currentTarget.dataset.id;
            });

            $("#btnYesDelete").click(function () {
                var url = "@Url.Action("Delete", "WorkDays")";
                window.location.href = url + '/' + item_to_delete;
            });*@
        });
    </script>
}
