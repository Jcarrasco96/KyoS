                <input asp-for="Address" class="form-control" disabled />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" disabled />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="State" class="control-label">State</label>
                <input asp-for="State" class="form-control" disabled />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="ZipCode" class="control-label">Zip Code</label>
                <input asp-for="ZipCode" class="form-control" disabled />
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            <div>
                <div class="col-md-offset-10">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

