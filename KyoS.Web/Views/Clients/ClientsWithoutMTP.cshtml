@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Clients without MTP";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Clients without MTP</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Clients without MTP</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.Code)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.AdmisionDate)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                MH Therapy
                            </th>
                            <th class="col-md-1">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                      @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                       {
                                           <i class="glyphicon glyphicon-user btn-danger"></i>
                                       }
                                      @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                       {
                                           <i class="glyphicon glyphicon-user btn-primary"></i>
                                       }
                                       &nbsp;
                                       @Html.DisplayFor(modelItem => item.Name)
                                  </td>
                                  <td align="center">
                                      @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                  <td align="center">
                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                    </td>
                                  <td align="center">
                                      @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                       {
                                            <span class="label label-success">
                                                Open
                                            </span>
                                       }
                                      @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                       {
                                            <span class="label label-default">
                                                Close
                                            </span>
                                       }
                                  </td>
                                  <td align="center">
                                      @Html.DisplayFor(modelItem => item.Service)
                                  </td>
                                  <td align="right">
                                      @if (User.IsInRole("Supervisor"))
                                      {
                                          <a asp-action="Create" asp-route-idClient="@item.Id" asp-controller="MTPs" class="btn btn-primary" title="Create MTP"><i class="glyphicon glyphicon-plus"></i></a>
                                      }
                                      else
                                      {
                                          <a class="btn btn-primary disabled" title="Create MTP Review"><i class="glyphicon glyphicon-plus"></i></a>
                                      }
                                  </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
                        $(document).ready(function () {
                            $('#MyTable').DataTable({
                                "order": [[0, "asc"]],
                                "pageLength": 100
                            });

                            // Delete item
                            var item_to_delete;

                            $('.deleteItem').click((e) => {
                                item_to_delete = e.currentTarget.dataset.id;
                            });

                            $("#btnYesDelete").click(function () {
                                var url = "@Url.Action("Delete", "Clients")";
                                window.location.href = url + '/' + item_to_delete;
                            });
                        });
    </script>
}




