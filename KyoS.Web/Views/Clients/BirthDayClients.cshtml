        </div>
        <div class="col-md-1">
            &nbsp;
        </div>
    </div>
    <div class="col-md-12">
        <hr />
    </div>
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Birthdays</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Role
                            </th>
                            <th class="col-md-2 bg-warning" style="text-align:center;">
                                Birth Date
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Arrived
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Days
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Program
                            </th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.Name)
                                    <a>|</a>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Person)
                                </td>
                                <td align="center" class="bg-warning">
                                    @if (DateTime.Today.Day == item.BirthDay.Day && DateTime.Today.Month == item.BirthDay.Month)
                                    {
                                        <b>@Html.DisplayFor(modelItem => item.BirthDay)</b> <i class="icon-bell"></i>
                                    }
                                    else
                                    {
                                        @Html.DisplayFor(modelItem => item.BirthDay)
                                    }
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Arriving)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => (DateTime.Today - item.Arriving).Days)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Program)
                                </td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_ModalPopupLg" />
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/datetime-moment.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $.fn.dataTable.moment('MM/DD/YYYY');

            $('#MyTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 100
            });
        });
    </script>
}



