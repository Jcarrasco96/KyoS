            }
            @if (ViewData["month"].ToString() == "August")
            {
                <a asp-action="BirthDayClients" asp-route-month="8" type="button" class="btn btn-warning">&nbsp;&nbsp;August&nbsp;&nbsp;</a>
            }
            else
            {
                <a asp-action="BirthDayClients" asp-route-month="8" type="button" class="btn btn-default">&nbsp;&nbsp;August&nbsp;&nbsp;</a>
