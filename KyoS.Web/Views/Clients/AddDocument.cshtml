@model KyoS.Web.Models.DocumentTempViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddDocument" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostDoc(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="DocumentFile" class="control-label"></label>&nbsp;*
                    <input asp-for="DocumentFile" class="form-control" type="file" id="photoBrowser" />
                    <span asp-validation-for="DocumentFile" class="text-danger"></span>
                </div>
            </div>           
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>&nbsp;*
                    <select asp-for="IdDescription" class="form-control" asp-items="Model.Descriptions"></select>                    
                    <span asp-validation-for="IdDescription" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

