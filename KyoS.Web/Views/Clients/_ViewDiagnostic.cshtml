@model IEnumerable<KyoS.Web.Data.Entities.DiagnosticTempEntity>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Diagnostics</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTableDiag">
                        <thead>
                            <tr>
                                <th class="col-md-1">
                                    @Html.DisplayNameFor(model => model.Code)
                                </th>
                                <th class="col-md-4">
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th class="col-md-3">
                                    @Html.DisplayNameFor(model => model.Prescriber)
                                </th>
                                <th class="col-md-1" style="text-align:center;">
                                    Date
                                </th>
                                <th class="col-md-1" style="text-align:center;">
                                    Active
                                </th>
                                <th class="col-md-1" style="text-align:center;">
                                    @Html.DisplayNameFor(model => model.Principal)
                                </th>
                                <th class="col-md-1" style="text-align:center;">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td >
                                        @Html.DisplayFor(modelItem => item.Prescriber)
                                    </td>
                                    <td align="center">
                                        @item.DateIdentify.ToShortDateString()
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Active)
                                    </td>
                                    <td align="center">
                                        @Html.DisplayFor(modelItem => item.Principal)
                                    </td>
                                    <td align="right">
                                        @if (User.IsInRole("Manager"))
                                        {
                                            <a onclick="showInPopup('@Url.Action("EditDxTempClient", "Clients", new { id = item.Id }, Context.Request.Scheme)','Edit Diagnostics')" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                            <button type="button" onclick="DeleteDiagnosticTemp(@item.Id)" class="btn btn-danger deleteItem" title="Delete diagnostic"><i class="glyphicon glyphicon-trash"></i></button>
                                        }
                                        else
                                        {
                                            <a onclick="showInPopup('@Url.Action("EditDxTempClient", "Clients", new { id = item.Id }, Context.Request.Scheme)','Edit Diagnostics')" class="btn btn-warning"><i class="glyphicon glyphicon-pencil disabled"></i></a>
                                            <button type="button" onclick="DeleteDiagnosticTemp(@item.Id)" class="btn btn-danger deleteItem disabled" title="Delete diagnostic"><i class="glyphicon glyphicon-trash"></i></button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>    
}
