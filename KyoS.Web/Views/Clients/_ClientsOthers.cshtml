@model KyoS.Web.Models.ClientViewModel
<div class="col-md-push-12">
    &nbsp;
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-2">
        <label asp-for="FullAddress" class="control-label"></label>
        <input asp-for="FullAddress" class="form-control" />
        <span asp-validation-for="FullAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="AlternativeAddress" class="control-label"></label>
        <input asp-for="AlternativeAddress" class="form-control" />
        <span asp-validation-for="AlternativeAddress" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Telephone" class="control-label"></label>
        <input asp-for="Telephone" class="form-control" />
        <span asp-validation-for="Telephone" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="TelephoneSecondary" class="control-label"></label>
        <input asp-for="TelephoneSecondary" class="form-control" />
        <span asp-validation-for="TelephoneSecondary" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="ZipCode" class="control-label"></label>
        <input asp-for="ZipCode" class="form-control" />
        <span asp-validation-for="ZipCode" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-2">
        <label asp-for="Country" class="control-label"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="Race" class="control-label"></label>
        <select asp-for="IdRace" asp-items="Model.Races" class="form-control"></select>
        <span asp-validation-for="IdRace" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="PlaceOfBirth" class="control-label"></label>
        <input asp-for="PlaceOfBirth" class="form-control" />
        <span asp-validation-for="PlaceOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="MaritalStatus" class="control-label"></label>
        <select asp-for="IdMaritalStatus" asp-items="Model.Maritals" class="form-control"></select>
        <span asp-validation-for="IdMaritalStatus" class="text-danger"></span>
    </div>
</div>
<div class="col-md-push-12">
    <div class="form-group col-md-2">
        <label asp-for="Ethnicity" class="control-label"></label>
        <select asp-for="IdEthnicity" asp-items="Model.Ethnicities" class="form-control"></select>
        <span asp-validation-for="IdEthnicity" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="PreferredLanguage" class="control-label"></label>
        <select asp-for="IdPreferredLanguage" asp-items="Model.Languages" class="form-control"></select>
        <span asp-validation-for="IdPreferredLanguage" class="text-danger"></span>
    </div>
    <div class="form-group col-md-2">
        <label asp-for="OtherLanguage" class="control-label"></label>
        <input asp-for="OtherLanguage" class="form-control" />
        <span asp-validation-for="OtherLanguage" class="text-danger"></span>
    </div>
    <div class="form-group col-md-1">
        <label asp-for="OtherLanguage_Read" class="control-label">Read</label><br />
        <input type="checkbox" asp-for="OtherLanguage_Read" class="form-check-input">
    </div>
    <div class="form-group col-md-1">
        <label asp-for="OtherLanguage_Speak" class="control-label">Speak</label><br />
        <input type="checkbox" asp-for="OtherLanguage_Speak" class="form-check-input">
    </div>
    <div class="form-group col-md-1">
        <label asp-for="OtherLanguage_Understand" class="control-label">Understand</label><br />
        <input type="checkbox" asp-for="OtherLanguage_Understand" class="form-check-input">
    </div>
    <div class="form-group col-md-3">
        &nbsp;
    </div>
</div>
<div class="col-md-12">
    <hr />
</div>
<div class="col-md-push-12">
    <div class="col-md-12">
        <label asp-for="OnlyTCM" class="control-label">Only TCM</label><br />
        <input type="checkbox" asp-for="OnlyTCM" class="form-check-input" id="check1">
    </div>
</div>

<div class="col-md-12">
    <hr />
</div>
@if (Model.Id == 0)
{
    <div class="col-md-push-12">
        <div class="form-group col-md-3">
            <label asp-for="IdService" class="control-label"></label>
            <select asp-for="IdService" asp-items="Model.Services" class="form-control" id="check110"></select>
            <span asp-validation-for="IdService" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="IdFacilitatorIT" class="control-label">Facilitator for Individual Therapy</label>
            <select asp-for="IdFacilitatorIT" asp-items="Model.ITFacilitators" class="form-control" id="check111"></select>
            <span asp-validation-for="IdFacilitatorIT" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="IdFacilitatorPSR" class="control-label">Facilitator for PSR Therapy</label>
            <select asp-for="IdFacilitatorPSR" asp-items="Model.ITFacilitators" class="form-control" id="check112"></select>
            <span asp-validation-for="IdFacilitatorPSR" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="IdFacilitatorGroup" class="control-label">Facilitator for Group Therapy</label>
            <select asp-for="IdFacilitatorGroup" asp-items="Model.ITFacilitators" class="form-control" id="check113"></select>
            <span asp-validation-for="IdFacilitatorGroup" class="text-danger"></span>
        </div>
    </div>
}
else
{
    <div class="col-md-push-12">
        <div class="form-group col-md-3">
            <label asp-for="IdService" class="control-label"></label>
            <select asp-for="IdService" asp-items="Model.Services" class="form-control" id="check110"></select>
            <span asp-validation-for="IdService" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="IdFacilitatorIT" class="control-label">Facilitator for Individual Therapy</label>
            <select asp-for="IdFacilitatorIT" asp-items="Model.ITFacilitators" class="form-control" id="check111"></select>
            <span asp-validation-for="IdFacilitatorIT" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="FacilitatorPSR" class="control-label">Facilitator for PSR Therapy</label>
            <input asp-for="FacilitatorPSR" class="form-control" disabled />
            <span asp-validation-for="FacilitatorPSR" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="FacilitatorGroup" class="control-label">Facilitator for Group Therapy</label>
            <input asp-for="FacilitatorGroup" class="form-control" disabled />
            <span asp-validation-for="FacilitatorGroup" class="text-danger"></span>
        </div>
    </div>

}
<script>
    check1.addEventListener('change', (e) => {
        if (check1.checked == true) {
            document.getElementById('check110').disabled = true;
            document.getElementById('check111').disabled = true;
            document.getElementById('check112').disabled = true;
            document.getElementById('check113').disabled = true;
        } else {
            document.getElementById('check110').disabled = false;
            document.getElementById('check111').disabled = false;
            document.getElementById('check112').disabled = false;
            document.getElementById('check113').disabled = false;
        }
    })
</script>

