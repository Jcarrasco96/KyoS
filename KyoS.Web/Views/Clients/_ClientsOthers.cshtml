        <span asp-validation-for="IdReferred" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="IdEmergencyContact" class="control-label"></label>
        <select asp-for="IdEmergencyContact" asp-items="Model.EmergencyContacts" class="form-control"></select>
        <span asp-validation-for="IdEmergencyContact" class="text-danger"></span>
    </div>    
</div>
