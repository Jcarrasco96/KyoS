@model KyoS.Web.Models.SafetyPlanViewModel
@{
    ViewData["Title"] = "Edit Safety Plan";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @if (ViewData["origin"].ToString() == "0")
                {
                    @Html.ActionLink("Safety Plans in Edition", "EditionSafetyPlan", "SafetyPlan")
                }
                @if (ViewData["origin"].ToString() == "1")
                {
                    @Html.ActionLink("All Safety Plans", "Index", "SafetyPlan")
                }                
            </li>
            <li class="active">Edit Safety Plan</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Edit Safety Plan</h4>
    <hr />
    <div class="row">
        <form asp-action="Edit" asp-route-id="@Model.Id" asp-route-origin="@ViewData["origin"]" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdClient" />
            <input type="hidden" asp-for="Client_FK" />
            <input type="hidden" asp-for="IdFacilitator" />
            <input type="hidden" asp-for="CreatedBy" />
            <input type="hidden" asp-for="CreatedOn" />
           
            <partial name="_SafetyPlan" />
            <div class="form-group col-md-12">
                <input type="submit" value="Save" class="btn btn-primary" />
                @if (ViewData["origin"].ToString() == "0")
                {
                    <a asp-action="EditionSafetyPlan" asp-controller="SafetyPlan" class="btn btn-success">Back</a>
                }
                @if (ViewData["origin"].ToString() == "1")
                {
                    <a asp-action="Index" asp-controller="SafetyPlan" class="btn btn-success">Back</a>
                }
            </div>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">

    </script>
}
