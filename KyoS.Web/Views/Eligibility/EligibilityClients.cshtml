@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    ViewData["Title"] = "Eligibility";
}
<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">Eligibility</li>
    </ul><!--.breadcrumb-->
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Client without Eligibility (@ViewData["mounth"].ToString())</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                Name
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Health Insurance
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Admission Date
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                MH Therapy
                            </th>
                            <th class="col-md-2" align="right">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td align="center">
                                    @if (item.Clients_HealthInsurances.Where(n => n.Active == true).Count() > 0)
                                    {
                                        @item.Clients_HealthInsurances.FirstOrDefault(n => n.Active == true).HealthInsurance.Name
                                    }
                                    else
                                    {

                                    }
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.AdmisionDate)
                                </td>
                                <td align="center">
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Service)
                                </td>
                                <td align="right">
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open && User.IsInRole("Manager"))
                                    {
                                        <a onclick="showInPopup('@Url.Action("Create","Eligibility",new {idClient = item.Id },Context.Request.Scheme)','Add Eligibility')" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i></a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-primary disabled" title="New Fars Form"><i class="glyphicon glyphicon-plus"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        @*</div>*@  
    </div>
</div>

<partial name="_ModalPopup" />
<partial name="_DeleteDialog" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
         $(document).ready(function () {
              $('#MyTable').DataTable({
                  "order": [[0, "asc"]],
                   "pageLength": 100
              });

             // Delete item
             var item_to_delete;
             $('.deleteItem').click((e) => {
                 item_to_delete = e.currentTarget.dataset.dataset.id;
             });

             $("#btnYesDelete").click(function () {
             var url = "@Url.Action("Delete", "Eligibility")";
                 window.location.href = url + '/' + item_to_delete;
             });
         });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
    </script>
}



