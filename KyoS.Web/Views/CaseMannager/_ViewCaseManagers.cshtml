@model IEnumerable<KyoS.Web.Data.Entities.CaseMannagerEntity>

@if (Model != null)
{
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Case Managers</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <thead>
                    <tr>
                        <th class="col-md-3">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="col-md-2" style="text-align:center;">
                            @Html.DisplayNameFor(model => model.ProviderNumber)
                        </th>
                        <th class="col-md-1" style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Credentials)
                        </th>
                        <th class="col-md-1" style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Phone)
                        </th>
                        <th class="col-md-2" style="text-align:center;">
                            TCM Supervisor
                        </th>
                        <th class="col-md-1" style="text-align:center;">
                            Status
                        </th>
                        <th class="col-md-2">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                        {
                            <tr style="color: darkgrey;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ProviderNumber)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Credentials)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td align="center">
                                    @if (item.TCMSupervisor != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.TCMSupervisor.Name)
                                    }
                                </td>
                                <td align="center">
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                    <a onclick="showInPopup('@Url.Action("EditModal","CaseMannager",new {id = @item.Id},Context.Request.Scheme)','Edit CaseManager')" class="btn btn-warning" title="Edit CaseManager"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a asp-action="CasesForCaseManager" asp-route-idCaseManager="@item.Id" class="btn btn-info"><i class="glyphicon glyphicon-list"></i></a>
                                    <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger deleteItem" title="Delete CaseManager"><i class="glyphicon glyphicon-trash"></i></button>
                                    @*<button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>*@
                                </td>
                            </tr>
                        }
                        @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ProviderNumber)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Credentials)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td align="center">
                                    @if (item.TCMSupervisor != null)
                                    {
                                        @Html.DisplayFor(modelItem => item.TCMSupervisor.Name)
                                    }
                                </td>
                                <td align="center">
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                    {
                                        <span class="label label-success">
                                            Open
                                        </span>
                                    }
                                    @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                    {
                                        <span class="label label-default">
                                            Close
                                        </span>
                                    }
                                </td>
                                <td align="right">
                                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                    <a onclick="showInPopup('@Url.Action("EditModal","CaseMannager",new {id = @item.Id},Context.Request.Scheme)','Edit CaseManager')" class="btn btn-warning" title="Edit CaseManager"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a asp-action="CasesForCaseManager" asp-route-idCaseManager="@item.Id" class="btn btn-info" title="Cases of case manager"><i class="glyphicon glyphicon-list"></i></a>
                                    @*<button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog" title="Delete"><i class="glyphicon glyphicon-trash"></i></button>*@
                                    <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger deleteItem" title="Delete CaseManager"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}



