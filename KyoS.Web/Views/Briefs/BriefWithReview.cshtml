@model IEnumerable<KyoS.Web.Data.Entities.BriefEntity>
@{
    ViewData["Title"] = "BRIEF with review";
}

<link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />

<div class="breadcrumbs" id="breadcrumbs">
    <ul class="breadcrumb">
        <li>
            <i class="icon-home"></i>
            @Html.ActionLink("Dashboard", "Index", "Desktop")
        </li>
        <li class="active">BRIEF with review</li>
    </ul><!--.breadcrumb-->
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">BRIEF with review</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-1"></th>
                            <th class="col-md-3">Name</th>
                            <th class="col-md-2">Admission for</th>
                            <th class="col-md-2" style="text-align:center;">Date</th>
                            <th class="col-md-1" style="text-align:center;">Review</th>
                            <th class="col-md-2" style="text-align:center;">Status</th>
                            <th class="col-md-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var brief in Model)
                        {
                            <tr>
                                <td align="center">
                                    @if (brief.Messages.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    <div style="display:none">
                                        <table class="table table-striped">
                                            <tr>
                                                <th class="col-md-2"></th>
                                                <th class="col-md-3">Title</th>
                                                <th class="col-md-7" style="text-align:center;">Text</th>
                                                @*<th class="col-md-1"></th>*@
                                                <th></th>
                                            </tr>
                                            @foreach (var message in brief.Messages.OrderBy(m => m.DateCreated))
                                            {

                                                @if (message.Status.ToString() == "NotRead")
                                                {
                                                    <tr style="color:mediumblue;">
                                                        <td>
                                                            <i class="glyphicon glyphicon-thumbs-down"></i> Not processed
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => message.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => message.Text)
                                                        </td>
                                                    </tr>
                                                }
                                                @if (message.Status.ToString() == "Read")
                                                {
                                                    <tr>
                                                        <td>
                                                            <i class="glyphicon glyphicon-thumbs-up"></i> Processed
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => message.Title)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => message.Text)
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td>
                                    @if (brief.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (brief.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => brief.Client.Name)
                                    |
                                    @Html.DisplayFor(modelItem => brief.Client.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => brief.DocumentsAssistant.Name)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => brief.DateBio)
                                </td>
                                <td align="center">
                                    @if (brief.Messages.Count() == 0)
                                    {
                                        <span>
                                            -
                                        </span>
                                    }
                                    else
                                    {
                                        bool read = false;
                                        @foreach (var message in brief.Messages.OrderBy(m => m.DateCreated))
                                        {
                                            @if (message.Status.ToString() == "NotRead")
                                            {
                                                read = false;
                                                break;
                                            }
                                            @if (message.Status.ToString() == "Read")
                                            {
                                                read = true;
                                            }
                                        }

                                        if (read)
                                        {
                                            <i class="glyphicon glyphicon-thumbs-up"></i>
                                        }
                                        else
                                        {
                                            <i class="glyphicon glyphicon-thumbs-down"></i>
                                        }
                                    }
                                </td>
                                <td align="center">
                                    <span class="label label-info">
                                        Pending
                                    </span>
                                </td>
                                <td align="right">
                                    @if (User.IsInRole("Documents_Assistant"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@brief.Client.Id" asp-route-origi="2" class="btn btn-warning" title="Edit BIO"><i class="glyphicon glyphicon-pencil"></i></a>
                                    }
                                    @if (User.IsInRole("Supervisor"))
                                    {
                                        <a asp-action="EditReadOnly" asp-route-id="@brief.Id" asp-route-origi="1" class="btn btn-warning" title="Approve BIO"><i class="glyphicon glyphicon-ok"></i></a>
                                    }
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/datetime-moment.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $.fn.dataTable.moment('MM/DD/YYYY');

            $('#MyTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 100
            });
        });
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });
    </script>
}





