@model KyoS.Web.Models.CiteViewModel
@{
    Layout = null;
}

<div class="row">

    @if (ViewBag.Creado == "E")
    {
        <div class="alert alert-block alert-danger">
            <button type="button" class="close" data-dismiss="alert">
                <i class="icon-remove"></i>
            </button>
            <i class="icon-ok red"></i>
            <strong class="red">
                Error. Appointment already exist
            </strong>
        </div>
    }

    <form asp-action="CreateModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxCite(this);">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdClinic" />
        <input type="hidden" asp-for="Client.Name" />
        <input type="hidden" asp-for="Client.DateOfBirth" />

        <div class="container-fluid">
            <div class="col-md-6 form-group">
                <label asp-for="IdFacilitator" class="control-label"></label>&nbsp;*
                <select asp-for="IdFacilitator" asp-items="Model.FacilitatorsList" class="form-control" id="lbFacilitator"></select>
                <span asp-validation-for="IdFacilitator" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Date" class="control-label"></label>&nbsp;*
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="col-md-3 form-group">
                <label asp-for="IdSubSchedule" class="control-label"></label>&nbsp;*
                <select asp-for="IdSubSchedule" asp-items="Model.SubSchedulesList" class="form-control"></select>
                <span asp-validation-for="IdSubSchedule" class="text-danger"></span>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-6 form-group">
                <label asp-for="IdClient" class="control-label"></label>&nbsp;*
                <select asp-for="IdClient" asp-items="Model.ClientsList" class="form-control" id="lbClient"></select>
                <span asp-validation-for="IdClient" class="text-danger"></span>
            </div>
            <div class="col-md-3 form-group">
                <label asp-for="IdStatus" class="control-label"></label>&nbsp;*
                <select asp-for="IdStatus" asp-items="Model.StatusList" class="form-control"></select>
                <span asp-validation-for="IdStatus" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Copay" class="control-label"></label>
                <input asp-for="Copay" class="form-control" />
                <span asp-validation-for="Copay" class="text-danger"></span>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-3 form-group">
                <label asp-for="Client.DateOfBirth" class="control-label"></label>
                <input asp-for="Client.DateOfBirth" class="form-control" disabled />
                <span asp-validation-for="Client.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="col-md-3 form-group">
                <label asp-for="Client.Telephone" class="control-label"></label>
                <input asp-for="Client.Telephone" class="form-control" disabled />
                <span asp-validation-for="Client.Telephone" class="text-danger"></span>
            </div>
            <div class="col-md-6 form-group">
                <label asp-for="Client.FullAddress" class="control-label"></label>
                <input asp-for="Client.FullAddress" class="form-control" disabled />
                <span asp-validation-for="Client.FullAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="container-fluid">
            <div class="form-group col-md-6">
                <label asp-for="EventNote" class="control-label"></label>
                <textarea asp-for="EventNote" class="form-control" rows="2"></textarea>
                <span asp-validation-for="EventNote" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PatientNote" class="control-label"></label>
                <textarea asp-for="PatientNote" class="form-control" rows="2"></textarea>
                <span asp-validation-for="PatientNote" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div form-group">
                <hr />
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-offset-10 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>

</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/jquery.dataTables.min.js"></script>
    }


