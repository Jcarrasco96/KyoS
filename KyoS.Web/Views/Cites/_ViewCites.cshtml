@model IEnumerable<KyoS.Web.Data.Entities.CiteEntity>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Appointments</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                Facilitator
                            </th>
                            <th class="col-md-3">
                                Client
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Date
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Start Time
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                End Time
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Status
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Copay
                            </th>
                            <th class="col-md-1">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Facilitator.Name)
                                </td>
                                <td>
                                    @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Female)
                                    {
                                        <i class="glyphicon glyphicon-user btn-danger"></i>
                                    }
                                    @if (item.Client.Gender == KyoS.Common.Enums.GenderType.Male)
                                    {
                                        <i class="glyphicon glyphicon-user btn-primary"></i>
                                    }
                                    &nbsp;
                                    @Html.DisplayFor(modelItem => item.Client.Name)
                                    |
                                    @Html.DisplayFor(modelItem => item.Client.Code)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DateCite)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.SubSchedule.InitialTime)
                                </td>
                                 <td align="center"> 
                                    @Html.DisplayFor(modelItem => item.SubSchedule.EndTime)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Copay)
                                </td>
                                <td align="right">
                                    @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                    <a onclick="showInPopupLg('@Url.Action("EditModal","Cites",new {id = @item.Id},Context.Request.Scheme)','Edit Appointment (Therapy Private)')" class="btn btn-warning" title="Edit Appointment"><i class="glyphicon glyphicon-pencil"></i></a>
                                    @*<button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>*@
                                    <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger deleteItem" title="Delete Facilitator"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}



