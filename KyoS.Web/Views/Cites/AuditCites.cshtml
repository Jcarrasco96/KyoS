@model IEnumerable<KyoS.Common.Helpers.AuditCites>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AuditCites">
            <div class="col-md-12">
                @if (Model != null)
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Audit (Appointments not completed)</h3>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-hover table-responsive table-striped" id="MyTableDiag">
                                        <thead>
                                            <tr>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Date
                                                </th>
                                                <th class="col-md-4" >
                                                    Client Name
                                                </th>
                                                <th class="col-md-3" style="text-align:center;">
                                                    Description
                                                </th>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Status
                                                </th>                                                
                                                <th class="col-md-1" style="text-align:center;">

                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.OrderBy(n => n.Date))
                                            {
                                                <tr>
                                                    <td align="center">
                                                        @item.Date.ToShortDateString()
                                                    </td>
                                                    <td >
                                                        @Html.DisplayFor(modelItem => item.ClientName)
                                                    </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => item.Description)
                                                    </td>
                                                    <td align="center">
                                                        @item.Status
                                                    </td>
                                                    <td align="center">
                                                        @if (item.Active == 0)
                                                        {
                                                            <span class="label label-danger">
                                                                &nbsp;X&nbsp;
                                                            </span>
                                                        }
                                                        @if (item.Active == 1)
                                                        {
                                                            <span class="label label-warning">
                                                                &nbsp;X&nbsp;
                                                            </span>
                                                        }
                                                        @if (item.Active == 2)
                                                        {
                                                            <span class="label label-success">
                                                                OK
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-offset-10">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>



