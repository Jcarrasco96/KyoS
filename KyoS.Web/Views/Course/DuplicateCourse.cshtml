@model KyoS.Web.Models.CourseViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="DuplicateCourse" onsubmit="return jQueryAjaxCourseList(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="CreatedBy" />
            <div class="container-fluid">
                <div class="form-group col-md-12">
                    <label asp-for="Name" class="control-label"></label>&nbsp;*
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="container-fluid">
                <div class="form-group col-md-6">
                    <label asp-for="IdRole" class="control-label"></label>&nbsp;*
                    <select asp-for="IdRole" asp-items="Model.Roles" class="form-control"></select>
                    <span asp-validation-for="IdRole" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="ValidPeriod" class="control-label">Period (years)</label>&nbsp;*
                    <input asp-for="ValidPeriod" class="form-control">
                    <span asp-validation-for="ValidPeriod" class="text-danger"></span>
                </div>
            </div>
            <div class="container-fluid">
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-6">
                    <input type="checkbox" asp-for="Active" checked /> &nbsp;Active
                </div>
                <div class="col-md-6">
                    &nbsp;
                </div>
            </div>
            <div class="container-fluid">
                <div class="form-group col-md-12">
                    <hr />
                </div>
            </div>
            <div class="container-fluid">
                <div class="col-md-offset-8">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>


