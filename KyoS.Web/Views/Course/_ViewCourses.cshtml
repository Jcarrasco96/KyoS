@model IEnumerable<KyoS.Web.Data.Entities.CourseEntity>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Courses</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="col-md-4">
                                Description
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                @Html.DisplayNameFor(model => model.Role)
                            </th>
                            <th class="col-md-1" style="text-align:center;">
                                Valid Period
                            </th>
                            <th class="col-md-2">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td align="center">
                                    @item.Role
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ValidPeriod)
                                </td>
                                <td align="right">
                                    <a onclick="showInPopup('@Url.Action("Edit", "Course", new {id = item.Id}, Context.Request.Scheme)','Course')" class="btn btn-warning" title="Edit Course"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger deleteItem " title="Delete course"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

