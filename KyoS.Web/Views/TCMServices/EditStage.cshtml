@model KyoS.Web.Models.TCMStageViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditStage" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTCMService(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Id_TCMService" />
            <div class="">
                <div class="form-group col-md-3">
                    <b>Service code:</b>
                    <i>@Html.DisplayFor(modelItem => Model.tCMservice.Code)</i>
                </div>
                <div class="form-group col-md-9">
                    <b>Service name:</b>
                    <i>@Html.DisplayFor(modelItem => Model.tCMservice.Name)</i>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>&nbsp;*
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="">
                <div class="form-group col-md-6">
                    <label asp-for="ID_Etapa" class="control-label"></label>&nbsp;*
                    <input asp-for="ID_Etapa" class="form-control" readonly />
                    <span asp-validation-for="ID_Etapa" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Units" class="control-label"></label>&nbsp;*
                    <input asp-for="Units" class="form-control" />
                    <span asp-validation-for="Units" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="IdClinic" class="control-label"></label>
                    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                    <span asp-validation-for="IdClinic" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" asp-all-route-id="model.tCMservice.Id" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>


