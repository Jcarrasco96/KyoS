@model KyoS.Web.Models.TCMServiceActivityViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateActivity" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostTCMService(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="IdService" />
            <input type="hidden" asp-for="CreatedOn" />
            <input type="hidden" asp-for="CreatedBy" />
            <div>
                <div class="form-group col-md-3">
                    <label class="control-label">Service Code</label>
                    <input class="form-control" asp-for="@Model.TcmService.Code" readonly />

                </div>
                <div class="form-group col-md-9">
                    <label class="control-label">Service Name</label>
                    <input class="form-control" asp-for="@Model.TcmService.Name" readonly />
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Activity Name</label>&nbsp;*
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="form-group col-md-3">
                    <label asp-for="Unit" class="control-label"></label>&nbsp;*
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="form-group col-md-9">
                    <label asp-for="IdClinic" class="control-label"></label>&nbsp;*
                    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                    <span asp-validation-for="IdClinic" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Activity Description</label>
                    <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-12">
                <div class="col-md-6">
                    <input type="checkbox" asp-for="Status" checked /> &nbsp;Active Activity
                </div>
                <div class="col-md-6">
                    &nbsp;
                </div>
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>


