@model IEnumerable<KyoS.Web.Data.Entities.TCMServiceEntity>

@if (Model != null)
{
    var cant_unit = 0;
    <div class="col-md-12">
        @if (ViewBag.Delete == "N")
        {
            <div class="alert alert-block alert-danger">
                <button type="button" class="close" data-dismiss="alert">
                    <i class="icon-remove"></i>
                </button>
                <strong class="red">
                    Error. It is not posible delete the TCM service
                </strong>
            </div>
        }
       
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">TCM Services</h3>
                </div>
                <div class="panel-body" id="view-tcmservices">
                    <table class="table table-hover table-responsive table-striped" id="MyTable">
                        <thead>
                            <tr>
                                <th class="col-md-1">

                                </th>
                                <th class="col-md-2">
                                    Service Code
                                </th>
                                <th class="col-md-2">
                                    Service Name
                                </th>
                                <th class="col-md-2">
                                    Description
                                </th>
                                <th class="col-md-2">
                                    Stages
                                </th>
                                <th class="col-md-1">
                                    Units
                                </th>
                                <th class="col-md-2" align="center">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td align="center">
                                    @if (item.Stages.Count() != 0)
                                    {
                                        <a class="icon-plus-sign-alt"></a>
                                    }
                                    else
                                    {

                                    }
                                    <div style="display:none">
                                        <table class="table table-striped table-bordered">
                                            <tr>
                                                <th class="col-md-1">Stage</th>
                                                <th class="col-md-3">Stage name</th>
                                                <th class="col-md-4">Description</th>
                                                <th class="col-md-2">Units</th>
                                                <th class="col-md-1"></th>
                                            </tr>
                                            @foreach (var product in item.Stages)
                                            {
                                                 <tr>
                                                    <td>@Html.DisplayFor(modelItem => product.ID_Etapa)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.Description)</td>
                                                    <td>@Html.DisplayFor(modelItem => product.Units)</td>
                                                    <td>
                                                        <a onclick="showInPopup('@Url.Action("Edit", "TCMStages", new { id = product.Id }, Context.Request.Scheme)','Edit TCM Stage')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                                    </td>
                                                 </tr>
                                                cant_unit = cant_unit + product.Units;
                                            }
                                        </table>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @item.Stages.Count()
                                </td>
                                <td>
                                    @cant_unit
                                </td>
                                <td align="right">
                                    <a onclick="showInPopup('@Url.Action("Edit", "TCMServices", new { id = item.Id }, Context.Request.Scheme)','Edit TCM Service')" class="btn btn-warning" title="Edit"><i class="glyphicon glyphicon-pencil"></i></a>
                                    <a onclick="showInPopup('@Url.Action("Create", "TCMStages", new { id = item.Id }, Context.Request.Scheme)','Create TCM Stage')" class="btn btn-info" title="Create"><i class="glyphicon glyphicon-align-justify"></i></a>
                                    <button data-id="@item.Id" class="btn btn-danger deleteItem" data-toggle="modal" data-target="#deleteDialog"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                            </tr>
                                cant_unit = 0;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
}


@section scripts {
    <script type="text/javascript">
        $(function () {

            //Assign Click event to Plus Image.
            $("body").on("click", "a[class*='icon-plus-sign-alt']", function () {
                $(this).closest("tr").after("<tr><td></td><td colspan = '999'>" + $(this).next().html() + "</td></tr>");
                $(this).attr("class", "icon-minus-sign-alt");
            });
            //Assign Click event to Minus Image.
            $("body").on("click", "a[class*='icon-minus-sign-alt']", function () {
                $(this).attr("class", "icon-plus-sign-alt");
                $(this).closest("tr").next().remove();
            });
        });

    </script>
}

