@model KyoS.Web.Models.DocumentsAssistantViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit documents assistant</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SignaturePath" />
            <partial name="_DocumentsAssistant" />
            <div class="col-md-12">
                @if (!string.IsNullOrEmpty(Model.SignaturePath))
                {
                    <img src="@Url.Content(Model.SignaturePath)" alt="Image" style="width:200px;height:100px;max-width: 100%; height: auto;" />
                }
            </div>
            <div class="col-md-12">
                &nbsp;
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


