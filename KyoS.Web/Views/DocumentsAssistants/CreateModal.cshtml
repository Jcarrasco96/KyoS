@model KyoS.Web.Models.DocumentsAssistantViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostAssistant(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="col-md-9 form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-3 form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-12 form-group">
                    <label asp-for="IdClinic" class="control-label"></label>
                    <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                    <span asp-validation-for="IdClinic" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="RaterEducation" class="control-label">Rater Education/Specialty</label>
                    <input asp-for="RaterEducation" class="form-control" />
                    <span asp-validation-for="RaterEducation" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="RaterFMHCertification" class="control-label">Rater FMHI Certification</label>
                    <input asp-for="RaterFMHCertification" class="form-control" />
                    <span asp-validation-for="RaterFMHCertification" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-6 form-group">
                    <label asp-for="IdUser" class="control-label"></label>
                    <select asp-for="IdUser" asp-items="Model.UserList" class="form-control"></select>
                    <span asp-validation-for="IdUser" class="text-danger"></span>
                </div>
                <div class="col-md-6 form-group">
                    <label asp-for="SignatureFile" class="control-label"></label>
                    <input asp-for="SignatureFile" type="file" class="form-control" />
                    <span asp-validation-for="SignatureFile" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-offset-9 form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}


