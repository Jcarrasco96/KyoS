@model IEnumerable<KyoS.Web.Data.Entities.DiagnosticEntity>

@if (Model != null)
{
<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Diagnostics</h3>
        </div>
        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <thead>
                    <tr>
                        <th class="col-md-2" style="text-align:center;">
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th class="col-md-8" style="text-align:left;">
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th class="col-md-2">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td align="center">
                                @Html.DisplayFor(modelItem => item.Code)
                            </td>
                            <td align="left">
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td align="right">
                                @*<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit diagnostic"><i class="glyphicon glyphicon-pencil"></i></a>*@
                                <a onclick="showInPopup('@Url.Action("EditModal","Diagnostics",new {id = @item.Id},Context.Request.Scheme)','Edit Diagnostics')" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a>
                                <button onclick="ConfirmDelete(@item.Id)" class="btn btn-danger deleteItem" title="Delete diagnostic"><i class="glyphicon glyphicon-trash"></i></button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}



