@model IEnumerable<KyoS.Web.Data.Entities.ClientEntity>
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="AuditGoalsObjective">
            <div class="col-md-12">
                @if (Model.Count() > 0)
                {
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">View Diagnostics by clients</h3>
                                </div>
                                <div class="panel-body">
                                    <table class="table table-hover table-responsive table-striped" id="MyTableDiag">
                                        <thead>
                                            <tr>
                                                <th class="col-md-1">
                                                    
                                                </th>
                                                <th class="col-md-6">
                                                    Name
                                                </th>
                                                <th class="col-md-2" style="text-align:center;">
                                                    Admission
                                                </th>
                                                <th class="col-md-1" style="text-align:center;">
                                                    Status
                                                </th>
                                                <th class="col-md-1" style="text-align:center;">
                                                    Service
                                                </th>
                                                <th class="col-md-1" style="text-align:center;">
                                                    Dx
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td align="center">
                                                        @if (item.Clients_Diagnostics.Count() != 0)
                                                        {
                                                            <a class="icon-plus-sign-alt"></a>
                                                        }
                                                        else
                                                        {

                                                        }
                                                        <div style="display:none">
                                                            <table class="table table-striped table-bordered">
                                                                <tr>
                                                                    <th class="col-md-2" style="text-align:center;">Code</th>
                                                                    <th class="col-md-6" style="text-align:left;">Description</th>
                                                                    <th class="col-md-1" style="text-align:center;">Active</th>
                                                                    <th class="col-md-1" style="text-align:center;">Principal</th>
                                                                </tr>
                                                                @foreach (var dx in item.Clients_Diagnostics)
                                                                {
                                                                    <tr>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Diagnostic.Code)
                                                                        </td>
                                                                        <td align="left">
                                                                            @Html.DisplayFor(modelItem => dx.Diagnostic.Description)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Active)
                                                                        </td>
                                                                        <td align="center">
                                                                            @Html.DisplayFor(modelItem => dx.Principal)
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </table>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>
                                                    <td align="center">
                                                        @Html.DisplayFor(modelItem => item.AdmisionDate)
                                                    </td>
                                                    <td align="center">
                                                        @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                                        {
                                                            <span class="label label-success">
                                                                Open
                                                            </span>
                                                        }
                                                        @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                                        {
                                                            <span class="label label-default">
                                                                Close
                                                            </span>
                                                        }
                                                    </td>
                                                    <td align="center">
                                                        @if (item.OnlyTCM == true)
                                                        {
                                                            <span class="label label-info">
                                                                TCM
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="label label-success">
                                                                @Html.DisplayFor(modelItem => item.Service)
                                                            </span>
                                                        }
                                                        
                                                    </td>
                                                    <td align="center">
                                                        @item.Clients_Diagnostics.Count()
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-offset-10">
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
</div>


