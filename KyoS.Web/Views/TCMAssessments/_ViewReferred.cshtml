@model IEnumerable<KyoS.Web.Data.Entities.Client_Referred>

@if (Model != null)
{
    <div class="col-md-12">
        <div class="form-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Referreds</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-striped" id="MyTableDiag">
                        <thead>
                            <tr>
                                <th class="col-md-2">
                                    Name
                                </th>
                                <th class="col-md-2">
                                    Agency
                                </th>
                                <th class="col-md-3">
                                    Address
                                </th>
                                <th class="col-md-2">
                                    Telephone
                                </th>
                                <th class="col-md-2">
                                    Email
                                </th>

                                <th class="col-md-1" style="text-align:center;">

                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Where(n => n.Service == KyoS.Common.Enums.ServiceAgency.TCM))
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referred.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referred.Agency)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referred.Address),
                                        @Html.DisplayFor(modelItem => item.Referred.City),
                                        @Html.DisplayFor(modelItem => item.Referred.State),
                                        @Html.DisplayFor(modelItem => item.Referred.ZidCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referred.Telephone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Referred.Email)
                                    </td>
                                    <td align="right">
                                         <button type="button" onclick="DeleteReferredTemp(@item.Id)" class="btn btn-danger deleteItem" title="Delete referred"><i class="glyphicon glyphicon-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
