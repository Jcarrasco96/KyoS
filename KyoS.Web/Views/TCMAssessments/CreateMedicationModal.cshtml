@model KyoS.Web.Models.TCMAssessmentMedicationViewModel
@{
    Layout = null;
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateMedicationModal" onsubmit="return jQueryAjaxPostTCMAssessmentMedication(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IdTCMAssessment" />
            <input type="hidden" asp-for="TcmAssessment.TcmClient.CaseNumber" />
            <input type="hidden" asp-for="TcmAssessment.TcmClient.Client.Name" />
            <div class="container-fluid">
                <h4 style="font-weight:bold;"> <span class="label label-info"> Client - @Model.TcmAssessment.TcmClient.Client.Name </span></h4>
            </div>
            <div>
                <div class=" col-md-6 form-group">
                    <label asp-for="Name" class="control-label">Medication</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class=" col-md-6 form-group">
                    <label asp-for="Prescriber" class="control-label">Prescribing Physician</label>
                    <input asp-for="Prescriber" class="form-control" />
                    <span asp-validation-for="Prescriber" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class=" col-md-3 form-group">
                    <label asp-for="Dosage" class="control-label">Doses</label>
                    <input asp-for="Dosage" class="form-control" />
                    <span asp-validation-for="Dosage" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class=" col-md-3 form-group">
                    <label asp-for="Frequency" class="control-label">Frequency</label>
                    <input asp-for="Frequency" class="form-control" />
                    <span asp-validation-for="Frequency" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class=" col-md-6 form-group">
                    <label asp-for="ReasonPurpose" class="control-label">Reason/Purpose</label>
                    <textarea asp-for="ReasonPurpose" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="ReasonPurpose" class="text-danger"></span>
                </div>
            </div>
            <div>
                <div class="col-md-offset-9">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>

