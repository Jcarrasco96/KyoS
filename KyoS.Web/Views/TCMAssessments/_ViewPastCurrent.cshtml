@model IEnumerable<KyoS.Web.Data.Entities.TCMAssessmentPastCurrentServiceEntity>
<div class="col-push-12">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @*<h3 class="panel-title">*@
                <strong>SECTION V: PAST AND CURRENT SERVICES AND EFFECTIVENESS  </strong><br />
                <i>List past and current services provided to client starting with the most recent on top. Identify providers, dates and effectiveness</i>
                @*</h3>*@
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-2">
                                TYPE OF SERVICE
                            </th>
                            <th class="col-md-3" style="text-align:center;">
                                PROVIDER / AGENCY
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                DATE RECEIVED
                            </th>
                            <th class="col-md-3" style="text-align:center;">
                                EFFECTIVENESS
                            </th>
                            <th class="col-md-2">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TypeService)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.ProviderAgency)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DateReceived)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Efectiveness)
                                </td>
                                <td align="right">
                                    @if (User.IsInRole("CaseManager") || User.IsInRole("TCMSupervisor"))
                                    {
                                        <a onclick="showInPopup('@Url.Action("EditPastCurrentModal", "TCMAssessments", new { id = @item.Id }, Context.Request.Scheme)','Edit Behavioral Health')" class="btn btn-warning" title="Edit Behavioral Health"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a onclick="showInPopup('@Url.Action("DeletePastCurrentService", "TCMAssessments",new { id = @item.Id}, Context.Request.Scheme)','Confirmation')" class="btn btn-danger" title="Delete Past and current service"><i class="glyphicon glyphicon-trash"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

