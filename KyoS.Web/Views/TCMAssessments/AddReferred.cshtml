@model KyoS.Web.Models.ReferredTempViewModel
@{
    Layout = null;
}

<div class="row">

    <form asp-action="AddReferred" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostReferred1(this);">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="col-md-12">
            <div class="col-md-8">
                <label asp-for="Id_Referred" class="control-label"></label>
                <select asp-for="Id_Referred" asp-items="Model.Referreds" class="form-control" id="Code_Name"></select>
                <span asp-validation-for="Id_Referred" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="IdServiceAgency" class="control-label">Service</label>
                <select asp-for="IdServiceAgency" asp-items="Model.ServiceAgency" class="form-control" disabled></select>
                <span asp-validation-for="IdServiceAgency" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            &nbsp;
        </div>
        <div class="col-md-12">
            <div class="col-md-2">
                <input type="checkbox" class="form-check-input" id="chkNewEC">
                <label class="control-label">New</label>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-9">
                <label asp-for="Name" class="control-label"></label>
                <textarea asp-for="Name" id="lbName" class="form-control" rows="1" disabled />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Title" class="control-label"></label>
                <textarea asp-for="Title" id="lbTitle" class="form-control" rows="1" disabled />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-6">
                <label asp-for="Agency" class="control-label"></label>
                <textarea asp-for="Agency" id="lbAgency" class="form-control" rows="1" disabled />
                <span asp-validation-for="Agency" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" id="lbAddress" class="form-control" rows="1" disabled />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
                <label asp-for="Telephone" class="control-label"></label>
                <textarea asp-for="Telephone" id="lbPhone" class="form-control" rows="1" disabled />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="col-md-8">
                <label asp-for="Email" class="control-label"></label>
                <textarea asp-for="Email" id="lbEmail" class="form-control" rows="1" disabled />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-12">
                <label asp-for="ReferredNote" class="control-label"></label>
                <textarea asp-for="ReferredNote" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ReferredNote" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            &nbsp;
        </div>
        <div class="">
            <div class="">
                <div class="col-md-offset-9">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </form>
</div>


<script type="text/javascript">
    chkNewEC.addEventListener('change', (e) => {
        if (chkNewEC.checked == true) {
            //$("#cbREC").prop('selectedIndex', 0);
            //$("#cbREC").prop('disabled', true);
            $("#Code_Name").prop('selectedIndex', 0);
            $("#Code_Name").prop('disabled', true);

            $("#lbName").prop('disabled', false);
            $("#lbTitle").prop('disabled', false);
            $("#lbAgency").prop('disabled', false);
            $("#lbAddress").prop('disabled', false);
            $("#lbPhone").prop('disabled', false);
            $("#lbEmail").prop('disabled', false);
            
        }
        else {
            $("#Code_Name").prop('disabled', false);
            /*$("#cbREC").prop('disabled', false);*/

            $("#lbName").val("");
            $("#lbName").prop('disabled', true);
            $("#lbTitle").val("");
            $("#lbTitle").prop('disabled', true);
            $("#lbAgency").val("");
            $("#lbAgency").prop('disabled', true);
            $("#lbAddress").val("");
            $("#lbAddress").prop('disabled', true);
            $("#lbPhone").val("");
            $("#lbPhone").prop('disabled', true);
            $("#lbEmail").val("");
            $("#lbEmail").prop('disabled', true);
        }
    })
    
</script>





