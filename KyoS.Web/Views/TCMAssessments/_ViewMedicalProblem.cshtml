@model IEnumerable<KyoS.Web.Data.Entities.TCMAssessmentMedicalProblemEntity>
<div class="col-push-12">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @*<h3 class="panel-title">*@
                List any medical problems/conditions that client or family currently have or have had in the pas
                @*</h3>*@
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th class="col-md-3">
                                Medical Problem/Condition
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Client
                            </th>
                            <th class="col-md-2" style="text-align:center;">
                                Family
                            </th>
                            <th class="col-md-3" style="text-align:center;">
                                Comments
                            </th>
                            <th class="col-md-2">

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MedicalProblem)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Client)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Family)
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.Comments)
                                </td>
                                <td align="right">
                                    @if (User.IsInRole("CaseManager"))
                                    {
                                        <a onclick="showInPopup('@Url.Action("EditMedicalProblemModal", "TCMAssessments", new { id = @item.Id }, Context.Request.Scheme)','Edit Medical Problem')" class="btn btn-warning" title="Edit Medical Problem"><i class="glyphicon glyphicon-pencil"></i></a>
                                        <a onclick="showInPopup('@Url.Action("DeleteMedicalProblem", "TCMAssessments",new { id = @item.Id}, Context.Request.Scheme)','Confirmation')" class="btn btn-danger" title="Delete Medical Problem"><i class="glyphicon glyphicon-trash"></i></a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

