@model KyoS.Web.Models.FacilitatorViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateModal" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPostFacilitators(this);">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#personal" aria-controls="personal" role="tab" data-toggle="tab">Personal</a></li>
                <li role="presentation"><a href="#agency" aria-controls="agency" role="tab" data-toggle="tab">Agency</a></li>
                <li role="presentation"><a href="#private" aria-controls="private" role="tab" data-toggle="tab">Private</a></li>
                <li role="presentation"><a href="#courses" aria-controls="courses" role="tab" data-toggle="tab">Courses</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="personal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Name" />
                    <partial name="_Personal" />
                    <div class="form-group col-md-12">
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="agency">
                    <partial name="_Agency" />
                </div>
                <div role="tabpanel" class="tab-pane" id="private">
                    <partial name="_Private" />
                </div>
                <div role="tabpanel" class="tab-pane" id="courses">
                    <div id="view-facilitators">
                        @await Html.PartialAsync("_ViewCertificationsByFacilitator", Model.FacilitatorCertifications)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div form-group">
                    <hr />
                </div>
            </div>
            <div>
                <div class="col-md-offset-10 form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <button type="button" class="btn btn-success" data-dismiss="modal">Back</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.dataTables.min.js"></script>
}


