@model IEnumerable<KyoS.Web.Models.TCMClientLastNoteViewModel>

@if (Model != null)
{
    <div class="col-md-12">
         <div class="panel panel-default">
             <div class="panel-heading">
                 <h3 class="panel-title">TCM Cases </h3>
             </div>
             <div class="panel-body">
                 <table class="table table-hover table-responsive table-striped" id="MyTable">
                     <thead>
                         <tr>
                             <th class="col-md-2">
                                 Case Manager
                             </th>
                             <th class="col-md-2">
                                 Client Name
                             </th>
                             <th class="col-md-1" style="text-align: center;">
                                 Case
                             </th>
                             <th class="col-md-1" style="text-align: center;">
                                 Status
                             </th>
                             <th class="col-md-1" style="text-align: center;">
                                 Open
                             </th>
                            <th class="col-md-1" style="text-align: center;">
                                Last Service
                            </th>
                            <th class="col-md-2" style="text-align: center;">
                                Service Name
                            </th>
                            <th class="col-md-1" style="text-align: center;">
                                Days
                            </th>
                            <th class="col-md-1" style="text-align: center;">
                                Closed
                            </th>
                        </tr>
                     </thead>
                     <tbody>
                        @foreach (var item in Model)
                         {
                             <tr>
                                 <td>
                                     @Html.DisplayFor(modelItem => item.CaseManager)
                                 </td>
                                 <td>
                                     @if (item.Gender == KyoS.Common.Enums.GenderType.Female)
                                     {
                                         <i class="glyphicon glyphicon-user btn-danger"></i>
                                     }
                                     @if (item.Gender == KyoS.Common.Enums.GenderType.Male)
                                     {
                                         <i class="glyphicon glyphicon-user btn-primary"></i>
                                     }
                                     &nbsp;
                                     @Html.DisplayFor(modelItem => item.ClientName)
                                 </td>
                                 <td align="center">
                                     @Html.DisplayFor(modelItem => item.TCMCaseNumber)
                                 </td>
                                 <td align="center">
                                     @if (item.Status == KyoS.Common.Enums.StatusType.Open)
                                     {
                                         <span class="label label-success">
                                             Open
                                         </span>
                                     }
                                     @if (item.Status == KyoS.Common.Enums.StatusType.Close)
                                     {
                                         <span class="label label-default">
                                             Close
                                         </span>
                                     }
                                 </td>
                                 <td align="center">
                                     @Html.DisplayFor(modelItem => item.DateOpen)
                                 </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.LastServiceDate)
                                </td>
                                <td>
                                    @item.LastServiceName
                                </td>
                                <td align="center">
                                    @if (item.Days > 20)
                                    {
                                        <span class="label label-danger">
                                            @Html.DisplayFor(modelItem => item.Days)
                                        </span>
                                    }
                                    else
                                    {
                                        @if (item.Days > 15)
                                        {
                                            <span class="label label-warning">
                                                @Html.DisplayFor(modelItem => item.Days)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="label label-success">
                                                @Html.DisplayFor(modelItem => item.Days)
                                            </span>
                                        }
                                    }
                                    
                                </td>
                                <td align="center">
                                    @Html.DisplayFor(modelItem => item.DateClose)
                                </td>
                             </tr>
                         }
                     </tbody>
                 </table>
             </div>
         </div>
     </div>
}

