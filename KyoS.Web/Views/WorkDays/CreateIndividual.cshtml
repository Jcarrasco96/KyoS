@model KyoS.Web.Models.WeekViewModel
@{
    ViewData["Title"] = "Create Individual Workdays";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/datepicker.min.css">
    <link rel="stylesheet" href="~/css/prism.css">
    <link rel="stylesheet" href="~/css/chosen.css">
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Individual Workdays", "IndividualWorkdays", "WorkDays")
            </li>
            <li class="active">Create Individual Workdays</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Create new individual workdays</h4>
    <hr />

    <div class="row">
        <form asp-action="CreateIndividual" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 form-group">
                <label asp-for="IdClinic" class="control-label"></label>&nbsp;*
                <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                <span asp-validation-for="IdClinic" class="text-danger"></span>
            </div>
            <div class="col-md-5 form-group">
                <label class="control-label">Select workdays</label>&nbsp;*<br />
                <input type="text" asp-for="Workdays"
                       class="form-control datepicker-here"
                       data-language='en'
                       data-multiple-dates="7"
                       data-multiple-dates-separator=","
                       style="width:100%;"
                       data-position="right top" />
            </div>
            <div class="col-md-3 form-group">
                &nbsp;
            </div>
            <div class="col-md-9 form-group">
                <label class="control-label">Facilitators</label>&nbsp;*
                @Html.ListBox("facilitators", ViewData["facilitators"] as MultiSelectList, new { @class = "chosen-select", @style = "width:100%;" })
            </div>
            
            <div class="col-md-12 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script src="~/js/datepicker.min.js" type="text/javascript" charset="utf-8"></script>
        <script src="~/js/datepicker.en.js" type="text/javascript" charset="utf-8"></script>
        <script src="~/js/chosen.jquery.js" type="text/javascript"></script>
        <script src="~/js/prism.js" type="text/javascript" charset="utf-8"></script>
        <script src="~/js/init.js" type="text/javascript" charset="utf-8"></script>
    }
</body>
</html>

