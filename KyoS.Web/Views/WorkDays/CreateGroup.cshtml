@model KyoS.Web.Models.WeekViewModel
@{
    ViewData["Title"] = "Create Group Workdays";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="~/css/datepicker.min.css">
</head>
<body>

    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="icon-home"></i>
                @Html.ActionLink("Group Workdays", "GroupWorkdays", "WorkDays")
            </li>
            <li class="active">Create Group Workdays</li>
        </ul><!--.breadcrumb-->
    </div>

    <h4>Create group workdays</h4>
    <hr />

    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Error == "0" || ViewBag.Error == "1")
            {
                <div class="alert alert-block alert-danger">
                    <button type="button" class="close" data-dismiss="alert">
                        <i class="icon-remove"></i>
                    </button>
                    <i class="icon-ok red"></i>
                    <strong class="red">
                        @ViewBag.errorText
                    </strong>
                </div>
            }            
        </div>
        <form asp-action="CreateGroup" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-4 form-group">
                <label asp-for="IdClinic" class="control-label"></label>&nbsp;*
                <select asp-for="IdClinic" asp-items="Model.Clinics" class="form-control"></select>
                <span asp-validation-for="IdClinic" class="text-danger"></span>
            </div>
            <div class="col-md-5 form-group">
                <label class="control-label">Select workdays</label>&nbsp;*<br />
                <input type="text" asp-for="Workdays"
                       class="form-control datepicker-here"
                       data-language='en'
                       data-multiple-dates="4"
                       data-multiple-dates-separator=","
                       style="width:100%;"
                       data-position="right top" />
            </div>
            <div class="col-md-12 form-group">
                <strong>Note: </strong> Corresponding notes of clients related to this therapy will be generated.
            </div>
            <div class="col-md-12 form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="GroupWorkdays" class="btn btn-success">Back</a>
            </div>
        </form>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

        <script src="~/js/datepicker.min.js" type="text/javascript" charset="utf-8"></script>
        <script src="~/js/datepicker.en.js" type="text/javascript" charset="utf-8"></script>
    }
</body>
</html>
